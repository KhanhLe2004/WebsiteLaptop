@{
    ViewData["Title"] = "Lịch sử hoạt động";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3">Lịch sử hoạt động</h6>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <!-- Bộ lọc và tìm kiếm -->
                    <div class="row mb-3 g-2 align-items-end">
                        <div class="col-lg-3 col-md-6">
                            <div class="input-group input-group-outline">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm hoạt động...">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <div class="input-group input-group-outline">
                                <label class="form-label">Từ ngày</label>
                                <input type="date" id="dateFromInput" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <div class="input-group input-group-outline">
                                <label class="form-label">Đến ngày</label>
                                <input type="date" id="dateToInput" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-3 d-flex align-items-end">
                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="clearDateFilters()" title="Xóa bộ lọc ngày" style="height: 40px; min-width: 40px; padding: 0; display: flex; align-items: center; justify-content: center;">
                                <i class="material-icons" style="font-size: 18px;">clear</i>
                            </button>
                        </div>
                    </div>

                    <!-- Bảng lịch sử -->
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Thời gian</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 20%;">Nhân viên</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 65%;">Hoạt động</th>
                                </tr>
                            </thead>
                            <tbody id="historyTableBody">
                                <!-- Dữ liệu sẽ được load bằng AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p class="text-sm mb-0" id="pageInfo">Đang tải...</p>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-end mb-0" id="pagination">
                                    <!-- Phân trang sẽ được tạo bằng JavaScript -->
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_URL = 'http://localhost:5068/api/admin/history';
        let currentPage = 1;
        let pageSize = 10;
        let searchDebounceTimer = null;
        const SEARCH_DEBOUNCE_DELAY = 300;

        $(document).ready(function() {
            loadHistory();

            // Tìm kiếm tự động
            $('#searchInput').on('input', function() {
                triggerAutoSearch();
            });

            // Xử lý label cho Material Dashboard inputs
            window.updateInputLabels = function() {
                $('.input-group-outline input, .input-group-outline select').each(function() {
                    const $input = $(this);
                    const value = $input.val();
                    if (value && value.trim() !== '') {
                        $input.closest('.input-group-outline').addClass('is-filled');
                    } else {
                        $input.closest('.input-group-outline').removeClass('is-filled');
                    }
                });
            };

            $(document).on('input change', '.input-group-outline input, .input-group-outline select', function() {
                const $input = $(this);
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $input.closest('.input-group-outline').addClass('is-filled');
                } else {
                    $input.closest('.input-group-outline').removeClass('is-filled');
                }
            });

            $(document).on('focus', '.input-group-outline input, .input-group-outline select', function() {
                $(this).closest('.input-group-outline').addClass('is-focused');
            });

            $(document).on('blur', '.input-group-outline input, .input-group-outline select', function() {
                const $input = $(this);
                const $group = $input.closest('.input-group-outline');
                $group.removeClass('is-focused');
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $group.addClass('is-filled');
                } else {
                    $group.removeClass('is-filled');
                }
            });
        });

        function triggerAutoSearch() {
            currentPage = 1;
            if (searchDebounceTimer) {
                clearTimeout(searchDebounceTimer);
            }
            searchDebounceTimer = setTimeout(() => {
                loadHistory();
            }, SEARCH_DEBOUNCE_DELAY);
        }

        // Hàm xóa bộ lọc ngày
        function clearDateFilters() {
            $('#dateFromInput').val('').removeAttr('value').removeAttr('data-has-input');
            $('#dateToInput').val('').removeAttr('value').removeAttr('data-has-input');
            updateInputLabels();
            triggerAutoSearch();
        }

        // Xử lý input date để hiển thị dd/mm/yyyy khi có giá trị
        $(document).on('input change', 'input[type="date"]', function() {
            const $input = $(this);
            const value = $input.val();
            if (value && value.trim() !== '') {
                $input.attr('value', value).attr('data-has-input', 'true');
            } else {
                $input.removeAttr('value').removeAttr('data-has-input');
            }
        });

        // Xử lý khi focus vào input date
        $(document).on('focus', 'input[type="date"]', function() {
            const $input = $(this);
            const value = $input.val();
            if (value && value.trim() !== '') {
                $input.attr('data-has-input', 'true');
            }
        });

        // Xử lý khi blur khỏi input date
        $(document).on('blur', 'input[type="date"]', function() {
            const $input = $(this);
            const value = $input.val();
            if (!value || value.trim() === '') {
                $input.removeAttr('data-has-input');
            } else {
                $input.attr('value', value).attr('data-has-input', 'true');
            }
        });

        // Event listeners cho date filters
        $('#dateFromInput, #dateToInput').on('change', function() {
            triggerAutoSearch();
        });

        // Load danh sách lịch sử
        function loadHistory(page = currentPage) {
            currentPage = page;
            const searchTerm = $('#searchInput').val().trim();
            const dateFrom = $('#dateFromInput').val();
            const dateTo = $('#dateToInput').val();

            const dataParams = {
                pageNumber: currentPage,
                pageSize: pageSize,
                searchTerm: searchTerm || null
            };

            if (dateFrom) {
                dataParams.dateFrom = dateFrom;
            }
            if (dateTo) {
                dataParams.dateTo = dateTo;
            }

            $.ajax({
                url: API_URL,
                type: 'GET',
                data: dataParams,
                success: function(response) {
                    displayHistory(response.items);
                    displayPagination(response);
                    updatePageInfo(response);
                },
                error: function(xhr) {
                    showNotification('Lỗi khi tải dữ liệu lịch sử', 'error');
                }
            });
        }

        // Hiển thị lịch sử
        function displayHistory(histories) {
            const tbody = $('#historyTableBody');
            tbody.empty();

            if (histories.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="3" class="text-center text-secondary py-4">
                            Không có lịch sử hoạt động nào
                        </td>
                    </tr>
                `);
                return;
            }

            $.each(histories, function(index, history) {
                const time = history.time ? new Date(history.time).toLocaleString('vi-VN') : '-';
                const employeeName = history.employeeName || history.employeeId || '-';
                const activityType = history.activityType || '-';

                tbody.append(`
                    <tr>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${time}</span>
                        </td>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${employeeName}</span>
                        </td>
                        <td style="vertical-align: middle;">
                            <span class="text-xs">${activityType}</span>
                        </td>
                    </tr>
                `);
            });
        }

        // Hiển thị phân trang
        function displayPagination(response) {
            const pagination = $('#pagination');
            pagination.empty();

            if (response.totalPages <= 1) return;

            // Nút Previous
            pagination.append(`
                <li class="page-item ${response.hasPreviousPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadHistory(${currentPage - 1})">
                        <i class="material-icons text-sm">chevron_left</i>
                    </a>
                </li>
            `);

            // Các trang
            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(response.totalPages, currentPage + 2);

            if (startPage > 1) {
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadHistory(1)">1</a></li>`);
                if (startPage > 2) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                pagination.append(`
                    <li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="javascript:void(0)" onclick="loadHistory(${i})">${i}</a>
                    </li>
                `);
            }

            if (endPage < response.totalPages) {
                if (endPage < response.totalPages - 1) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadHistory(${response.totalPages})">${response.totalPages}</a></li>`);
            }

            // Nút Next
            pagination.append(`
                <li class="page-item ${response.hasNextPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadHistory(${currentPage + 1})">
                        <i class="material-icons text-sm">chevron_right</i>
                    </a>
                </li>
            `);
        }

        // Cập nhật thông tin trang
        function updatePageInfo(response) {
            const start = (response.pageNumber - 1) * response.pageSize + 1;
            const end = Math.min(response.pageNumber * response.pageSize, response.totalItems);
            $('#pageInfo').text(`Hiển thị ${start} - ${end} trong tổng số ${response.totalItems} hoạt động`);
        }

        // Hiển thị thông báo
        function showNotification(message, type) {
            const bgColor = type === 'success' ? 'bg-gradient-success' : 'bg-gradient-danger';
            const notification = $(`
                <div class="alert ${bgColor} text-white alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `);
            $('body').append(notification);
            setTimeout(() => notification.alert('close'), 3000);
        }
    </script>
}

<style>
    .table-responsive {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .table {
        margin-bottom: 0;
        background-color: #fff;
    }

    .table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .table thead th {
        color: #fff !important;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 1rem 0.75rem !important;
        border: none;
        font-size: 1.3125rem;
    }

    .table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid #e9ecef;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .table tbody tr:last-child {
        border-bottom: none;
    }

    #historyTableBody tr td {
        vertical-align: middle !important;
        padding: 1rem 0.75rem !important;
        border: none;
    }

    .table tbody tr td[colspan] {
        padding: 3rem 1rem !important;
        text-align: center;
        color: #6c757d;
        font-style: italic;
    }

    /* Xử lý đặc biệt cho input date - ẩn label trống */
    .input-group-outline:has(input[type="date"]) .form-label:empty {
        display: none;
    }

    .input-group-outline input[type="date"] {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    /* Ẩn placeholder dd/mm/yyyy trong input date */
    input[type="date"]::placeholder {
        color: transparent !important;
        opacity: 0 !important;
    }

    input[type="date"]::-webkit-input-placeholder {
        color: transparent !important;
        opacity: 0 !important;
    }

    input[type="date"]::-moz-placeholder {
        color: transparent !important;
        opacity: 0 !important;
    }

    input[type="date"]:-ms-input-placeholder {
        color: transparent !important;
        opacity: 0 !important;
    }

    /* Ẩn text placeholder mặc định của input date (dd/mm/yyyy) khi KHÔNG có dữ liệu và KHÔNG đang nhập */
    .input-group-outline input[type="date"]:not([value]):not([data-has-input])::-webkit-datetime-edit,
    .input-group-outline input[type="date"]:not([value]):not([data-has-input]):invalid::-webkit-datetime-edit,
    .input-group-outline input[type="date"]:not([value]):not([data-has-input]):valid::-webkit-datetime-edit {
        color: transparent !important;
    }

    /* Hiển thị dd/mm/yyyy khi CÓ dữ liệu ngày được nhập vào (có attribute value) hoặc đang nhập (có data-has-input) */
    .input-group-outline input[type="date"][value]::-webkit-datetime-edit,
    .input-group-outline input[type="date"][value]:valid::-webkit-datetime-edit,
    .input-group-outline input[type="date"][data-has-input]::-webkit-datetime-edit,
    .input-group-outline input[type="date"][data-has-input]:invalid::-webkit-datetime-edit,
    .input-group-outline input[type="date"][data-has-input]:valid::-webkit-datetime-edit {
        color: #495057 !important;
    }
</style>

