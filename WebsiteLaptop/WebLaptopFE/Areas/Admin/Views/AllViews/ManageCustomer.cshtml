        // Thêm khách hàng mới
        function addCustomer() {
            $('#isEditMode').val('false');
            $('#customerModalLabel').text('Thêm khách hàng');
            
            // Reset form
            $('#customerForm')[0].reset();
            
            // Load customerId tự động
