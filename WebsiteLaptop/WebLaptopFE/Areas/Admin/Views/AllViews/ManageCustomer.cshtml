@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-white text-capitalize ps-3 mb-0">Quản lý khách hàng</h6>
                            <button type="button" class="btn btn-white btn-sm me-3" onclick="addCustomer()">
                                <i class="material-icons text-sm">add</i> Thêm khách hàng
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <!-- Bộ lọc và tìm kiếm -->
                    <div class="row mb-3 g-2 align-items-end">
                        <div class="col-lg-4 col-md-6">
                            <div class="input-group input-group-outline">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm khách hàng...">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <select id="activeFilter" class="form-select">
                                <option value="true" selected>Đang hoạt động</option>
                                <option value="false">Đã khóa</option>
                                <option value="">Tất cả trạng thái</option>
                            </select>
                        </div>
                    </div>

                    <!-- Bảng khách hàng -->
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 25%;">Khách hàng</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 20%;">Thông tin liên hệ</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Ngày sinh</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Tài khoản</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 25%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="customerTableBody">
                                <!-- Dữ liệu sẽ được load bằng AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p class="text-sm mb-0" id="pageInfo">Đang tải...</p>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-end mb-0" id="pagination">
                                    <!-- Phân trang sẽ được tạo bằng JavaScript -->
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xem chi tiết -->
<div class="modal fade" id="viewCustomerModal" tabindex="-1" aria-labelledby="viewCustomerModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-gradient-info">
                <h5 class="modal-title text-white" id="viewCustomerModalLabel">Chi tiết khách hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="viewCustomerModalBody">
                <!-- Nội dung sẽ được load bằng JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm/Sửa Khách hàng -->
<div class="modal fade" id="customerModal" tabindex="-1" aria-labelledby="customerModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
                <h5 class="modal-title text-white" id="customerModalLabel">Thêm khách hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="customerForm">
                    <input type="hidden" id="isEditMode" value="false">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Mã khách hàng</label>
                                <input type="text" class="form-control" id="customerId" readonly disabled>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Tên khách hàng *</label>
                                <input type="text" class="form-control" id="customerName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Ngày sinh</label>
                                <input type="date" class="form-control" id="dateOfBirth">
                            </div>
                        </div>              
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" id="phoneNumber">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Tên đăng nhập</label>
                                <input type="text" class="form-control" id="username">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Mật khẩu</label>
                                <input type="password" class="form-control" id="password" data-password-length="0" placeholder="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3 autocomplete-wrapper position-relative w-100">
                                <label class="form-label">Tỉnh/Thành</label>                          
                                    <input type="text" id="provinceCode" class="form-control" autocomplete="off">
                                    <input type="hidden" id="provinceCodeValue" value="">
                                    <div id="provinceCodeDropdown" class="autocomplete-dropdown"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3 autocomplete-wrapper position-relative w-100">
                                <label class="form-label">Phường/Xã</label>
                                    <input type="text" id="communeCode" class="form-control" autocomplete="off" disabled>
                                    <input type="hidden" id="communeCodeValue" value="">
                                    <div id="communeCodeDropdown" class="autocomplete-dropdown"></div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Địa chỉ cụ thể</label>
                                <input type="text" class="form-control" id="addressDetail">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="avatarFile" class="form-label">Ảnh đại diện</label>
                                <input type="file" class="form-control" id="avatarFile" accept="image/*" onchange="previewImage(this)">
                                <img id="imagePreview" class="preview-image" style="display:none;">
                            </div>
                        </div>
                    </div>

                    <div class="text-danger mb-3" id="errorMessage" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveCustomer()">
                    <i class="material-icons text-sm">save</i> Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận khóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-danger">
                <h5 class="modal-title text-white" id="deleteModalLabel">Xác nhận khóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteModalMessage">Bạn có chắc chắn muốn khóa khách hàng <strong id="deleteCustomerName"></strong>?</p>
                <p class="text-warning text-sm mb-0">Khách hàng sẽ bị ẩn khỏi danh sách đang hoạt động nhưng có thể khôi phục sau.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                    <i class="material-icons text-sm">delete</i> Khóa
                </button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        const API_URL = 'http://localhost:5068/api/admin/customers';
        const API_BASE_URL = API_URL.replace(/\/api\/admin\/customers$/, '');
        const IMAGE_BASE_URL = `${API_BASE_URL}/imageCustomers`;
        let currentPage = 1;
        let pageSize = 10;
        let deleteCustomerId = '';
        let searchDebounceTimer = null;
        const SEARCH_DEBOUNCE_DELAY = 300;

        let provincesList = [];
        let communesList = [];
        let provincesPromise = null;
        let communesCache = {};

        $(document).ready(function() {
            loadCustomers();
            loadProvinces();

            // Tìm kiếm tự động theo tên
            $('#searchInput').on('input', function() {
                triggerAutoSearch();
            });

            // Tìm kiếm tự động theo trạng thái active
            $('#activeFilter').on('change', function() {
                triggerAutoSearch();
            });

            // Reset địa chỉ khi đóng modal
            $('#customerModal').on('hidden.bs.modal', function() {
                $('#provinceCode').val('');
                $('#provinceCodeValue').val('');
                $('#provinceCode').closest('.input-group-outline').removeClass('is-filled');
                $('#communeCode').val('');
                $('#communeCodeValue').val('');
                $('#communeCode').prop('disabled', true);
                $('#communeCode').closest('.input-group-outline').removeClass('is-filled');
                $('#addressDetail').val('');
                communesList = [];
            });

            // Lưu độ dài mật khẩu khi người dùng nhập
            $('#password').on('input', function() {
                const length = $(this).val().length;
                $(this).data('password-length', length);
                // Nếu đang edit và người dùng bắt đầu nhập, đổi về type="password"
                const isEditMode = $('#isEditMode').val() === 'true';
                if (isEditMode && $(this).attr('type') === 'text' && length > 0) {
                    // Kiểm tra xem có phải toàn dấu * không
                    const value = $(this).val();
                    if (value && value.length > 0 && !value.match(/^\*+$/)) {
                        // Người dùng đang nhập mật khẩu mới, đổi về type="password"
                        $(this).attr('type', 'password');
                    }
                }
            });
            
            // Khi focus vào password field trong chế độ edit, nếu đang hiển thị dấu *, clear và đổi về password
            $('#password').on('focus', function() {
                const isEditMode = $('#isEditMode').val() === 'true';
                if (isEditMode && $(this).attr('type') === 'text') {
                    const value = $(this).val();
                    if (value && value.match(/^\*+$/)) {
                        // Đang hiển thị dấu *, clear và đổi về password để người dùng nhập mới
                        const savedLength = value.length; // Lưu độ dài dấu * hiện tại
                        $(this).attr('type', 'password').val('').data('password-length', 0).data('saved-star-length', savedLength);
                    }
                }
            });
            
            // Khi blur khỏi password field trong chế độ edit, nếu không có giá trị mới, hiển thị lại dấu *
            $('#password').on('blur', function() {
                const isEditMode = $('#isEditMode').val() === 'true';
                if (isEditMode && $(this).attr('type') === 'password') {
                    const value = $(this).val();
                    if (!value || value.trim() === '') {
                        // Không có giá trị mới, hiển thị lại dấu *
                        const savedLength = parseInt($(this).data('saved-star-length')) || 8;
                        $(this).attr('type', 'text').val('*'.repeat(savedLength)).data('password-length', savedLength);
                    }
                }
            });

            // Xử lý date input: set data-has-input khi user tương tác
            $('#dateOfBirth').on('focus', function() {
                $(this).attr('data-has-input', 'true');
            });

            $('#dateOfBirth').on('change', function() {
                const value = $(this).val();
                if (value && value.trim() !== '') {
                    $(this).attr('value', value).attr('data-has-input', 'true');
                } else {
                    $(this).removeAttr('value').removeAttr('data-has-input');
                }
            });

            $('#dateOfBirth').on('blur', function() {
                const value = $(this).val();
                if (value && value.trim() !== '') {
                    $(this).attr('value', value);
                } else {
                    $(this).removeAttr('value').removeAttr('data-has-input');
                }
            });
        });

        function triggerAutoSearch() {
            currentPage = 1;
            if (searchDebounceTimer) {
                clearTimeout(searchDebounceTimer);
            }
            searchDebounceTimer = setTimeout(() => {
                loadCustomers();
            }, SEARCH_DEBOUNCE_DELAY);
        }

        function normalizeText(text) {
            if (!text) return '';
            return text.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '');
        }

        function extractAddressParts(address) {
            if (!address) return {};
            const parts = address.split(',')
                .map(part => part.trim())
                .filter(part => part.length > 0);

            if (parts.length >= 3) {
                return {
                    detail: parts[0],
                    communeName: parts[parts.length - 2],
                    provinceName: parts[parts.length - 1]
                };
            }

            if (parts.length === 2) {
                return {
                    detail: parts[0],
                    provinceName: parts[1]
                };
            }

            return {
                detail: parts[0] || address
            };
        }

        function resetCommuneInput() {
            $('#communeCode').val('').prop('disabled', true);
            $('#communeCodeValue').val('');
            $('#communeCode').closest('.input-group-outline').removeClass('is-filled');
        }

        // Load danh sách tỉnh/thành
        function loadProvinces(force = false) {
            if (provincesPromise && !force) {
                return provincesPromise;
            }

            provincesPromise = $.ajax({
                url: `${API_URL}/provinces`,
                type: 'GET'
            }).then(function(provinces) {
                provincesList = provinces || [];
                initializeProvinceAutocomplete();
                return provincesList;
            }).catch(function(xhr) {
                console.error('Lỗi khi tải danh sách tỉnh/thành:', xhr);
                showNotification('Lỗi khi tải danh sách tỉnh/thành', 'error');
                provincesList = [];
                initializeProvinceAutocomplete();
                return provincesList;
            });

            return provincesPromise;
        }

        // Load danh sách phường/xã theo tỉnh/thành
        function loadCommunes(provinceCode, force = false) {
            if (!provinceCode) {
                resetCommuneInput();
                const deferred = $.Deferred();
                deferred.resolve([]);
                return deferred.promise();
            }

            if (communesCache[provinceCode] && !force) {
                const cached = communesCache[provinceCode];
                cached.then && cached.then(function(list) {
                    communesList = list || [];
                    initializeCommuneAutocomplete();
                });
                return cached;
            }

            const request = $.ajax({
                url: `${API_URL}/provinces/${provinceCode}/communes`,
                type: 'GET'
            }).then(function(communes) {
                communesList = communes || [];
                $('#communeCode').prop('disabled', false);
                initializeCommuneAutocomplete();
                communesCache[provinceCode] = $.Deferred().resolve(communesList).promise();
                return communesList;
            }).catch(function(xhr) {
                console.error('Lỗi khi tải danh sách phường/xã:', xhr);
                showNotification('Lỗi khi tải danh sách phường/xã', 'error');
                communesList = [];
                $('#communeCode').prop('disabled', true);
                communesCache[provinceCode] = $.Deferred().resolve([]).promise();
                return [];
            });

            communesCache[provinceCode] = request;
            return request;
        }

        // Khởi tạo autocomplete cho tỉnh/thành
        function initializeProvinceAutocomplete() {
            const provinceInput = $('#provinceCode');
            const provinceValue = $('#provinceCodeValue');
            const dropdown = $('#provinceCodeDropdown');
            let selectedIndex = -1;
            let filteredProvinces = [];

            function showDropdown(provinces) {
                if (!provinces || provinces.length === 0) {
                    dropdown.html('<div class="autocomplete-item" style="color: #6c757d; cursor: default;">Không tìm thấy tỉnh/thành</div>').show();
                    selectedIndex = -1;
                    return;
                }

                let html = '';
                provinces.forEach((province, index) => {
                    const provinceName = province.name || province.code;
                    const provinceNameEscaped = (provinceName || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
                    html += `<div class="autocomplete-item" data-index="${index}" data-province-code="${province.code}" data-province-name="${provinceNameEscaped}">${provinceName}</div>`;
                });
                dropdown.html(html).show();
                selectedIndex = -1;
            }

            function updateSelectedItem() {
                $('#provinceCodeDropdown .autocomplete-item').removeClass('selected');
                if (selectedIndex >= 0 && selectedIndex < filteredProvinces.length) {
                    $('#provinceCodeDropdown .autocomplete-item').eq(selectedIndex).addClass('selected');
                }
            }

            // Xử lý khi gõ
            provinceInput.off('input.province').on('input.province', function() {
                const searchTerm = $(this).val().toLowerCase().trim();
                
                if (searchTerm) {
                    $(this).closest('.input-group-outline').addClass('is-filled');
                } else {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
                
                if (searchTerm === '') {
                    dropdown.hide();
                    provinceValue.val('');
                    loadCommunes(''); // Clear communes khi xóa tỉnh/thành
                    return;
                }

                filteredProvinces = provincesList.filter(province => {
                    const provinceName = (province.name || province.code || '').toLowerCase();
                    return provinceName.includes(searchTerm);
                });

                showDropdown(filteredProvinces);
            });

            // Xử lý khi click vào item
            $(document).off('click.province-item').on('click.province-item', '#provinceCodeDropdown .autocomplete-item', function() {
                const provinceCode = $(this).data('province-code');
                const provinceName = $(this).data('province-name');
                
                if (provinceCode && provinceName) {
                    provinceInput.val(provinceName);
                    provinceValue.val(provinceCode);
                    provinceInput.closest('.input-group-outline').addClass('is-filled');
                    dropdown.hide();
                    
                    // Load communes khi chọn tỉnh/thành
                    loadCommunes(provinceCode);
                }
            });

            // Xử lý phím tắt
            provinceInput.off('keydown.province').on('keydown.province', function(e) {
                if (dropdown.is(':visible') && filteredProvinces.length > 0) {
                    if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        selectedIndex = Math.min(selectedIndex + 1, filteredProvinces.length - 1);
                        updateSelectedItem();
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        selectedIndex = Math.max(selectedIndex - 1, -1);
                        updateSelectedItem();
                    } else if (e.key === 'Enter') {
                        e.preventDefault();
                        if (selectedIndex >= 0 && selectedIndex < filteredProvinces.length) {
                            const province = filteredProvinces[selectedIndex];
                            provinceInput.val(province.name || province.code);
                            provinceValue.val(province.code);
                            provinceInput.closest('.input-group-outline').addClass('is-filled');
                            dropdown.hide();
                            loadCommunes(province.code);
                        }
                    } else if (e.key === 'Escape') {
                        dropdown.hide();
                        selectedIndex = -1;
                    }
                }
            });

            // Ẩn dropdown khi click ra ngoài
            $(document).off('click.province-close').on('click.province-close', function(e) {
                if (!$(e.target).closest('#provinceCode').closest('.autocomplete-wrapper').length) {
                    dropdown.hide();
                    selectedIndex = -1;
                }
            });

            // Xử lý khi focus vào input
            provinceInput.off('focus.province').on('focus.province', function() {
                $(this).closest('.input-group-outline').addClass('is-filled');
                
                const val = $(this).val().trim();
                if (val) {
                    $(this).trigger('input.province');
                } else {
                    if (provincesList.length > 0) {
                        filteredProvinces = provincesList;
                        showDropdown(filteredProvinces);
                    }
                }
            });

            // Xử lý khi blur
            provinceInput.off('blur.province').on('blur.province', function() {
                const val = $(this).val().trim();
                if (!val) {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
            });
        }

        // Khởi tạo autocomplete cho phường/xã
        function initializeCommuneAutocomplete() {
            const communeInput = $('#communeCode');
            const communeValue = $('#communeCodeValue');
            const dropdown = $('#communeCodeDropdown');
            let selectedIndex = -1;
            let filteredCommunes = [];

            function showDropdown(communes) {
                if (!communes || communes.length === 0) {
                    dropdown.html('<div class="autocomplete-item" style="color: #6c757d; cursor: default;">Không tìm thấy phường/xã</div>').show();
                    selectedIndex = -1;
                    return;
                }

                let html = '';
                communes.forEach((commune, index) => {
                    const communeName = commune.name || commune.code;
                    const communeNameEscaped = (communeName || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
                    html += `<div class="autocomplete-item" data-index="${index}" data-commune-code="${commune.code}" data-commune-name="${communeNameEscaped}">${communeName}</div>`;
                });
                dropdown.html(html).show();
                selectedIndex = -1;
            }

            function updateSelectedItem() {
                $('#communeCodeDropdown .autocomplete-item').removeClass('selected');
                if (selectedIndex >= 0 && selectedIndex < filteredCommunes.length) {
                    $('#communeCodeDropdown .autocomplete-item').eq(selectedIndex).addClass('selected');
                }
            }

            // Xử lý khi gõ
            communeInput.off('input.commune').on('input.commune', function() {
                const searchTerm = $(this).val().toLowerCase().trim();
                
                if (searchTerm) {
                    $(this).closest('.input-group-outline').addClass('is-filled');
                } else {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
                
                if (searchTerm === '') {
                    dropdown.hide();
                    communeValue.val('');
                    return;
                }

                filteredCommunes = communesList.filter(commune => {
                    const communeName = (commune.name || commune.code || '').toLowerCase();
                    return communeName.includes(searchTerm);
                });

                showDropdown(filteredCommunes);
            });

            // Xử lý khi click vào item
            $(document).off('click.commune-item').on('click.commune-item', '#communeCodeDropdown .autocomplete-item', function() {
                const communeCode = $(this).data('commune-code');
                const communeName = $(this).data('commune-name');
                
                if (communeCode && communeName) {
                    communeInput.val(communeName);
                    communeValue.val(communeCode);
                    communeInput.closest('.input-group-outline').addClass('is-filled');
                    dropdown.hide();
                }
            });

            // Xử lý phím tắt
            communeInput.off('keydown.commune').on('keydown.commune', function(e) {
                if (dropdown.is(':visible') && filteredCommunes.length > 0) {
                    if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        selectedIndex = Math.min(selectedIndex + 1, filteredCommunes.length - 1);
                        updateSelectedItem();
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        selectedIndex = Math.max(selectedIndex - 1, -1);
                        updateSelectedItem();
                    } else if (e.key === 'Enter') {
                        e.preventDefault();
                        if (selectedIndex >= 0 && selectedIndex < filteredCommunes.length) {
                            const commune = filteredCommunes[selectedIndex];
                            communeInput.val(commune.name || commune.code);
                            communeValue.val(commune.code);
                            communeInput.closest('.input-group-outline').addClass('is-filled');
                            dropdown.hide();
                        }
                    } else if (e.key === 'Escape') {
                        dropdown.hide();
                        selectedIndex = -1;
                    }
                }
            });

            // Ẩn dropdown khi click ra ngoài
            $(document).off('click.commune-close').on('click.commune-close', function(e) {
                if (!$(e.target).closest('#communeCode').closest('.autocomplete-wrapper').length) {
                    dropdown.hide();
                    selectedIndex = -1;
                }
            });

            // Xử lý khi focus vào input
            communeInput.off('focus.commune').on('focus.commune', function() {
                $(this).closest('.input-group-outline').addClass('is-filled');
                
                const val = $(this).val().trim();
                if (val) {
                    $(this).trigger('input.commune');
                } else {
                    if (communesList.length > 0) {
                        filteredCommunes = communesList;
                        showDropdown(filteredCommunes);
                    }
                }
            });

            // Xử lý khi blur
            communeInput.off('blur.commune').on('blur.commune', function() {
                const val = $(this).val().trim();
                if (!val) {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
            });
        }

