            const serialId = $('#serialIdInput').val().trim();
            // Lấy EmployeeId từ select hoặc từ biến global nếu không có
            let employeeId = $('#employeeIdInput').val().trim();
            if (!employeeId && currentEmployeeId) {
                employeeId = currentEmployeeId;
            }
            // Lấy type từ input
            const type = $('#typeInput').val() ? $('#typeInput').val().trim() : '';
            const contentDetail = $('#contentDetailInput').val().trim();
            const status = $('#statusInput').val().trim();
            const totalAmount = parseFloat($('#totalAmountInput').val()) || 0;

            const isEdit = $('#warrantyId').val() !== '';
            
            if (!isEdit && !warrantyId) {
                warrantyId = null;
            }
            
            // Validation
            if (!phoneNumber) {
                showFormError('Vui lòng nhập số điện thoại');
                return;
            }
            
            if (!customerName) {
                showFormError('Vui lòng nhập tên khách hàng');
                return;
            }
            
            if (!type) {
                showFormError('Vui lòng chọn serial để xác định loại bảo hành');
                return;
            }
            
            if (!status) {
                showFormError('Vui lòng chọn trạng thái');
                return;
            }

            // Validation riêng cho từng loại
            if (type === 'Bảo hành') {
                if (!customerId) {
                    showFormError('Không tìm thấy khách hàng. Vui lòng kiểm tra lại số điện thoại');
                    return;
                }
                if (!serialId) {
                    showFormError('Vui lòng chọn serial cho bảo hành');
                    return;
                }
            } else if (type === 'Sửa chữa') {
                // Cho sửa chữa, nếu không có customerId thì cần có customerName
                if (!customerId && !customerName) {
                    showFormError('Vui lòng nhập tên khách hàng cho sửa chữa');
                    return;
                }
            }

            const url = isEdit ? `${API_URL}/${warrantyId}` : API_URL;
            const method = isEdit ? 'PUT' : 'POST';

            const data = {
                warrantyId: warrantyId || null,
                customerId: customerId || null,
                customerName: customerName || null,
                phoneNumber: phoneNumber || null,
                serialId: type === 'Sửa chữa' ? null : (serialId || null),
                employeeId: employeeId || null,
                type: type || null,
                contentDetail: contentDetail || null,
                status: status,
                totalAmount: type === 'Bảo hành' ? 0 : totalAmount
            };

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    showNotification(isEdit ? 'Cập nhật bảo hành thành công' : 'Thêm bảo hành thành công', 'success');
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('createEditModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadWarranties();
                },
                error: function(xhr) {
                    console.error('Error saving warranty:', xhr);
                    let message = 'Có lỗi xảy ra khi lưu bảo hành';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showFormError(message);
                }
            });
        }


        // Hiển thị thông báo
        function showNotification(message, type) {
            const bgColor = type === 'success' ? 'bg-gradient-success' : 'bg-gradient-danger';
            const notification = $(
                `<div class="alert ${bgColor} text-white alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>`
            );
            $('body').append(notification);
            setTimeout(() => notification.alert('close'), 3000);
        }

        // Hiển thị lỗi trong form
        function showFormError(message) {
            $('#formErrorMessage').html(message).show();
        }

        // Format tiền tệ
        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        }

        // Reset khi đóng modal
        $(document).on('hidden.bs.modal', '#createEditModal', function() {
            $('#warrantyForm')[0].reset();
            $('#warrantyId').val('');
            $('#warrantyIdInput').prop('readonly', false);
            $('#customerNameInput').prop('readonly', false);
            $('#serialIdInput').prop('disabled', true);
            $('#typeInput').val('');
            $('#totalAmountInput').prop('readonly', false);
            serialsDataMap = {};
            $('#formErrorMessage').hide();
            $('.input-group-outline').removeClass('is-filled is-focused');
            if (typeof updateInputLabels === 'function') {
                setTimeout(function() {
                    updateInputLabels();
                }, 50);
            }
        });

        // Ngăn scroll lan ra trang chính khi cuộn trong modal-body
        $(document).on('wheel', '.modal-body', function(e) {
            var $this = $(this);
            var scrollTop = $this.scrollTop();
            var scrollHeight = $this[0].scrollHeight;
            var height = $this.outerHeight();
            var delta = e.originalEvent.deltaY;

            // Nếu cuộn lên và đã ở đầu, hoặc cuộn xuống và đã ở cuối -> chặn
            if ((delta < 0 && scrollTop <= 0) || (delta > 0 && scrollTop + height >= scrollHeight)) {
                e.preventDefault();
            }
        });

        // Ngăn scroll trên modal backdrop
        $(document).on('wheel', '.modal', function(e) {
            if (!$(e.target).closest('.modal-body').length) {
                e.preventDefault();
            }
        });

        // Hiển thị modal chọn loại xuất file
        function showExportModal(warrantyId) {
            $('#exportWarrantyId').val(warrantyId);
            const modal = new bootstrap.Modal(document.getElementById('exportModal'));
            modal.show();
        }

        // Xuất phiếu bảo hành ra Excel từ modal
        function exportToExcelFromModal() {
            try {
                const warrantyId = $('#exportWarrantyId').val();
                if (!warrantyId) {
                    showNotification('Không tìm thấy mã phiếu bảo hành', 'error');
                    return;
                }
                
                // Đóng modal
                const modalInstance = bootstrap.Modal.getInstance(document.getElementById('exportModal'));
                if (modalInstance) {
                    modalInstance.hide();
                }
                
                const url = `${API_URL}/${warrantyId}/export-excel`;
                window.open(url, '_blank');
                showNotification('Đang tải file Excel...', 'success');
            } catch (error) {
                console.error('Error exporting to Excel:', error);
                showNotification('Lỗi khi xuất file Excel', 'error');
            }
        }

        // Xuất phiếu bảo hành ra PDF từ modal
        function exportToPdfFromModal() {
            try {
                const warrantyId = $('#exportWarrantyId').val();
                if (!warrantyId) {
                    showNotification('Không tìm thấy mã phiếu bảo hành', 'error');
                    return;
                }
                
                // Đóng modal
                const modalInstance = bootstrap.Modal.getInstance(document.getElementById('exportModal'));
                if (modalInstance) {
                    modalInstance.hide();
                }
                
                const url = `${API_URL}/${warrantyId}/export-pdf`;
                window.open(url, '_blank');
                showNotification('Đang tải file PDF...', 'success');
            } catch (error) {
                console.error('Error exporting to PDF:', error);
                showNotification('Lỗi khi xuất file PDF', 'error');
            }
        }
    </script>
