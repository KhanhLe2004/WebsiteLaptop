@{
    ViewData["Title"] = "Quản lý khuyến mại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-white text-capitalize ps-3 mb-0">Quản lý khuyến mại</h6>
                            <button class="btn btn-light btn-sm me-3" onclick="showBatchCreateModal()">
                                <i class="material-icons text-sm">add_circle_outline</i> Thêm hàng loạt
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <!-- Bộ lọc và tìm kiếm -->
                    <div class="row mb-3 g-2 align-items-end">
                        <div class="col-lg-4 col-md-6">
                            <div class="input-group input-group-outline">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm khuyến mại...">
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="autocomplete-wrapper position-relative">
                                <input type="text" id="productFilter" class="form-control" placeholder="Tất cả sản phẩm" autocomplete="off">
                                <input type="hidden" id="productFilterValue" value="">
                                <div id="productFilterDropdown" class="autocomplete-dropdown"></div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="input-group input-group-outline is-filled">
                                <select class="form-control" id="typeFilter">
                                    <option value="">Tất cả loại</option>
                                    <option value="Giảm giá">Giảm giá</option>
                                    <option value="Freeship">Freeship</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Bảng khuyến mại -->
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 12%;">Mã KM</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 25%;">Sản phẩm</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 20%;">Loại khuyến mại</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 28%;">Nội dung</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="promotionTableBody">
                                <!-- Dữ liệu sẽ được load bằng AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p class="text-sm mb-0" id="pageInfo">Đang tải...</p>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-end mb-0" id="pagination">
                                    <!-- Phân trang sẽ được tạo bằng JavaScript -->
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xem chi tiết -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-info">
                <h5 class="modal-title text-white" id="viewModalLabel">Chi tiết khuyến mại</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="viewModalBody">
                <!-- Nội dung sẽ được load bằng JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sửa -->
