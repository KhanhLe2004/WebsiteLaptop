                    <div class="row">
                        <div class="col-md-12">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Sản phẩm</label>
                                <input type="text" class="form-control" id="productNameInput" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Loại khuyến mại *</label>
                                <select class="form-control" id="typeInput" required>
                                    <option value=""></option>
                                    <option value="Giảm giá">Giảm giá</option>
                                    <option value="Freeship">Freeship</option>
                                </select>
                            </div>
                        </div>
