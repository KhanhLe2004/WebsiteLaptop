@section Scripts {
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        const API_URL = 'http://localhost:5068/api/admin/promotions';
        let currentPage = 1;
        let pageSize = 10;
        let searchDebounceTimer = null;
        const SEARCH_DEBOUNCE_DELAY = 300;
        let deletePromotionId = null;
        let allProductsForFilter = [];

        $(document).ready(function() {
            loadProducts();
            loadPromotions();

            // Tìm kiếm tự động
            $('#searchInput').on('input', function() {
                triggerAutoSearch();
            });

            // Lắng nghe sự kiện khi product filter thay đổi
            $(document).on('productFilterChanged', function() {
                triggerAutoSearch();
            });

            // Lọc theo loại
            $('#typeFilter').on('change', function() {
                triggerAutoSearch();
            });

            // Xử lý label cho Material Dashboard inputs
            window.updateInputLabels = function() {
                $('.input-group-outline input, .input-group-outline select, .input-group-outline textarea').each(function() {
                    const $input = $(this);
                    const value = $input.val();
                    if (value && value.trim() !== '') {
                        $input.closest('.input-group-outline').addClass('is-filled');
                    } else {
                        $input.closest('.input-group-outline').removeClass('is-filled');
                    }
                });
            };

            $(document).on('input change', '.input-group-outline input, .input-group-outline select, .input-group-outline textarea', function() {
                const $input = $(this);
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $input.closest('.input-group-outline').addClass('is-filled');
                } else {
                    $input.closest('.input-group-outline').removeClass('is-filled');
                }
            });

            $(document).on('focus', '.input-group-outline input, .input-group-outline select, .input-group-outline textarea', function() {
                $(this).closest('.input-group-outline').addClass('is-focused');
            });

            $(document).on('blur', '.input-group-outline input, .input-group-outline select, .input-group-outline textarea', function() {
                const $input = $(this);
                const $group = $input.closest('.input-group-outline');
                $group.removeClass('is-focused');
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $group.addClass('is-filled');
                } else {
                    $group.removeClass('is-filled');
                }
            });

            // Khởi tạo Select2 cho multi-select sản phẩm trong batch modal
            $('#batchProductIdsInput').select2({
                theme: 'bootstrap-5',
                dropdownParent: $('#batchCreateModal'),
                placeholder: 'Chọn sản phẩm (có thể chọn nhiều)',
                allowClear: true,
                closeOnSelect: false
            });

            // Hiển thị thông báo info khi mở batch modal
            $('#batchCreateModal').on('show.bs.modal', function() {
                $('#batchInfoMessage').show();
            });
        });

        function triggerAutoSearch() {
            currentPage = 1;
            if (searchDebounceTimer) {
                clearTimeout(searchDebounceTimer);
            }
            searchDebounceTimer = setTimeout(() => {
                loadPromotions();
            }, SEARCH_DEBOUNCE_DELAY);
        }

        // Load danh sách sản phẩm
        function loadProducts() {
            $.ajax({
                url: `${API_URL}/products`,
                type: 'GET',
                success: function(products) {
                    const batchProductInput = $('#batchProductIdsInput');
                    
                    // Lưu danh sách sản phẩm để dùng cho autocomplete filter
                    allProductsForFilter = products.map(function(product) {
                        return {
                            productId: product.productId,
                            productName: product.productName,
                            productModel: product.productModel,
                            displayName: product.productName + (product.productModel ? ' - ' + product.productModel : '')
                        };
                    });
                    
                    // Clear existing options except first
                    batchProductInput.find('option:not(:first)').remove();
                    
                    // Add products to batch input (ProductName + ProductModel)
                    products.forEach(function(product) {
                        const displayName = product.productName + (product.productModel ? ' - ' + product.productModel : '');
                        batchProductInput.append(`<option value="${product.productId}">${displayName}</option>`);
                    });
                    
                    // Khởi tạo autocomplete cho product filter
                    initializeProductFilterAutocomplete();
                    
                    updateInputLabels();
                },
                error: function(xhr) {
                    console.error('Lỗi khi tải danh sách sản phẩm:', xhr);
                }
            });
        }

        // Khởi tạo autocomplete cho product filter
        function initializeProductFilterAutocomplete() {
            const productFilter = $('#productFilter');
            const productFilterValue = $('#productFilterValue');
            const dropdown = $('#productFilterDropdown');
            let selectedIndex = -1;
            let filteredProducts = [];

            function showDropdown(products) {
                if (!products || products.length === 0) {
                    dropdown.html('<div class="autocomplete-item" style="color: #6c757d; cursor: default;">Không tìm thấy sản phẩm</div>').addClass('show').show();
                    selectedIndex = -1;
                    return;
                }

                let html = '';
                products.forEach((product, index) => {
                    const displayNameEscaped = (product.displayName || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
                    html += `<div class="autocomplete-item" data-index="${index}" data-product-id="${product.productId}" data-product-name="${displayNameEscaped}">${product.displayName}</div>`;
                });
                dropdown.html(html).addClass('show').show();
                selectedIndex = -1;
            }

            function updateSelectedItem() {
                $('#productFilterDropdown .autocomplete-item').removeClass('selected');
                if (selectedIndex >= 0 && selectedIndex < filteredProducts.length) {
                    $('#productFilterDropdown .autocomplete-item').eq(selectedIndex).addClass('selected');
                }
            }

            // Xử lý khi gõ
            productFilter.off('input.productfilter').on('input.productfilter', function() {
                const searchTerm = $(this).val().toLowerCase().trim();
                
                if (searchTerm === '') {
                    dropdown.removeClass('show').hide();
                    productFilterValue.val('');
                    productFilter.attr('placeholder', 'Tất cả sản phẩm');
                    $(document).trigger('productFilterChanged');
                    return;
                }

                // Lọc products
                filteredProducts = allProductsForFilter.filter(product => 
                    (product.displayName || '').toLowerCase().includes(searchTerm)
                );

                showDropdown(filteredProducts);
            });

            // Xử lý khi click vào item
            $(document).off('click.productfilter-item').on('click.productfilter-item', '#productFilterDropdown .autocomplete-item', function() {
                const productId = $(this).data('product-id');
                const productName = $(this).data('product-name');
                
                if (productId && productName) {
                    productFilter.val(productName);
                    productFilterValue.val(productId);
                    dropdown.removeClass('show').hide();
                    $(document).trigger('productFilterChanged');
                }
            });

            // Xử lý phím tắt
            productFilter.off('keydown.productfilter').on('keydown.productfilter', function(e) {
                if (dropdown.is(':visible') && filteredProducts.length > 0) {
                    if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        selectedIndex = Math.min(selectedIndex + 1, filteredProducts.length - 1);
                        updateSelectedItem();
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        selectedIndex = Math.max(selectedIndex - 1, -1);
                        updateSelectedItem();
                    } else if (e.key === 'Enter') {
                        e.preventDefault();
                        if (selectedIndex >= 0 && selectedIndex < filteredProducts.length) {
                            const product = filteredProducts[selectedIndex];
                            productFilter.val(product.displayName);
                            productFilterValue.val(product.productId);
                            dropdown.removeClass('show').hide();
                            $(document).trigger('productFilterChanged');
                        }
                    } else if (e.key === 'Escape') {
                        dropdown.removeClass('show').hide();
                        selectedIndex = -1;
                    }
                }
            });

            // Ẩn dropdown khi click ra ngoài
            $(document).off('click.productfilter-close').on('click.productfilter-close', function(e) {
                if (!$(e.target).closest('.autocomplete-wrapper').length) {
                    dropdown.removeClass('show').hide();
                    selectedIndex = -1;
                }
            });

            // Xử lý khi focus vào input - hiển thị tất cả products nếu chưa có text
            productFilter.off('focus.productfilter').on('focus.productfilter', function() {
                const val = $(this).val().trim();
                if (val) {
                    // Trigger input để hiển thị dropdown nếu có text
                    $(this).trigger('input.productfilter');
                } else {
                    // Hiển thị tất cả products khi focus lần đầu
                    if (allProductsForFilter.length > 0) {
                        filteredProducts = allProductsForFilter;
                        showDropdown(filteredProducts);
                    }
                }
            });

            // Xử lý khi click vào input
            productFilter.off('click.productfilter').on('click.productfilter', function() {
                const val = $(this).val().trim();
                if (val) {
                    $(this).trigger('input.productfilter');
                } else {
                    if (allProductsForFilter.length > 0) {
                        filteredProducts = allProductsForFilter;
                        showDropdown(filteredProducts);
                    }
                }
            });
        }

        // Load danh sách khuyến mại
        function loadPromotions(page = currentPage) {
            currentPage = page;
            const searchTerm = $('#searchInput').val().trim();
            const productId = $('#productFilterValue').val() || ''; // Chỉ lấy từ hidden field
            const typeFilter = $('#typeFilter').val();

            const dataParams = {
                pageNumber: currentPage,
                pageSize: pageSize,
                searchTerm: searchTerm || null,
                productId: productId || null,
                type: typeFilter || null
            };

            $.ajax({
                url: API_URL,
                type: 'GET',
                data: dataParams,
                success: function(response) {
                    displayPromotions(response.items);
                    displayPagination(response);
                    updatePageInfo(response);
                    updateTypeFilter(response.items);
                },
                error: function(xhr) {
                    console.error('Lỗi khi tải khuyến mại:', xhr);
                    showNotification('Lỗi khi tải dữ liệu khuyến mại', 'error');
                }
            });
        }

        // Cập nhật filter loại khuyến mại dựa trên dữ liệu
        function updateTypeFilter(promotions) {
            const typeFilter = $('#typeFilter');
            const existingTypes = new Set();
            
            // Lấy tất cả các loại từ dữ liệu
            promotions.forEach(function(p) {
                if (p.type) {
                    existingTypes.add(p.type);
                }
            });
            
            // Chỉ cập nhật nếu có thay đổi
            const currentOptions = typeFilter.find('option:not(:first)').map(function() {
                return $(this).val();
            }).get();
            
            const newTypes = Array.from(existingTypes).filter(t => !currentOptions.includes(t));
            
            if (newTypes.length > 0) {
                newTypes.forEach(function(type) {
                    typeFilter.append(`<option value="${type}">${type}</option>`);
                });
            }
        }

        // Hiển thị khuyến mại
        function displayPromotions(promotions) {
            const tbody = $('#promotionTableBody');
            tbody.empty();

            if (promotions.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="5" class="text-center text-secondary py-4">
                            Không có khuyến mại nào
                        </td>
                    </tr>
                `);
                return;
            }

            $.each(promotions, function(index, promotion) {
                const contentDetail = promotion.contentDetail || '-';
                const contentDisplay = contentDetail.length > 50 
                    ? contentDetail.substring(0, 50) + '...' 
                    : contentDetail;
                
                // Hiển thị ProductName + ProductModel
                let productDisplay = '-';
                if (promotion.productName) {
                    productDisplay = promotion.productName;
                    if (promotion.productModel) {
                        productDisplay += ' - ' + promotion.productModel;
                    }
                }

                tbody.append(`
                    <tr>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${promotion.promotionId}</span>
                        </td>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${productDisplay}</span>
                        </td>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${promotion.type || '-'}</span>
                        </td>
                        <td style="vertical-align: middle;">
                            <span class="text-xs" title="${contentDetail}">${contentDisplay}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;" class="table-actions">
                            <button class="btn btn-info action-btn" onclick='viewPromotion("${promotion.promotionId}")' title="Xem">
                                <i class="material-icons text-sm">visibility</i>
                            </button>
                            <button class="btn btn-warning action-btn" onclick='editPromotion("${promotion.promotionId}")' title="Sửa">
                                <i class="material-icons text-sm">edit</i>
                            </button>
                            <button class="btn btn-danger action-btn" onclick='deletePromotion("${promotion.promotionId}")' title="Xóa">
                                <i class="material-icons text-sm">delete</i>
                            </button>
                        </td>
                    </tr>
                `);
            });
        }

        // Hiển thị phân trang
        function displayPagination(response) {
            const pagination = $('#pagination');
            pagination.empty();

            if (response.totalPages <= 1) return;

            pagination.append(`
                <li class="page-item ${response.hasPreviousPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPromotions(${currentPage - 1})">
                        <i class="material-icons text-sm">chevron_left</i>
                    </a>
                </li>
            `);

            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(response.totalPages, currentPage + 2);

            if (startPage > 1) {
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadPromotions(1)">1</a></li>`);
                if (startPage > 2) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                pagination.append(`
                    <li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="javascript:void(0)" onclick="loadPromotions(${i})">${i}</a>
                    </li>
                `);
            }

            if (endPage < response.totalPages) {
                if (endPage < response.totalPages - 1) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadPromotions(${response.totalPages})">${response.totalPages}</a></li>`);
            }

            pagination.append(`
                <li class="page-item ${response.hasNextPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPromotions(${currentPage + 1})">
                        <i class="material-icons text-sm">chevron_right</i>
                    </a>
                </li>
            `);
        }

        // Cập nhật thông tin trang
        function updatePageInfo(response) {
            const start = (response.pageNumber - 1) * response.pageSize + 1;
            const end = Math.min(response.pageNumber * response.pageSize, response.totalItems);
            $('#pageInfo').text(`Hiển thị ${start} - ${end} trong tổng số ${response.totalItems} khuyến mại`);
        }

        // Xem chi tiết khuyến mại
        function viewPromotion(promotionId) {
            $.ajax({
                url: `${API_URL}/${promotionId}`,
                type: 'GET',
                success: function(promotion) {
                    // Hiển thị ProductName + ProductModel
                    let productDisplay = '-';
                    if (promotion.productName) {
                        productDisplay = promotion.productName;
                        if (promotion.productModel) {
                            productDisplay += ' - ' + promotion.productModel;
                        }
                    }
                    
                    let html = `
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Mã khuyến mại:</strong> ${promotion.promotionId}
                            </div>
                            <div class="col-md-6">
                                <strong>Sản phẩm:</strong> ${productDisplay}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Loại khuyến mại:</strong> ${promotion.type || '-'}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Nội dung chi tiết:</strong><br>
                                <p class="mt-2">${promotion.contentDetail || '-'}</p>
                            </div>
                        </div>
                    `;

                    $('#viewModalBody').html(html);
                    const modal = new bootstrap.Modal(document.getElementById('viewModal'));
                    modal.show();
                },
                error: function(xhr) {
                    console.error('Error loading promotion:', xhr);
                    showNotification('Lỗi khi tải thông tin khuyến mại', 'error');
                }
            });
        }

        // Hiển thị modal thêm hàng loạt
        function showBatchCreateModal() {
            $('#batchPromotionForm')[0].reset();
            $('#batchProductIdsInput').val(null).trigger('change');
            $('#batchFormErrorMessage').hide();
            $('#batchInfoMessage').show();
            
            updateInputLabels();

            const modal = new bootstrap.Modal(document.getElementById('batchCreateModal'));
            modal.show();
        }

        // Sửa khuyến mại
        function editPromotion(promotionId) {
            $.ajax({
                url: `${API_URL}/${promotionId}`,
                type: 'GET',
                success: function(promotion) {
                    $('#promotionId').val(promotion.promotionId);
                    $('#promotionIdInput').val(promotion.promotionId);
                    $('#promotionIdInput').prop('readonly', true);
                    $('#productIdHidden').val(promotion.productId || '');
                    // Hiển thị ProductName + ProductModel
                    const productDisplay = promotion.productName + (promotion.productModel ? ' - ' + promotion.productModel : '');
                    $('#productNameInput').val(productDisplay);
                    $('#typeInput').val(promotion.type || '');
                    $('#contentDetailInput').val(promotion.contentDetail || '');
                    $('#formErrorMessage').hide();
                    
                    updateInputLabels();

                    const modal = new bootstrap.Modal(document.getElementById('editModal'));
                    modal.show();
                },
                error: function(xhr) {
                    console.error('Error loading promotion:', xhr);
                    showNotification('Lỗi khi tải thông tin khuyến mại', 'error');
                }
            });
        }

        // Lưu khuyến mại (chỉ dùng cho sửa)
        function savePromotion() {
            $('#formErrorMessage').hide();

            const promotionId = $('#promotionIdInput').val().trim();
            const productId = $('#productIdHidden').val();
            const type = $('#typeInput').val().trim();
            const contentDetail = $('#contentDetailInput').val().trim();

            if (!promotionId) {
                showFormError('Mã khuyến mại không hợp lệ');
                return;
            }

            if (!productId) {
                showFormError('Sản phẩm không hợp lệ');
                return;
            }

            if (!type) {
                showFormError('Vui lòng nhập loại khuyến mại');
                return;
            }

            const data = {
                productId: productId,
                type: type,
                contentDetail: contentDetail || null
            };

            $.ajax({
                url: `${API_URL}/${promotionId}`,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    showNotification('Cập nhật khuyến mại thành công', 'success');
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('editModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadPromotions();
                },
                error: function(xhr) {
                    console.error('Error saving promotion:', xhr);
                    let message = 'Có lỗi xảy ra khi cập nhật khuyến mại';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showFormError(message);
                }
            });
        }

        // Lưu khuyến mại hàng loạt
        function saveBatchPromotions() {
            $('#batchFormErrorMessage').hide();

            const productIds = $('#batchProductIdsInput').val();
            const type = $('#batchTypeInput').val().trim();
            const contentDetail = $('#batchContentDetailInput').val().trim();

            if (!productIds || productIds.length === 0) {
                showBatchFormError('Vui lòng chọn ít nhất một sản phẩm');
                return;
            }

            if (!type) {
                showBatchFormError('Vui lòng nhập loại khuyến mại');
                return;
            }

            const data = {
                productIds: productIds,
                type: type,
                contentDetail: contentDetail || null
            };

            // Disable button và hiển thị loading
            const saveButton = $('button[onclick="saveBatchPromotions()"]');
            const originalText = saveButton.html();
            saveButton.prop('disabled', true).html('<i class="material-icons text-sm">hourglass_empty</i> Đang tạo...');

            $.ajax({
                url: `${API_URL}/batch`,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    let message = response.message || `Đã tạo thành công ${response.createdCount} khuyến mại`;
                    
                    // Hiển thị thông báo chi tiết nếu có lỗi
                    if (response.errors && response.errors.length > 0) {
                        message += '\n\nCác lỗi:\n' + response.errors.join('\n');
                    }
                    
                    showNotification(message, response.errors && response.errors.length > 0 ? 'error' : 'success');
                    
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('batchCreateModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadPromotions();
                },
                error: function(xhr) {
                    console.error('Error saving batch promotions:', xhr);
                    let message = 'Có lỗi xảy ra khi tạo khuyến mại hàng loạt';
                    
                    if (xhr.responseJSON) {
                        if (xhr.responseJSON.message) {
                            message = xhr.responseJSON.message;
                        }
                        if (xhr.responseJSON.error) {
                            message += '\n' + xhr.responseJSON.error;
                        }
                        if (xhr.responseJSON.details) {
                            console.error('Error details:', xhr.responseJSON.details);
                        }
                    } else if (xhr.responseText) {
                        try {
                            const errorData = JSON.parse(xhr.responseText);
                            if (errorData.message) {
                                message = errorData.message;
                            }
                        } catch (e) {
                            message = xhr.responseText || message;
                        }
                    }
                    
                    showBatchFormError(message);
                },
                complete: function() {
                    // Re-enable button
                    saveButton.prop('disabled', false).html(originalText);
                }
            });
        }

        // Xóa khuyến mại
        function deletePromotion(promotionId) {
            deletePromotionId = promotionId;
            $('#deletePromotionId').text(promotionId);
            
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Xác nhận xóa
        function confirmDelete() {
            if (!deletePromotionId) return;

            $.ajax({
                url: `${API_URL}/${deletePromotionId}`,
                type: 'DELETE',
                success: function(response) {
                    showNotification('Xóa khuyến mại thành công', 'success');
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadPromotions();
                    deletePromotionId = null;
                },
                error: function(xhr) {
                    console.error('Error deleting promotion:', xhr);
                    let message = 'Có lỗi xảy ra khi xóa khuyến mại';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showNotification(message, 'error');
                }
            });
        }

        // Hiển thị thông báo
        function showNotification(message, type) {
            const bgColor = type === 'success' ? 'bg-gradient-success' : 'bg-gradient-danger';
            const notification = $(
                `<div class="alert ${bgColor} text-white alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>`
            );
            $('body').append(notification);
            setTimeout(() => notification.alert('close'), 3000);
        }

        // Hiển thị lỗi trong form
        function showFormError(message) {
            $('#formErrorMessage').html(message).show();
        }

        // Hiển thị lỗi trong batch form
        function showBatchFormError(message) {
            $('#batchFormErrorMessage').html(message).show();
        }

        // Reset khi đóng modal sửa
        $(document).on('hidden.bs.modal', '#editModal', function() {
            $('#promotionForm')[0].reset();
            $('#promotionId').val('');
            $('#productIdHidden').val('');
            $('#promotionIdInput').prop('readonly', false);
            $('#formErrorMessage').hide();
            $('.input-group-outline').removeClass('is-filled is-focused');
            if (typeof updateInputLabels === 'function') {
                setTimeout(function() {
                    updateInputLabels();
                }, 50);
            }
        });

        // Reset khi đóng batch modal
        $(document).on('hidden.bs.modal', '#batchCreateModal', function() {
            $('#batchPromotionForm')[0].reset();
            $('#batchProductIdsInput').val(null).trigger('change');
            $('#batchFormErrorMessage').hide();
            $('#batchInfoMessage').hide();
            $('.input-group-outline').removeClass('is-filled is-focused');
            if (typeof updateInputLabels === 'function') {
                setTimeout(function() {
                    updateInputLabels();
                }, 50);
            }
        });
    </script>
