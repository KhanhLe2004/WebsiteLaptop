@section Scripts {
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        const API_URL = 'http://localhost:5068/api/admin/sale-invoices';
        const PRODUCT_API_URL = 'http://localhost:5068/api/admin/products';
        let currentPage = 1;
        let pageSize = 10;
        let searchDebounceTimer = null;
        const SEARCH_DEBOUNCE_DELAY = 300;
        const currentEmployeeId = @Html.Raw(Json.Serialize(ViewBag.EmployeeId ?? ""));
        const currentEmployeeName = @Html.Raw(Json.Serialize(ViewBag.EmployeeName ?? ""));
        
        let productsList = [];
        let provincesList = [];
        let communesList = [];
        let provincesPromise = null;
        let communesCache = {};
        let detailRowIndex = 0;
        let appliedPromotion = null;
        let promotionDiscount = 0;
        let promotionShippingDiscount = 0;

        $(document).ready(function() {
            loadSaleInvoices();
            loadProvinces();

            // Tìm kiếm tự động
            $('#searchInput').on('input', function() {
                triggerAutoSearch();
            });

            // Lọc theo trạng thái
            $('#statusFilter').on('change', function() {
                triggerAutoSearch();
            });

            // Lọc theo ngày
            $('#dateFromInput, #dateToInput').on('change', function() {
                triggerAutoSearch();
            });

            // Reset địa chỉ khi đóng modal
            $('#createModal').on('hidden.bs.modal', function() {
                $('#provinceCodeDropdown').hide();
                $('#communeCodeDropdown').hide();
                $('#provinceCode').val('');
                $('#provinceCodeValue').val('');
                $('#provinceCode').closest('.input-group-outline').removeClass('is-filled');
                $('#communeCode').val('');
                $('#communeCodeValue').val('');
                $('#communeCode').prop('disabled', true);
                $('#communeCode').closest('.input-group-outline').removeClass('is-filled');
                $('#addressDetailInput').val('');
                $('#deliveryAddressInput').val('');
                communesList = [];
            });

            // Xử lý label cho Material Dashboard inputs
            window.updateInputLabels = function() {
                $('.input-group-outline input, .input-group-outline select').each(function() {
                    const $input = $(this);
                    const value = $input.val();
                    if (value && value.trim() !== '') {
                        $input.closest('.input-group-outline').addClass('is-filled');
                    } else {
                        $input.closest('.input-group-outline').removeClass('is-filled');
                    }
                });
            };

            $(document).on('input change', '.input-group-outline input, .input-group-outline select', function() {
                const $input = $(this);
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $input.closest('.input-group-outline').addClass('is-filled');
                } else {
                    $input.closest('.input-group-outline').removeClass('is-filled');
                }
            });

            $(document).on('focus', '.input-group-outline input, .input-group-outline select', function() {
                $(this).closest('.input-group-outline').addClass('is-focused');
            });

            $(document).on('blur', '.input-group-outline input, .input-group-outline select', function() {
                const $input = $(this);
                const $group = $input.closest('.input-group-outline');
                $group.removeClass('is-focused');
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $group.addClass('is-filled');
                } else {
                    $group.removeClass('is-filled');
                }
            });
        });

        function triggerAutoSearch() {
            currentPage = 1;
            if (searchDebounceTimer) {
                clearTimeout(searchDebounceTimer);
            }
            searchDebounceTimer = setTimeout(() => {
                loadSaleInvoices();
            }, SEARCH_DEBOUNCE_DELAY);
        }

        // Hàm xóa bộ lọc ngày
        function clearDateFilters() {
            $('#dateFromInput').val('').removeAttr('value').removeAttr('data-has-input');
            $('#dateToInput').val('').removeAttr('value').removeAttr('data-has-input');
            updateInputLabels();
            triggerAutoSearch();
        }

        // Xử lý input date để hiển thị dd/mm/yyyy khi có giá trị
        $(document).on('input change', 'input[type="date"]', function() {
            const $input = $(this);
            const value = $input.val();
            if (value && value.trim() !== '') {
                $input.attr('value', value).attr('data-has-input', 'true');
            } else {
                $input.removeAttr('value').removeAttr('data-has-input');
            }
        });

        // Xử lý khi focus vào input date
        $(document).on('focus', 'input[type="date"]', function() {
            const $input = $(this);
            const value = $input.val();
            if (value && value.trim() !== '') {
                $input.attr('data-has-input', 'true');
            }
        });

        // Xử lý khi blur khỏi input date
        $(document).on('blur', 'input[type="date"]', function() {
            const $input = $(this);
            const value = $input.val();
            if (!value || value.trim() === '') {
                $input.removeAttr('data-has-input');
            } else {
                $input.attr('value', value).attr('data-has-input', 'true');
            }
        });

        // Load danh sách hóa đơn
        function loadSaleInvoices(page = currentPage) {
            currentPage = page;
            const searchTerm = $('#searchInput').val().trim();
            const statusFilter = $('#statusFilter').val();
            const dateFrom = $('#dateFromInput').val();
            const dateTo = $('#dateToInput').val();

            const dataParams = {
                pageNumber: currentPage,
                pageSize: pageSize,
                searchTerm: searchTerm
            };

            if (statusFilter !== '') {
                dataParams.status = statusFilter;
            }

            if (dateFrom) {
