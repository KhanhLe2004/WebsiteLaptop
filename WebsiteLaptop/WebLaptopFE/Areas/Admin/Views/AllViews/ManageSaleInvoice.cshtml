            // Lấy tất cả thời gian bảo hành từ các sản phẩm
            const warrantyPeriods = details
                .map(d => d.warrantyPeriod || d.WarrantyPeriod)
                .filter(w => w != null && w !== undefined);

            if (warrantyPeriods.length === 0) {
                return '-';
            }

            // Kiểm tra xem tất cả có cùng thời gian bảo hành không
            const uniqueWarranties = [...new Set(warrantyPeriods)];
            
            if (uniqueWarranties.length === 1) {
                // Tất cả sản phẩm có cùng thời gian bảo hành
                return `${uniqueWarranties[0]} tháng`;
            } else {
                // Có nhiều thời gian bảo hành khác nhau
                return uniqueWarranties.map(w => `${w} tháng`).join(', ');
            }
        }

