                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadSaleInvoices(1)">1</a></li>`);
                if (startPage > 2) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
