@{
    ViewData["Title"] = "Quản lý hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-white text-capitalize ps-3 mb-0">Quản lý hóa đơn bán</h6>
                            <button type="button" class="btn btn-white btn-sm me-3" onclick="showCreateModal()">
                                <i class="material-icons text-sm">add</i> Thêm hóa đơn
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <!-- Bộ lọc và tìm kiếm -->
                    <div class="row mb-3 g-2 align-items-end">
                        <div class="col-lg-3 col-md-6">
                            <div class="input-group input-group-outline">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm hóa đơn...">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <select id="statusFilter" class="form-select">
                                <option value="">Tất cả trạng thái</option>
                                <option value="Chờ xử lý">Chờ xử lý</option>
                                <option value="Đang xử lý">Đang xử lý</option>
                                <option value="Chờ vận chuyển">Chờ vận chuyển</option>
                                <option value="Đang vận chuyển">Đang vận chuyển</option>
                                <option value="Hoàn thành">Hoàn thành</option>
                                <option value="Đã hủy">Đã hủy</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <div class="input-group input-group-outline">
                                <label class="form-label">Từ ngày</label>
                                <input type="date" id="dateFromInput" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <div class="input-group input-group-outline">
                                <label class="form-label">Đến ngày</label>
                                <input type="date" id="dateToInput" class="form-control">
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-3 d-flex align-items-end">
                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="clearDateFilters()" title="Xóa bộ lọc ngày" style="height: 40px; min-width: 40px; padding: 0; display: flex; align-items: center; justify-content: center;">
                                <i class="material-icons" style="font-size: 18px;">clear</i>
                            </button>
                        </div>
                    </div>

                    <!-- Bảng hóa đơn -->
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Mã hóa đơn</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 20%;">Khách hàng</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Nhân viên</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 12%;">Tổng tiền</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 12%;">Ngày tạo</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Trạng thái</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 11%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="invoiceTableBody">
                                <!-- Dữ liệu sẽ được load bằng AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p class="text-sm mb-0" id="pageInfo">Đang tải...</p>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-end mb-0" id="pagination">
                                    <!-- Phân trang sẽ được tạo bằng JavaScript -->
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xem chi tiết -->
