                selectedDiscountPromotions: selectedDiscountPromotion ? [selectedDiscountPromotion] : [],
                selectedFreeshipPromotions: selectedFreeshipPromotion ? [selectedFreeshipPromotion] : [],
                invoiceDetails: invoiceDetails,
