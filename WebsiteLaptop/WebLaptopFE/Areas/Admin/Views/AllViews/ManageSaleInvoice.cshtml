                    let promotionInfo = '';
                    if (response.promotionDetails && response.promotionDetails.length > 0) {
                        const discountPromotions = response.promotionDetails.filter(p => p.type === 'discount');
                        const freeshipPromotions = response.promotionDetails.filter(p => p.type === 'freeship');
                        
                        if (discountPromotions.length > 0) {
