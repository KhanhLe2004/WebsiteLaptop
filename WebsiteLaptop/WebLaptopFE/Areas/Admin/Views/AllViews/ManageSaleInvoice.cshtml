                            promotionInfo += '<strong>Khuyến mại vận chuyển:</strong><br>';
                            freeshipPromotions.forEach(promo => {
                                promotionInfo += `${promo.displayText}: -${formatCurrency(promo.discountAmount)}`;
                            });
