        // Lưu sản phẩm
        function saveProduct() {
            // Clear error message
            $('#errorMessage').hide();
            
            const isEdit = $('#isEditMode').val() === 'true';
            const productId = $('#productId').val().trim();

            if (!isEdit && !productId) {
                showError('Vui lòng nhập mã sản phẩm');
                $('#productId').focus();
                return;
            }

            const productName = $('#productName').val().trim();
            if (!productName) {
                showError('Vui lòng nhập tên sản phẩm');
                $('#productName').focus();
                return;
            }
            
            // Validate configurations - không cần validation nghiêm ngặt vì các trường đều optional
            // Chỉ kiểm tra nếu có điền thì phải hợp lệ (đã được xử lý trong filter khi gửi)

            const formData = new FormData();
            formData.append('ProductName', productName);
            formData.append('ProductModel', $('#productModel').val() || '');
            formData.append('BrandId', $('#brandId').val() || '');
            formData.append('OriginalSellingPrice', $('#originalSellingPrice').val() || '0');
            formData.append('SellingPrice', $('#sellingPrice').val() || '0');
            formData.append('WarrantyPeriod', $('#warrantyPeriod').val() || '0');
            formData.append('Screen', $('#screen').val() || '');
            formData.append('Camera', $('#camera').val() || '');
            formData.append('Connect', $('#connect').val() || '');
            formData.append('Weight', $('#weight').val() || '0');
            formData.append('Pin', $('#pin').val() || '');

            if (!isEdit) {
                formData.append('ProductId', productId);
            }

            const avatarFile = $('#avatarFile')[0].files[0];
            if (avatarFile) {
                formData.append('AvatarFile', avatarFile);
            }

            // Thêm configurations (tương tự như images)
            if (isEdit) {
                // Xử lý xóa Configurations (tương tự như xóa Images)
                if (configurationsToDelete.length > 0) {
                    formData.append('ConfigurationsToDeleteJson', JSON.stringify(configurationsToDelete));
                }

                // Xử lý thêm/Update Configurations (tương tự như thêm Images)
                // Lọc bỏ configurations có tất cả các trường đều rỗng
                const configsToSend = configurations
                    .filter(c => {
                        const hasCpu = c.cpu && c.cpu.trim() !== '';
                        const hasRam = c.ram && c.ram.trim() !== '';
                        const hasRom = c.rom && c.rom.trim() !== '';
                        const hasCard = c.card && c.card.trim() !== '';
                        const hasPrice = c.price && parseFloat(c.price) > 0;
                        const hasQuantity = c.quantity && parseInt(c.quantity) > 0;
                        return hasCpu || hasRam || hasRom || hasCard || hasPrice || hasQuantity;
                    })
                    .map(c => ({
                        configurationId: c.configurationId || null,
                        cpu: (c.cpu || '').trim(),
                        ram: (c.ram || '').trim(),
                        rom: (c.rom || '').trim(),
                        card: (c.card || '').trim(),
                        price: parseFloat(c.price) || 0,
                        quantity: parseInt(c.quantity) || 0
                    }));
                
                // Chỉ gửi ConfigurationsJson nếu có configurations hợp lệ
                if (configsToSend.length > 0) {
                    formData.append('ConfigurationsJson', JSON.stringify(configsToSend));
                }

                // Thêm images to delete
                if (imagesToDelete.length > 0) {
                    formData.append('ImagesToDeleteJson', JSON.stringify(imagesToDelete));
                }
            } else {
                // Khi tạo mới, chỉ gửi nếu có configurations hợp lệ
                if (configurations && configurations.length > 0) {
                    const configsToSend = configurations
                        .filter(c => {
                            const hasCpu = c.cpu && c.cpu.trim() !== '';
                            const hasRam = c.ram && c.ram.trim() !== '';
                            const hasRom = c.rom && c.rom.trim() !== '';
                            const hasCard = c.card && c.card.trim() !== '';
                            const hasPrice = c.price && parseFloat(c.price) > 0;
                            const hasQuantity = c.quantity && parseInt(c.quantity) > 0;
                            return hasCpu || hasRam || hasRom || hasCard || hasPrice || hasQuantity;
                        })
                        .map(c => ({
                            cpu: (c.cpu || '').trim(),
                            ram: (c.ram || '').trim(),
                            rom: (c.rom || '').trim(),
                            card: (c.card || '').trim(),
                            price: parseFloat(c.price) || 0,
                            quantity: parseInt(c.quantity) || 0
                        }));
                    if (configsToSend.length > 0) {
                        const configsJson = JSON.stringify(configsToSend);
                        formData.append('ConfigurationsJson', configsJson);
                        console.log('Create - ConfigurationsJson:', configsJson);
                    }
                }
            }

            // Thêm product images từ newImageFiles array
            if (newImageFiles && newImageFiles.length > 0) {
                newImageFiles.forEach(function(imageObj) {
                    if (imageObj && imageObj.file) {
                        // Validate file type
                        if (!imageObj.file.type || !imageObj.file.type.startsWith('image/')) {
                            return;
                        }
                        // Validate file size (max 5MB)
                        if (imageObj.file.size > 5 * 1024 * 1024) {
                            return;
                        }
                        formData.append('ImageFiles', imageObj.file);
                    }
                });
            }

            const url = isEdit ? `${API_URL}/${productId}` : API_URL;
            const method = isEdit ? 'PUT' : 'POST';

            $.ajax({
                url: url,
                type: method,
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    showNotification(isEdit ? 'Cập nhật sản phẩm thành công' : 'Thêm sản phẩm thành công', 'success');
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('productModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadProducts();
                },
                error: function(xhr) {
                    console.error('Error saving product:', xhr);
                    console.error('Status:', xhr.status);
                    console.error('Status Text:', xhr.statusText);
                    console.error('Response Text:', xhr.responseText);
                    console.error('Response JSON:', xhr.responseJSON);
                    
                    let message = 'Có lỗi xảy ra khi lưu sản phẩm';
                    let errorDetails = '';
                    
                    if (xhr.responseJSON) {
                        if (xhr.responseJSON.message) {
                            message = xhr.responseJSON.message;
                        }
                        if (xhr.responseJSON.error) {
                            errorDetails += '<br><small style="color: #dc3545;">' + xhr.responseJSON.error + '</small>';
                        }
                        if (xhr.responseJSON.details) {
                            errorDetails += '<br><small style="color: #6c757d; font-size: 0.8em;">' + 
                                xhr.responseJSON.details.substring(0, 500).replace(/\n/g, '<br>') + '</small>';
                        }
                        if (xhr.responseJSON.errors) {
                            const errors = xhr.responseJSON.errors;
                            const errorMessages = Object.values(errors).flat();
                            errorDetails += '<br>' + errorMessages.join('<br>');
                        }
                    } else if (xhr.responseText) {
                        try {
                            const errorObj = JSON.parse(xhr.responseText);
                            message = errorObj.message || errorObj.error || message;
                            if (errorObj.details) {
                                errorDetails += '<br><small style="color: #6c757d;">' + 
                                    errorObj.details.substring(0, 300) + '</small>';
                            }
                        } catch (e) {
                            errorDetails = '<br><small>' + xhr.responseText.substring(0, 200) + '</small>';
                        }
                    }
                    
                    if (xhr.status) {
                        errorDetails += '<br><small style="color: #6c757d;">HTTP Status: ' + xhr.status + 
                            (xhr.statusText ? ' ' + xhr.statusText : '') + '</small>';
                    }
                    
                    showError(message + errorDetails);
                    // Scroll to error message
                    if ($('#errorMessage').length > 0) {
                        $('#errorMessage')[0].scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    }
                }
            });
        }

