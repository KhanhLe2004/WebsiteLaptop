        // ========== Xử lý Product Images ==========
        
        // Preview product images
        function previewProductImages(input) {
            const previewContainer = $('#productImagesPreview');
            
            // Kiểm tra view mode
            const firstInput = $('#productForm input:not([type="hidden"])').first();
            const isViewMode = firstInput.length > 0 ? firstInput.prop('disabled') || false : false;
            
            // Nếu ở view mode, không cho phép thêm ảnh
            if (isViewMode) {
                $(input).val('');
                return;
            }
            
            // Xóa message "chưa có ảnh" nếu có
            previewContainer.find('.col-12 p.text-muted').remove();
            
            if (input.files && input.files.length > 0) {
                const files = Array.from(input.files);
                
                files.forEach((file, fileIndex) => {
                    // Validate file type
                    if (!file.type.startsWith('image/')) {
                        showNotification('File không phải là ảnh: ' + file.name, 'error');
                        return;
                    }
                    
                    // Validate file size (max 5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        showNotification('Ảnh quá lớn (tối đa 5MB): ' + file.name, 'error');
                        return;
                    }
                    
                    // Tạo unique ID cho file (dùng timestamp + random để đảm bảo unique)
                    const fileId = 'new_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9) + '_' + fileIndex;
                    
                    // Kiểm tra xem file đã được thêm chưa (tránh trùng lặp)
                    const isDuplicate = newImageFiles.some(img => 
                        img.name === file.name && 
                        img.file.size === file.size && 
                        img.file.lastModified === file.lastModified
                    );
                    
                    if (isDuplicate) {
                        showNotification('Ảnh đã được thêm: ' + file.name, 'error');
                        return;
                    }
                    
                    // Thêm file vào mảng newImageFiles
                    newImageFiles.push({
                        id: fileId,
                        file: file,
                        name: file.name
                    });
                    
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        // Kiểm tra xem element đã tồn tại chưa (tránh duplicate)
                        if ($(`.new-image-preview[data-file-id="${fileId}"]`).length > 0) {
                            return;
                        }
                        
                        const imageHtml = `
                            <div class="col-md-3 mb-2 new-image-preview" data-file-id="${fileId}">
                                <div class="card position-relative">
                                    <img src="${e.target.result}" class="card-img-top" style="height: 150px; object-fit: cover;">
                                    <button type="button" 
                                            class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1" 
                                            onclick="removeNewImage('${fileId}')"
                                            title="Xóa ảnh">
                                        <i class="material-icons text-sm">close</i>
                                    </button>
                                    <div class="card-body p-2">
                                        <small class="text-muted d-block" style="font-size: 0.75rem; word-break: break-word; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="${file.name}">${file.name}</small>
                                        <small class="text-info">Ảnh mới</small>
                                    </div>
                                </div>
                            </div>
                        `;
                        previewContainer.append(imageHtml);
                    };
                    reader.onerror = function() {
                        showNotification('Lỗi khi đọc file: ' + file.name, 'error');
                        // Xóa file khỏi mảng nếu có lỗi
                        newImageFiles = newImageFiles.filter(img => img.id !== fileId);
                    };
                    reader.readAsDataURL(file);
                });
                
                // Reset file input để có thể chọn lại file cùng tên
                $(input).val('');
            }
        }
        
        // Xóa ảnh mới được chọn
        function removeNewImage(fileId) {
            // Kiểm tra view mode
            const firstInput = $('#productForm input:not([type="hidden"])').first();
            const isViewMode = firstInput.length > 0 ? firstInput.prop('disabled') || false : false;
            if (isViewMode) {
                return;
            }
            
            // Xóa khỏi mảng newImageFiles
            newImageFiles = newImageFiles.filter(img => img.id !== fileId);
            
            // Xóa khỏi DOM
            $(`.new-image-preview[data-file-id="${fileId}"]`).remove();
            
            // Nếu không còn ảnh nào, hiển thị message
            const previewContainer = $('#productImagesPreview');
            if (newImageFiles.length === 0 && 
                (!existingImages || existingImages.length === 0 || 
                 existingImages.every(img => imagesToDelete.includes(img.imageId)))) {
                if (previewContainer.find('.existing-image').length === 0 && 
                    previewContainer.find('.new-image-preview').length === 0) {
                    previewContainer.append(`
                        <div class="col-12">
                            <p class="text-muted text-sm mb-0">Chưa có ảnh nào. Chọn ảnh để thêm.</p>
                        </div>
                    `);
                }
            }
        }
        
        // Render lại các ảnh mới đã chọn (dùng khi edit sản phẩm)
        function renderNewImages() {
            const previewContainer = $('#productImagesPreview');
            
            // Kiểm tra view mode
            const firstInput = $('#productForm input:not([type="hidden"])').first();
            const isViewMode = firstInput.length > 0 ? firstInput.prop('disabled') || false : false;
            
            // Xóa các new-image-preview cũ
            previewContainer.find('.new-image-preview').remove();
            
            // Render lại từ mảng newImageFiles
            newImageFiles.forEach(function(imageObj) {
                if (imageObj && imageObj.file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const imageHtml = `
                            <div class="col-md-3 mb-2 new-image-preview" data-file-id="${imageObj.id}">
                                <div class="card position-relative">
                                    <img src="${e.target.result}" class="card-img-top" style="height: 150px; object-fit: cover;">
                                    ${!isViewMode ? `
                                    <button type="button" 
                                            class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1" 
                                            onclick="removeNewImage('${imageObj.id}')"
                                            title="Xóa ảnh">
                                        <i class="material-icons text-sm">close</i>
                                    </button>
                                    ` : ''}
                                    <div class="card-body p-2">
                                        <small class="text-muted d-block" style="font-size: 0.75rem; word-break: break-word; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="${imageObj.name}">${imageObj.name}</small>
                                        <small class="text-info">Ảnh mới</small>
                                    </div>
                                </div>
                            </div>
                        `;
                        previewContainer.append(imageHtml);
                    };
                    reader.readAsDataURL(imageObj.file);
                }
            });
        }

        // Render existing product images
        function renderProductImages() {
            const previewContainer = $('#productImagesPreview');
            
            // Kiểm tra view mode - nếu không có input nào trong form thì chưa load
            const firstInput = $('#productForm input:not([type="hidden"])').first();
            const isViewMode = firstInput.length > 0 ? firstInput.prop('disabled') || false : false;
            
            // Xóa các existing images cũ để render lại (KHÔNG xóa new-image-preview)
            previewContainer.find('.existing-image').remove();
            
            // Xóa message "không có ảnh" nếu có
            previewContainer.find('.col-12 p.text-muted').remove();
            
            // Hiển thị ảnh hiện có
            if (existingImages && existingImages.length > 0) {
                const visibleImages = existingImages.filter(img => !imagesToDelete.includes(img.imageId));
                if (visibleImages.length > 0) {
                    visibleImages.forEach((image, index) => {
                        const imgSrc = `${IMAGE_BASE_URL}/${image.imageUrl || image.imageId}`;
                        const fallbackSrc = `${IMAGE_BASE_URL}/default-laptop.jpg`;
                        const imageHtml = `
                            <div class="col-md-3 mb-2 existing-image" data-image-id="${image.imageId}">
                                <div class="card position-relative">
                                    <img src="${imgSrc}" 
                                         class="card-img-top" 
                                         style="height: 150px; object-fit: cover;"
                                         onerror="this.src='${fallbackSrc}'">
                                    ${!isViewMode ? `
                                    <button type="button" 
                                            class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1" 
                                            onclick="removeExistingImage('${image.imageId}')"
                                            title="Xóa ảnh">
                                        <i class="material-icons text-sm">close</i>
                                    </button>
                                    ` : ''}
                                    <div class="card-body p-2">
                                        <small class="text-muted">Ảnh hiện có</small>
                                    </div>
                                </div>
                            </div>
                        `;
                        previewContainer.append(imageHtml);
                    });
                }
            }
            
            // Hiển thị message nếu không có ảnh nào (chỉ khi view mode hoặc không có ảnh mới)
            if ((!existingImages || existingImages.length === 0 || 
                 existingImages.every(img => imagesToDelete.includes(img.imageId))) &&
                (!newImageFiles || newImageFiles.length === 0)) {
                if (previewContainer.find('.existing-image').length === 0 && 
                    previewContainer.find('.new-image-preview').length === 0) {
                    if (isViewMode) {
                        previewContainer.append(`
                            <div class="col-12">
                                <p class="text-muted text-sm mb-0">Không có ảnh nào.</p>
                            </div>
                        `);
                    } else {
                        previewContainer.append(`
                            <div class="col-12">
                                <p class="text-muted text-sm mb-0">Chưa có ảnh nào. Chọn ảnh để thêm.</p>
                            </div>
                        `);
                    }
                }
            }
        }

        // Xóa ảnh hiện có
        function removeExistingImage(imageId) {
            // Kiểm tra view mode - ngăn chặn xóa khi đang xem
            const firstInput = $('#productForm input:not([type="hidden"])').first();
            const isViewMode = firstInput.length > 0 ? firstInput.prop('disabled') || false : false;
            if (isViewMode) {
                return;
            }
            
            if (!imagesToDelete.includes(imageId)) {
                imagesToDelete.push(imageId);
            }
            $(`.existing-image[data-image-id="${imageId}"]`).remove();
        }

        // Reset khi đóng modal
        $(document).on('hidden.bs.modal', '#productModal', function() {
            // Xóa class view-mode
            $('#productModal .modal-content').removeClass('view-mode');
            
            // Reset file inputs
            $('#productImageFiles').val('');
            $('#avatarFile').val('');
            
            // Clear previews
            $('#imagePreview').hide();
            $('#productImagesPreview').empty();
            
            // Reset data
            configurations = [];
            configurationsToDelete = [];
            existingImages = [];
            imagesToDelete = [];
            newImageFiles = [];
            
            // Reset form
            $('#productForm')[0].reset();
            $('#errorMessage').hide();
            
            // Remove is-filled classes
            $('.input-group-outline').removeClass('is-filled');
            
            // Enable all controls để sẵn sàng cho lần mở tiếp theo
            $('#productForm input:not([type="hidden"]), #productForm select').prop('disabled', false);
            $('#productForm input[type="file"]').prop('disabled', false).css('pointer-events', 'auto');
            $('.modal-footer .btn-primary').show();
            $('#btnAddConfiguration').show();
            
            // Reset các nút xóa
            $('.configuration-item button, .existing-image button').css({
                'display': '',
                'visibility': '',
                'pointer-events': '',
                'opacity': ''
            });
        });
    </script>
