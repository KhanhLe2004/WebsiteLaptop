@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutManageProduct.cshtml";
}



<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h6 class="text-white text-capitalize ps-3 d-inline-block">Quản lý sản phẩm</h6>
                        <button class="btn btn-sm btn-light float-end me-3" onclick="openAddModal()">
                            <i class="material-icons text-sm">add</i> Thêm sản phẩm
                        </button>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <!-- Bộ lọc và tìm kiếm -->
                    <div class="row mb-3 g-2 align-items-end">
                        <div class="col-lg-3 col-md-4">
                            <div class="input-group input-group-outline">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm sản phẩm...">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <select id="brandFilter" class="form-select">
                                <option value="">Tất cả thương hiệu</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <select id="activeFilter" class="form-select">
                                <option value="true" selected>Đang bán</option>
                                <option value="false">Ngừng bán</option>
                                <option value="">Tất cả trạng thái</option>
                            </select>
                        </div>
                    </div>

                    <!-- Bảng sản phẩm -->
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 30%;">Sản phẩm</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 20%;">Thông tin</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Giá</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Thương hiệu</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 20%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="productTableBody">
                                <!-- Dữ liệu sẽ được load bằng AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p class="text-sm mb-0" id="pageInfo">Đang tải...</p>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-end mb-0" id="pagination">
                                    <!-- Phân trang sẽ được tạo bằng JavaScript -->
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm/Sửa Sản phẩm -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
                <h5 class="modal-title text-white" id="productModalLabel">Thêm sản phẩm mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productForm">
                    <input type="hidden" id="isEditMode" value="false">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Mã sản phẩm *</label>
                                <input type="text" class="form-control" id="productId" required readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Tên sản phẩm *</label>
                                <input type="text" class="form-control" id="productName" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Model</label>
                                <input type="text" class="form-control" id="productModel">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <select class="form-select" id="brandId">
                                    <option value="">-- Chọn thương hiệu --</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Giá gốc (VNĐ)</label>
                                <input type="number" class="form-control" id="originalSellingPrice" step="1000">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Giá bán (VNĐ)</label>
                                <input type="number" class="form-control" id="sellingPrice" step="1000">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Bảo hành (tháng)</label>
                                <input type="number" class="form-control" id="warrantyPeriod">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Màn hình</label>
                                <input type="text" class="form-control" id="screen">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Camera</label>
                                <input type="text" class="form-control" id="camera">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Kết nối</label>
                                <input type="text" class="form-control" id="connect">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Trọng lượng (kg)</label>
                                <input type="number" class="form-control" id="weight" step="0.01">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Pin</label>
                                <input type="text" class="form-control" id="pin">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="avatarFile" class="form-label">Ảnh đại diện sản phẩm</label>
                                <input type="file" class="form-control" id="avatarFile" accept="image/*" onchange="previewImage(this)">
                                <img id="imagePreview" class="preview-image" style="display:none;">
                            </div>
                        </div>
                    </div>

                    <!-- Quản lý Cấu hình sản phẩm -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header bg-gradient-info">
                                    <h6 class="text-white mb-0">Cấu hình sản phẩm</h6>
                                    <button type="button" class="btn btn-sm btn-light float-end" id="btnAddConfiguration" onclick="addConfiguration()">
                                        <i class="material-icons text-sm">add</i> Thêm cấu hình
                                    </button>
                                </div>
                                <div class="card-body">
                                    <div id="configurationsContainer">
                                        <!-- Configurations sẽ được thêm động ở đây -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quản lý Ảnh sản phẩm -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header bg-gradient-success">
                                    <h6 class="text-white mb-0">Ảnh sản phẩm</h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="productImageFiles" class="form-label">Chọn nhiều ảnh</label>
                                        <input type="file" class="form-control" id="productImageFiles" accept="image/*" multiple onchange="previewProductImages(this)">
                                    </div>
                                    <div id="productImagesPreview" class="row g-2">
                                        <!-- Ảnh hiện tại và preview sẽ hiển thị ở đây -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-danger mb-3" id="errorMessage" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveProduct()">
                    <i class="material-icons text-sm">save</i> Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận ngừng bán -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-danger">
                <h5 class="modal-title text-white" id="deleteModalLabel">Xác nhận ngừng bán</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteModalMessage">Bạn có chắc chắn muốn ngừng bán sản phẩm <strong id="deleteProductName"></strong>?</p>
                <p class="text-warning text-sm mb-0">Sản phẩm sẽ bị ẩn khỏi danh sách đang bán nhưng có thể khôi phục sau.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                    <i class="material-icons text-sm">delete</i> Ngừng bán
                </button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const API_URL = 'http://localhost:5068/api/admin/products';
        const API_BASE_URL = API_URL.replace(/\/api\/admin\/products$/, '');
        const IMAGE_BASE_URL = `${API_BASE_URL}/image`;
        let currentPage = 1;
        let pageSize = 10;
        let deleteProductId = '';
        let searchDebounceTimer = null;
        const SEARCH_DEBOUNCE_DELAY = 300;

        $(document).ready(function() {
            loadBrands();
            loadProducts();

            // Tìm kiếm tự động theo tên
            $('#searchInput').on('input', function() {
                triggerAutoSearch();
            });

            // Tìm kiếm tự động theo thương hiệu
            $('#brandFilter').on('change', function() {
                triggerAutoSearch();
            });

            // Tìm kiếm tự động theo trạng thái active
            $('#activeFilter').on('change', function() {
                triggerAutoSearch();
            });
        });

        function triggerAutoSearch() {
            currentPage = 1;
            if (searchDebounceTimer) {
                clearTimeout(searchDebounceTimer);
            }
            searchDebounceTimer = setTimeout(() => {
                loadProducts();
            }, SEARCH_DEBOUNCE_DELAY);
        }

        // Load danh sách thương hiệu
        function loadBrands() {
            $.ajax({
                url: API_URL + '/brands',
                type: 'GET',
                success: function(data) {
                    const brandSelect = $('#brandId');
                    const brandFilter = $('#brandFilter');
                    
                    brandSelect.empty().append('<option value="">-- Chọn thương hiệu --</option>');
                    brandFilter.empty().append('<option value="">Tất cả thương hiệu</option>');
                    
                    $.each(data, function(index, brand) {
                        brandSelect.append(`<option value="${brand.brandId}">${brand.brandName}</option>`);
                        brandFilter.append(`<option value="${brand.brandId}">${brand.brandName}</option>`);
                    });
                },
                error: function(xhr) {
                    console.error('Lỗi khi tải thương hiệu:', xhr);
                }
            });
        }

        // Load danh sách sản phẩm
        function loadProducts(page = currentPage) {
            currentPage = page;
            const searchTerm = $('#searchInput').val().trim();
            const brandId = $('#brandFilter').val();
            const activeFilter = $('#activeFilter').val();

            const dataParams = {
                pageNumber: currentPage,
                pageSize: pageSize,
                searchTerm: searchTerm,
                brandId: brandId
            };

            // Chỉ thêm active vào params nếu có giá trị
            if (activeFilter !== '') {
                dataParams.active = activeFilter === 'true';
            }

            $.ajax({
                url: API_URL,
                type: 'GET',
                data: dataParams,
                success: function(response) {
                    displayProducts(response.items);
                    displayPagination(response);
                    updatePageInfo(response);
                },
                error: function(xhr) {
                    console.error('Lỗi khi tải sản phẩm:', xhr);
                    showNotification('Lỗi khi tải dữ liệu sản phẩm', 'error');
                }
            });
        }

        // Hiển thị sản phẩm
        function displayProducts(products) {
            const tbody = $('#productTableBody');
            tbody.empty();

            if (products.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="5" class="text-center text-secondary py-4">
                            Không có sản phẩm nào
                        </td>
                    </tr>
                `);
                return;
            }

            $.each(products, function(index, product) {
                const avatar = product.avatar ? `${IMAGE_BASE_URL}/${product.avatar}` : `${IMAGE_BASE_URL}/default-laptop.jpg`;
                const originalPrice = product.originalSellingPrice ? 
                    new Intl.NumberFormat('vi-VN').format(product.originalSellingPrice) + ' đ' : '-';
                const sellingPrice = product.sellingPrice ? 
                    new Intl.NumberFormat('vi-VN').format(product.sellingPrice) + ' đ' : '-';
                const brandName = product.brandName || '-';
                const isActive = product.active !== false; // Mặc định true nếu không có giá trị
                const activeBadge = isActive 
                    ? '<span class="badge bg-gradient-success">Đang bán</span>' 
                    : '<span class="badge bg-gradient-danger">Ngừng bán</span>';
                const productNameEscaped = (product.productName || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');

                // Nút thao tác khác nhau tùy theo active
                let actionButtons = '';
                if (isActive) {
                    // Sản phẩm đang bán: có nút Xem, Sửa, Xóa
                    actionButtons = `
                        <button class="btn btn-info action-btn" onclick='viewProduct("${product.productId}")' title="Xem">
                            <i class="material-icons text-sm">visibility</i>
                        </button>
                        <button class="btn btn-warning action-btn" onclick='editProduct("${product.productId}")' title="Sửa">
                            <i class="material-icons text-sm">edit</i>
                        </button>
                        <button class="btn btn-danger action-btn" onclick='deleteProduct("${product.productId}", "${productNameEscaped}")' title="Ngừng bán">
                            <i class="material-icons text-sm">delete</i>
                        </button>
                    `;
                } else {
                    // Sản phẩm ngừng bán: có nút Xem, Khôi phục
                    actionButtons = `
                        <button class="btn btn-info action-btn" onclick='viewProduct("${product.productId}")' title="Xem">
                            <i class="material-icons text-sm">visibility</i>
                        </button>
                        <button class="btn btn-success action-btn" onclick='restoreProduct("${product.productId}", "${productNameEscaped}")' title="Khôi phục">
                            <i class="material-icons text-sm">restore</i>
                        </button>
                    `;
                }

                tbody.append(`
                    <tr style="height: 80px;" class="${!isActive ? 'table-secondary' : ''}">
                        <td style="vertical-align: middle;">
                            <div class="d-flex px-2 py-1">
                                <div>
                                    <img src="${avatar}" class="product-image me-3" alt="${product.productName}" onerror="this.src='${IMAGE_BASE_URL}/default-laptop.jpg'">
                                </div>
                                <div class="d-flex flex-column justify-content-center" style="min-width: 0; flex: 1;">
                                    <h6 class="mb-0 text-sm" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">${product.productName}</h6>
                                    <p class="text-xs text-secondary mb-0">${product.productId}</p>
                                </div>
                            </div>
                        </td>
                        <td style="vertical-align: middle;">
                            <p class="text-xs font-weight-bold mb-0" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">${product.productModel || '-'}</p>
                            <p class="text-xs text-secondary mb-0" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">${product.screen || '-'}</p>
                            ${activeBadge}
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <span class="badge badge-price bg-gradient-success">${sellingPrice}</span>
                            ${product.originalSellingPrice && product.originalSellingPrice > product.sellingPrice ? 
                                `<br><small class="text-muted text-decoration-line-through">${originalPrice}</small>` : ''}
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <span class="text-xs font-weight-bold" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: inline-block; max-width: 100%;">${brandName}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;" class="table-actions">
                            ${actionButtons}
                        </td>
                    </tr>
                `);
            });
        }

        // Hiển thị phân trang
        function displayPagination(response) {
            const pagination = $('#pagination');
            pagination.empty();

            if (response.totalPages <= 1) return;

            // Nút Previous
            pagination.append(`
                <li class="page-item ${response.hasPreviousPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadProducts(${currentPage - 1})">
                        <i class="material-icons text-sm">chevron_left</i>
                    </a>
                </li>
            `);

            // Các trang
            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(response.totalPages, currentPage + 2);

            if (startPage > 1) {
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadProducts(1)">1</a></li>`);
                if (startPage > 2) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                pagination.append(`
                    <li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="javascript:void(0)" onclick="loadProducts(${i})">${i}</a>
                    </li>
                `);
            }

            if (endPage < response.totalPages) {
                if (endPage < response.totalPages - 1) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadProducts(${response.totalPages})">${response.totalPages}</a></li>`);
            }

            // Nút Next
            pagination.append(`
                <li class="page-item ${response.hasNextPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadProducts(${currentPage + 1})">
                        <i class="material-icons text-sm">chevron_right</i>
                    </a>
                </li>
            `);
        }

        // Cập nhật thông tin trang
        function updatePageInfo(response) {
            const start = (response.pageNumber - 1) * response.pageSize + 1;
            const end = Math.min(response.pageNumber * response.pageSize, response.totalItems);
            $('#pageInfo').text(`Hiển thị ${start} - ${end} trong tổng số ${response.totalItems} sản phẩm`);
        }

        // Biến lưu trữ configurations và images
        let configurations = [];
        let configurationsToDelete = []; // Lưu trữ các configurationId cần xóa (tương tự imagesToDelete)
        let existingImages = [];
        let imagesToDelete = [];
        let newImageFiles = []; // Lưu trữ các file ảnh mới được chọn

        // Mở modal thêm sản phẩm
        function openAddModal() {
            $('#isEditMode').val('false');
            $('#productModalLabel').text('Thêm sản phẩm mới');
            
            // Reset form
            $('#productForm')[0].reset();
            $('#productId').val('');
            $('#productName').val('');
            $('#productModel').val('');
            $('#brandId').val('');
            $('#originalSellingPrice').val('');
            $('#sellingPrice').val('');
            $('#warrantyPeriod').val('');
            $('#screen').val('');
            $('#camera').val('');
            $('#connect').val('');
            $('#weight').val('');
            $('#pin').val('');
            
            // Reset file inputs
            $('#avatarFile').val('');
            $('#productImageFiles').val('');
            
            // Reset preview
            $('#imagePreview').hide();
            $('#productImagesPreview').empty();
            $('#errorMessage').hide();
            
            // Reset configurations và images
            configurations = [];
            configurationsToDelete = [];
            existingImages = [];
            imagesToDelete = [];
            newImageFiles = [];
            renderConfigurations();
            renderProductImages();
            
            // Remove is-filled class from all input groups
            $('.input-group-outline').removeClass('is-filled');
            
            // Enable all controls
            setViewMode(false);
            $('#productId').prop('disabled', false).prop('readonly', true); // Readonly khi thêm mới
            $('.modal-footer .btn-primary').show();
            
            // Lấy ProductId tự động
            $.ajax({
                url: `${API_URL}/next-id`,
                type: 'GET',
                success: function(response) {
                    if (response && response.productId) {
                        $('#productId').val(response.productId);
                        // Trigger change để update is-filled class
                        $('#productId').trigger('change');
                        // Add is-filled class
                        $('#productId').closest('.input-group-outline').addClass('is-filled');
                    }
                },
                error: function(xhr) {
                    console.error('Error getting next product ID:', xhr);
                    // Nếu API lỗi, vẫn có thể tự nhập (remove readonly)
                    $('#productId').prop('readonly', false);
                }
            });
            
            const modal = new bootstrap.Modal(document.getElementById('productModal'));
            modal.show();
        }
        
        // Thiết lập chế độ xem/chỉnh sửa
        function setViewMode(isViewMode) {
            const modalContent = $('#productModal .modal-content');
            
            if (isViewMode) {
                // Thêm class view-mode để áp dụng CSS
                modalContent.addClass('view-mode');
                
                // Disable tất cả inputs và selects trong form chính
                $('#productForm input:not([type="hidden"]):not([type="file"]), #productForm select').prop('disabled', true);
                $('#productForm input[type="file"]').prop('disabled', true).css('pointer-events', 'none');
                
                // Ẩn nút thêm cấu hình
