    </div>
</div>

@section Scripts {
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        const API_URL = 'http://localhost:5068/api/admin/warranties';
        let currentPage = 1;
        let pageSize = 10;
        let searchDebounceTimer = null;
        const SEARCH_DEBOUNCE_DELAY = 300;
        let deleteWarrantyId = null;
        let customersList = [];
        let employeesList = [];
        let serialsList = [];
        
        // Lấy thông tin nhân viên đang đăng nhập (sử dụng Json.Encode để tránh lỗi encoding và escape JavaScript)
        const currentEmployeeId = @Html.Raw(Json.Serialize(ViewBag.EmployeeId ?? ""));
        const currentEmployeeName = @Html.Raw(Json.Serialize(ViewBag.EmployeeName ?? ""));

        $(document).ready(function() {
            loadWarranties();
            loadEmployees();

            // Tìm kiếm tự động
            $('#searchInput').on('input', function() {
                triggerAutoSearch();
            });

            // Lọc theo trạng thái
            $('#statusFilter').on('change', function() {
                currentPage = 1;
                loadWarranties();
            });

            // Xử lý label cho Material Dashboard inputs
            window.updateInputLabels = function() {
                $('.input-group-outline input, .input-group-outline select, .input-group-outline textarea').each(function() {
                    const $input = $(this);
                    const value = $input.val();
                    if (value && value.trim() !== '') {
                        $input.closest('.input-group-outline').addClass('is-filled');
                    } else {
                        $input.closest('.input-group-outline').removeClass('is-filled');
                    }
                });
            };

            $(document).on('input change', '.input-group-outline input, .input-group-outline select, .input-group-outline textarea', function() {
                const $input = $(this);
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $input.closest('.input-group-outline').addClass('is-filled');
                } else {
                    $input.closest('.input-group-outline').removeClass('is-filled');
                }
            });

            $(document).on('focus', '.input-group-outline input, .input-group-outline select, .input-group-outline textarea', function() {
                $(this).closest('.input-group-outline').addClass('is-focused');
            });

            $(document).on('blur', '.input-group-outline input, .input-group-outline select, .input-group-outline textarea', function() {
                const $input = $(this);
                const $group = $input.closest('.input-group-outline');
                $group.removeClass('is-focused');
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $group.addClass('is-filled');
                } else {
                    $group.removeClass('is-filled');
                }
            });
        });

        function triggerAutoSearch() {
            currentPage = 1;
            if (searchDebounceTimer) {
                clearTimeout(searchDebounceTimer);
            }
            searchDebounceTimer = setTimeout(() => {
                loadWarranties();
            }, SEARCH_DEBOUNCE_DELAY);
        }

        // Load danh sách bảo hành
        function loadWarranties(page = currentPage) {
            currentPage = page;
            const searchTerm = $('#searchInput').val().trim();
            const status = $('#statusFilter').val();

            const dataParams = {
                pageNumber: currentPage,
                pageSize: pageSize,
                searchTerm: searchTerm || null,
                status: status || null
            };

            $.ajax({
                url: API_URL,
                type: 'GET',
                data: dataParams,
                success: function(response) {
                    displayWarranties(response.items);
                    displayPagination(response);
                    updatePageInfo(response);
                },
                error: function(xhr) {
                    console.error('Lỗi khi tải bảo hành:', xhr);
                    showNotification('Lỗi khi tải dữ liệu bảo hành', 'error');
                }
            });
        }

        // Hiển thị bảo hành
        function displayWarranties(warranties) {
            const tbody = $('#warrantyTableBody');
            tbody.empty();

            if (warranties.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="8" class="text-center text-secondary py-4">
                            Không có bảo hành nào
                        </td>
                    </tr>
                `);
                return;
            }

            $.each(warranties, function(index, warranty) {
                const totalAmount = warranty.totalAmount ? formatCurrency(warranty.totalAmount) : '0';
                const statusBadge = getStatusBadge(warranty.status);

                tbody.append(`
                    <tr>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${warranty.warrantyId}</span>
                        </td>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${warranty.customerName || '-'}</span>
                        </td>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${warranty.serialId || '-'}</span>
                        </td>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${(() => {
                                let productDisplay = warranty.productName || '-';
                                if (warranty.productModel) {
                                    productDisplay = `${warranty.productName || ''} - ${warranty.productModel}`;
                                }
                                return productDisplay;
                            })()}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <span class="text-xs font-weight-bold">${warranty.type || '-'}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            ${statusBadge}
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <span class="text-xs font-weight-bold">${totalAmount}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;" class="table-actions">
                            <button class="btn btn-info action-btn" onclick='viewWarranty("${warranty.warrantyId}")' title="Xem">
                                <i class="material-icons text-sm">visibility</i>
                            </button>
                            <button class="btn btn-warning action-btn" onclick='editWarranty("${warranty.warrantyId}")' title="Sửa">
                                <i class="material-icons text-sm">edit</i>
                            </button>
                            <button class="btn btn-danger action-btn" onclick='deleteWarranty("${warranty.warrantyId}")' title="Xóa">
                                <i class="material-icons text-sm">delete</i>
                            </button>
                        </td>
                    </tr>
                `);
            });
        }

        // Lấy badge trạng thái
        function getStatusBadge(status) {
            if (!status) return '<span class="badge bg-secondary">-</span>';
            
            const statusMap = {
                'Chờ xử lý': 'bg-info',
                'Đang xử lý': 'bg-warning',
                'Hoàn thành': 'bg-success',
                'Đã hủy': 'bg-danger'
            };
            
            const badgeClass = statusMap[status] || 'bg-secondary';
            return `<span class="badge ${badgeClass}">${status}</span>`;
        }

        // Hiển thị phân trang
        function displayPagination(response) {
            const pagination = $('#pagination');
            pagination.empty();

            if (response.totalPages <= 1) return;

            pagination.append(`
                <li class="page-item ${response.hasPreviousPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadWarranties(${currentPage - 1})">
                        <i class="material-icons text-sm">chevron_left</i>
                    </a>
                </li>
            `);

            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(response.totalPages, currentPage + 2);

            if (startPage > 1) {
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadWarranties(1)">1</a></li>`);
                if (startPage > 2) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                pagination.append(`
                    <li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="javascript:void(0)" onclick="loadWarranties(${i})">${i}</a>
                    </li>
                `);
            }

            if (endPage < response.totalPages) {
                if (endPage < response.totalPages - 1) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadWarranties(${response.totalPages})">${response.totalPages}</a></li>`);
            }

            pagination.append(`
                <li class="page-item ${response.hasNextPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadWarranties(${currentPage + 1})">
                        <i class="material-icons text-sm">chevron_right</i>
                    </a>
                </li>
            `);
        }

        // Cập nhật thông tin trang
        function updatePageInfo(response) {
            const start = (response.pageNumber - 1) * response.pageSize + 1;
            const end = Math.min(response.pageNumber * response.pageSize, response.totalItems);
            $('#pageInfo').text(`Hiển thị ${start} - ${end} trong tổng số ${response.totalItems} bảo hành`);
        }

        // Xem chi tiết bảo hành
        function viewWarranty(warrantyId) {
            $.ajax({
                url: `${API_URL}/${warrantyId}`,
                type: 'GET',
                success: function(warranty) {
                    const totalAmount = warranty.totalAmount ? formatCurrency(warranty.totalAmount) : '0';
                    const statusBadge = getStatusBadge(warranty.status);

                    let html = `
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Mã bảo hành:</strong> ${warranty.warrantyId}
                            </div>
                            <div class="col-md-6">
                                <strong>Trạng thái:</strong> ${statusBadge}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Khách hàng:</strong> ${warranty.customerName || '-'}
                            </div>
                            <div class="col-md-6">
                                <strong>Số điện thoại:</strong> ${warranty.phoneNumber || '-'}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Serial:</strong> ${warranty.serialId || '-'}
                            </div>
                            <div class="col-md-6">
                                <strong>Sản phẩm:</strong> ${(() => {
                                    let productDisplay = warranty.productName || '-';
                                    if (warranty.productModel) {
                                        productDisplay = `${warranty.productName || ''} - ${warranty.productModel}`;
                                    }
                                    return productDisplay;
                                })()}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Cấu hình:</strong> ${warranty.specifications || '-'}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Nhân viên:</strong> ${warranty.employeeName || '-'}
                            </div>
                            <div class="col-md-6">
                                <strong>Loại:</strong> ${warranty.type || '-'}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Tổng tiền:</strong> ${totalAmount}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Nội dung chi tiết:</strong>
                                <p class="mt-2">${warranty.contentDetail || '-'}</p>
                            </div>
                        </div>
                    `;

                    $('#viewModalBody').html(html);
                    const modal = new bootstrap.Modal(document.getElementById('viewModal'));
                    modal.show();
                },
                error: function(xhr) {
                    console.error('Error loading warranty:', xhr);
                    showNotification('Lỗi khi tải thông tin bảo hành', 'error');
                }
            });
        }

        // Tạo ID tự động
        function generateNextWarrantyId() {
            $.ajax({
                url: API_URL,
                type: 'GET',
                data: { pageNumber: 1, pageSize: 1000 },
                success: function(response) {
                    let nextId = 'WA001';
                    if (response.items && response.items.length > 0) {
                        let maxNumber = 0;
                        response.items.forEach(function(item) {
                            const id = item.warrantyId;
                            if (id && id.startsWith('WA') && id.length === 5) {
                                const number = parseInt(id.substring(2)) || 0;
                                maxNumber = Math.max(maxNumber, number);
                            }
                        });
                        nextId = 'WA' + String(maxNumber + 1).padStart(3, '0');
                    }
                    $('#warrantyIdInput').val(nextId);
                    updateInputLabels();
                },
                error: function() {
                    $('#warrantyIdInput').val('WA001');
                    updateInputLabels();
                }
            });
        }

        // Tìm khách hàng theo số điện thoại
        function searchCustomerByPhone() {
            const phoneNumber = $('#phoneNumberInput').val().trim();
            
            if (!phoneNumber) {
                $('#customerIdInput').val('');
                $('#customerNameInput').val('');
                $('#serialIdInput').empty().append('<option value=""></option>');
                updateInputLabels();
                return;
            }

            $.ajax({
                url: `${API_URL}/customer-by-phone/${encodeURIComponent(phoneNumber)}`,
                type: 'GET',
                success: function(response) {
                    if (response && response.customerId) {
                        $('#customerIdInput').val(response.customerId);
                        $('#customerNameInput').val(response.customerName || '');
                        
                        // Populate serial dropdown
                        const serialSelect = $('#serialIdInput');
                        serialSelect.empty();
                        serialSelect.append('<option value=""></option>');
                        
                        if (response.serials && response.serials.length > 0) {
                            response.serials.forEach(function(serial) {
                                const serialId = serial.serialId || serial.SerialId;
                                const displayName = serial.displayName || serial.DisplayName || serialId;
                                serialSelect.append(`<option value="${serialId}">${displayName}</option>`);
                            });
                        }
                        
                        serialSelect.trigger('change');
                        
                        updateInputLabels();
                        showNotification('Đã tìm thấy khách hàng', 'success');
                    } else {
                        $('#customerIdInput').val('');
                        $('#customerNameInput').val('');
                        $('#serialIdInput').empty().append('<option value=""></option>');
                        updateInputLabels();
                    }
                },
                error: function(xhr) {
                    console.error('Error searching customer:', xhr);
                    $('#customerIdInput').val('');
                    $('#customerNameInput').val('');
                    $('#serialIdInput').empty().append('<option value=""></option>');
                    updateInputLabels();
                    
                    if (xhr.status === 404) {
                        showNotification('Không tìm thấy khách hàng với số điện thoại này', 'error');
                    } else {
                        showNotification('Lỗi khi tìm kiếm khách hàng', 'error');
                    }
                }
            });
        }

        // Hiển thị modal thêm mới
        function showCreateModal() {
            $('#createEditModalLabel').text('Thêm bảo hành');
            $('#warrantyForm')[0].reset();
            $('#warrantyId').val('');
            $('#customerIdInput').val('');
            $('#warrantyIdInput').val('');
            $('#warrantyIdInput').prop('readonly', true);
            $('#phoneNumberInput').val('');
            $('#customerNameInput').val('');
            $('#serialIdInput').empty().append('<option value="">-</option>');
            $('#formErrorMessage').hide();
            
            generateNextWarrantyId();
            // Tự động set nhân viên đang đăng nhập khi thêm mới
            populateEmployeeSelect(currentEmployeeId || '');
            populateSerialSelect();

            const modal = new bootstrap.Modal(document.getElementById('createEditModal'));
            modal.show();
        }

        // Sửa bảo hành
        function editWarranty(warrantyId) {
            $.ajax({
                url: `${API_URL}/${warrantyId}`,
                type: 'GET',
                success: function(warranty) {
                    $('#createEditModalLabel').text('Sửa bảo hành');
                    $('#warrantyId').val(warranty.warrantyId);
                    $('#warrantyIdInput').val(warranty.warrantyId);
                    $('#warrantyIdInput').prop('readonly', true);
                    $('#customerIdInput').val(warranty.customerId || '');
                    
                    // Lưu các giá trị cần set sau khi populate
                    const savedEmployeeId = warranty.employeeId || '';
                    const savedType = warranty.type || '';
                    const savedStatus = warranty.status || '';
                    const savedContentDetail = warranty.contentDetail || '';
                    const savedTotalAmount = warranty.totalAmount || '';
                    const savedSerialId = warranty.serialId || '';
                    
                    // Populate employee select với EmployeeId từ dữ liệu (giữ nguyên nhân viên đã tạo)
                    populateEmployeeSelect(savedEmployeeId);
                    
                    // Load thông tin khách hàng và serial nếu có customerId
                    if (warranty.customerId) {
                        loadCustomerInfoForEdit(warranty.customerId, savedSerialId, function() {
                            // Set lại các giá trị sau khi load customer info xong
                            setTimeout(function() {
                                $('#typeInput').val(savedType);
                                $('#statusInput').val(savedStatus);
                                $('#contentDetailInput').val(savedContentDetail);
                                $('#totalAmountInput').val(savedTotalAmount);
                                updateInputLabels();
                            }, 100);
                        });
                    } else {
                        $('#phoneNumberInput').val('');
                        $('#customerNameInput').val('');
                        $('#serialIdInput').val(savedSerialId);
                        populateSerialSelect();
                        
                        // Set lại các giá trị sau khi populate xong
                        setTimeout(function() {
                            $('#typeInput').val(savedType);
                            $('#statusInput').val(savedStatus);
                            $('#contentDetailInput').val(savedContentDetail);
                            $('#totalAmountInput').val(savedTotalAmount);
                            updateInputLabels();
                        }, 200);
                    }

                    $('#formErrorMessage').hide();

                    const modal = new bootstrap.Modal(document.getElementById('createEditModal'));
                    modal.show();
                },
                error: function(xhr) {
                    console.error('Error loading warranty:', xhr);
                    showNotification('Lỗi khi tải thông tin bảo hành', 'error');
                }
            });
        }

        // Load thông tin khách hàng cho chức năng edit
        function loadCustomerInfoForEdit(customerId, selectedSerialId, callback) {
            $.ajax({
                url: `${API_URL}/customer/${encodeURIComponent(customerId)}/with-serials`,
                type: 'GET',
                success: function(response) {
                    if (response && response.customerId) {
                        $('#phoneNumberInput').val(response.phoneNumber || '');
                        $('#customerNameInput').val(response.customerName || '');
                        $('#customerIdInput').val(response.customerId);
                        
                        // Populate serial dropdown
                        const serialSelect = $('#serialIdInput');
                        serialSelect.empty();
                        serialSelect.append('<option value=""></option>');
                        
                        if (response.serials && response.serials.length > 0) {
                            response.serials.forEach(function(serial) {
                                const serialId = serial.serialId || serial.SerialId;
                                const displayName = serial.displayName || serial.DisplayName || serialId;
                                const selected = serialId === selectedSerialId ? 'selected' : '';
                                serialSelect.append(`<option value="${serialId}" ${selected}>${displayName}</option>`);
                            });
                        } else {
                            // Nếu không có serial, vẫn set giá trị nếu có
                            if (selectedSerialId) {
                                serialSelect.append(`<option value="${selectedSerialId}" selected>${selectedSerialId}</option>`);
                            }
                        }
                        
                        // Đảm bảo serial được chọn đúng
                        if (selectedSerialId) {
                            serialSelect.val(selectedSerialId).trigger('change');
                        } else {
                            serialSelect.trigger('change');
                        }
                        
                        updateInputLabels();
                        
                        // Gọi callback nếu có
                        if (callback && typeof callback === 'function') {
                            callback();
                        }
                    } else {
                        $('#serialIdInput').val(selectedSerialId || '');
                        populateSerialSelect();
                        if (callback && typeof callback === 'function') {
                            callback();
                        }
                    }
                },
                error: function(xhr) {
                    console.error('Error loading customer info:', xhr);
                    $('#serialIdInput').val(selectedSerialId || '');
                    populateSerialSelect();
                    if (callback && typeof callback === 'function') {
                        callback();
                    }
                }
            });
        }

        // Load danh sách khách hàng
        function loadCustomers() {
            $.ajax({
                url: `${API_URL}/customers`,
                type: 'GET',
                success: function(response) {
                    customersList = response || [];
                    populateCustomerSelect();
                },
                error: function(xhr) {
                    console.error('Error loading customers:', xhr);
                }
            });
        }

        // Populate combobox khách hàng
        function populateCustomerSelect() {
            const select = $('#customerIdInput');
            select.empty();
            select.append('<option value=""></option>');
            
            if (customersList && customersList.length > 0) {
                customersList.forEach(function(customer) {
                    const customerId = customer.customerId || customer.CustomerId;
                    const customerName = customer.customerName || customer.CustomerName || customerId;
                    select.append(`<option value="${customerId}">${customerName}</option>`);
                });
            }
            
            select.trigger('change');
        }

        // Load danh sách nhân viên
        function loadEmployees() {
            $.ajax({
                url: `${API_URL}/employees`,
                type: 'GET',
                success: function(response) {
                    employeesList = response || [];
                    populateEmployeeSelect();
                },
                error: function(xhr) {
                    console.error('Error loading employees:', xhr);
                }
            });
        }

        // Populate combobox nhân viên
        function populateEmployeeSelect(selectedId = '') {
            const select = $('#employeeIdInput');
            select.empty();
            select.append('<option value=""></option>');
            
            if (employeesList && employeesList.length > 0) {
                employeesList.forEach(function(employee) {
                    const employeeId = employee.employeeId || employee.EmployeeId;
                    const employeeName = employee.employeeName || employee.EmployeeName || employeeId;
                    const selected = (selectedId && employeeId === selectedId) ? 'selected' : '';
                    select.append(`<option value="${employeeId}" ${selected}>${employeeName}</option>`);
                });
            }
            
            // Nếu không có selectedId và đang thêm mới, tự động chọn nhân viên đang đăng nhập
            if (!selectedId && currentEmployeeId) {
                select.val(currentEmployeeId).trigger('change');
            } else if (selectedId) {
                select.val(selectedId).trigger('change');
            } else {
                select.trigger('change');
            }
        }

        // Load danh sách serial
        function loadSerials() {
            $.ajax({
                url: `${API_URL}/serials`,
                type: 'GET',
                success: function(response) {
                    serialsList = response || [];
                    populateSerialSelect();
                },
                error: function(xhr) {
                    console.error('Error loading serials:', xhr);
                }
            });
        }

        // Populate combobox serial
        function populateSerialSelect() {
            const select = $('#serialIdInput');
            select.empty();
            select.append('<option value=""></option>');
            
            if (serialsList && serialsList.length > 0) {
                serialsList.forEach(function(serial) {
                    const serialId = serial.serialId || serial.SerialId;
                    const displayName = serial.displayName || serial.DisplayName || serialId;
                    select.append(`<option value="${serialId}">${displayName}</option>`);
                });
            }
            
            select.trigger('change');
        }

        // Lưu bảo hành
        function saveWarranty() {
            $('#formErrorMessage').hide();

            let warrantyId = $('#warrantyIdInput').val().trim();
            const customerId = $('#customerIdInput').val().trim();
            const serialId = $('#serialIdInput').val().trim();
            // Lấy EmployeeId từ select hoặc từ biến global nếu không có
            let employeeId = $('#employeeIdInput').val().trim();
            if (!employeeId && currentEmployeeId) {
                employeeId = currentEmployeeId;
            }
            const type = $('#typeInput').val().trim();
            const contentDetail = $('#contentDetailInput').val().trim();
            const status = $('#statusInput').val().trim();
            const totalAmount = parseFloat($('#totalAmountInput').val()) || 0;

            const isEdit = $('#warrantyId').val() !== '';
            
            if (!isEdit && !warrantyId) {
                warrantyId = null;
            }

            const phoneNumber = $('#phoneNumberInput').val().trim();
            
            if (!phoneNumber) {
                showFormError('Vui lòng nhập số điện thoại');
                return;
            }
            
            if (!customerId) {
                showFormError('Không tìm thấy khách hàng. Vui lòng kiểm tra lại số điện thoại');
                return;
            }
            
            if (!type) {
                showFormError('Vui lòng chọn loại');
                return;
            }
            
            if (!status) {
                showFormError('Vui lòng chọn trạng thái');
                return;
            }

            const url = isEdit ? `${API_URL}/${warrantyId}` : API_URL;
            const method = isEdit ? 'PUT' : 'POST';

            const data = {
                warrantyId: warrantyId || null,
                customerId: customerId || null,
                serialId: serialId || null,
                employeeId: employeeId || null,
                type: type || null,
                contentDetail: contentDetail || null,
                status: status,
                totalAmount: totalAmount
            };

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    showNotification(isEdit ? 'Cập nhật bảo hành thành công' : 'Thêm bảo hành thành công', 'success');
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('createEditModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadWarranties();
                },
                error: function(xhr) {
                    console.error('Error saving warranty:', xhr);
                    let message = 'Có lỗi xảy ra khi lưu bảo hành';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showFormError(message);
                }
            });
        }

        // Xóa bảo hành
        function deleteWarranty(warrantyId) {
            deleteWarrantyId = warrantyId;
            $('#deleteWarrantyId').text(warrantyId);
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Xác nhận xóa
        function confirmDelete() {
            if (!deleteWarrantyId) return;

            $.ajax({
                url: `${API_URL}/${deleteWarrantyId}`,
                type: 'DELETE',
                success: function(response) {
                    showNotification('Xóa bảo hành thành công', 'success');
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadWarranties();
                    deleteWarrantyId = null;
                },
                error: function(xhr) {
                    console.error('Error deleting warranty:', xhr);
                    let message = 'Có lỗi xảy ra khi xóa bảo hành';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showNotification(message, 'error');
                }
            });
        }

        // Hiển thị thông báo
        function showNotification(message, type) {
            const bgColor = type === 'success' ? 'bg-gradient-success' : 'bg-gradient-danger';
            const notification = $(
                `<div class="alert ${bgColor} text-white alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>`
            );
            $('body').append(notification);
            setTimeout(() => notification.alert('close'), 3000);
        }

        // Hiển thị lỗi trong form
        function showFormError(message) {
            $('#formErrorMessage').html(message).show();
        }

        // Format tiền tệ
        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        }

        // Reset khi đóng modal
        $(document).on('hidden.bs.modal', '#createEditModal', function() {
            $('#warrantyForm')[0].reset();
            $('#warrantyId').val('');
            $('#warrantyIdInput').prop('readonly', false);
            $('#formErrorMessage').hide();
            $('.input-group-outline').removeClass('is-filled is-focused');
            if (typeof updateInputLabels === 'function') {
                setTimeout(function() {
                    updateInputLabels();
                }, 50);
            }
        });
    </script>
}

