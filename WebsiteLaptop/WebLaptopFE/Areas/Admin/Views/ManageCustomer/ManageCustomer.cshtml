        // Sửa khách hàng
        function editCustomer(customerId) {
            $.ajax({
                url: `${API_URL}/${customerId}`,
                type: 'GET',
                success: function(customer) {
                    $('#isEditMode').val('true');
                    $('#customerModalLabel').text('Cập nhật khách hàng');
                    
                    // Reset form trước
                    $('#customerForm')[0].reset();
                    
                    // Fill form với dữ liệu
                    fillFormWithCustomer(customer, false);
                    
                    // Disable customerId (không cho sửa mã) - set readonly
                    $('#customerId').prop('disabled', false).prop('readonly', true);
                    
                    // Enable edit mode (không phải view mode) - gọi sau khi fill form
                    setTimeout(function() {
                        setViewMode(false);
                        // Nếu khách hàng có username và có độ dài mật khẩu, hiển thị dấu * với độ dài thực
                        if (customer.username && customer.passwordLength && customer.passwordLength > 0) {
                            const passwordInput = $('#password');
                            passwordInput.attr('type', 'text').val('*'.repeat(customer.passwordLength));
                        }
                    }, 150);
                    
                    const modal = new bootstrap.Modal(document.getElementById('customerModal'));
                    modal.show();
                },
                error: function(xhr) {
                    console.error('Error loading customer:', xhr);
                    showNotification('Lỗi khi tải thông tin khách hàng', 'error');
                }
            });
        }

        // Điền dữ liệu vào form
        function fillFormWithCustomer(customer, viewOnly) {
            // Reset form trước
            $('#customerForm')[0].reset();
            
            // Fill basic info
            $('#customerId').val(customer.customerId || '');
            $('#customerName').val(customer.customerName || '');
            
            // Format date for input[type="date"]
            if (customer.dateOfBirth) {
                const date = new Date(customer.dateOfBirth);
                const year = date.getFullYear();
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const day = String(date.getDate()).padStart(2, '0');
                $('#dateOfBirth').val(`${year}-${month}-${day}`);
            } else {
                $('#dateOfBirth').val('');
            }
            
            $('#phoneNumber').val(customer.phoneNumber || '');
            $('#email').val(customer.email || '');
            $('#address').val(customer.address || '');
            $('#username').val(customer.username || '');
            // Không fill password vì lý do bảo mật
            // Sử dụng độ dài mật khẩu từ API (passwordLength) hoặc mặc định 8
            const passwordLength = customer.passwordLength || 8;
            $('#password').val('').data('password-length', passwordLength);
            
            // Nếu đang ở chế độ xem hoặc sửa và khách hàng có username (có mật khẩu)
            // thì hiển thị dấu * ngay lập tức với độ dài thực
            if (viewOnly || $('#isEditMode').val() === 'true') {
                if (customer.username && passwordLength > 0) {
                    // Có username và có độ dài mật khẩu, hiển thị dấu * với độ dài thực
                    setTimeout(function() {
                        const passwordInput = $('#password');
                        passwordInput.attr('type', 'text').val('*'.repeat(passwordLength));
                    }, 100);
                }
            }
            
            // Trigger change để update is-filled class
            $('#email').trigger('change');

            // Add is-filled class to input groups with values
            setTimeout(function() {
                $('.input-group-outline input, .input-group-outline select').each(function() {
                    if ($(this).val()) {
                        $(this).closest('.input-group-outline').addClass('is-filled');
                    } else {
                        $(this).closest('.input-group-outline').removeClass('is-filled');
                    }
                });
            }, 100);

            // Load avatar
            if (customer.avatar) {
                const avatarUrl = `${IMAGE_BASE_URL}/${customer.avatar}`;
                $('#imagePreview').attr('src', avatarUrl).show();
            } else {
                $('#imagePreview').hide();
            }
            
            // Set view mode SAU KHI render (chỉ set nếu viewOnly, không set khi edit)
            if (viewOnly) {
                // Disable form inputs
                $('#customerForm input:not([type="hidden"]):not([type="file"]), #customerForm select').prop('disabled', true);
                $('#customerForm input[type="file"]').prop('disabled', true).css('pointer-events', 'none');
                $('.modal-footer .btn-primary').hide();
                // Clear file inputs khi view
                $('#avatarFile').val('');
            }
            
            // Clear avatar file input (luôn clear)
            $('#avatarFile').val('');

            $('#errorMessage').hide();
        }

        // Preview ảnh
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    $('#imagePreview').attr('src', e.target.result).show();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Lưu khách hàng (chỉ cập nhật, không tạo mới)
        function saveCustomer() {
            // Clear error message
            $('#errorMessage').hide();
            
            const isEdit = $('#isEditMode').val() === 'true';
            const customerId = $('#customerId').val().trim();

            if (!isEdit) {
                showError('Chức năng thêm khách hàng đã bị vô hiệu hóa');
                return;
            }

            if (!customerId) {
                showError('Không tìm thấy mã khách hàng');
                return;
            }

            const customerName = $('#customerName').val().trim();
            if (!customerName) {
                showError('Vui lòng nhập tên khách hàng');
                $('#customerName').focus();
                return;
            }

            const formData = new FormData();
            formData.append('CustomerName', customerName);
            formData.append('DateOfBirth', $('#dateOfBirth').val() || '');
            formData.append('PhoneNumber', $('#phoneNumber').val() || '');
            formData.append('Email', $('#email').val() || '');
            formData.append('Address', $('#address').val() || '');
            formData.append('Username', $('#username').val() || '');
            
            // Chỉ gửi password nếu có giá trị (khi muốn đổi mật khẩu)
            const password = $('#password').val();
            if (password) {
                formData.append('Password', password);
            }

            const avatarFile = $('#avatarFile')[0].files[0];
            if (avatarFile) {
                formData.append('AvatarFile', avatarFile);
            }

            const url = `${API_URL}/${customerId}`;
            const method = 'PUT';

            $.ajax({
                url: url,
                type: method,
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    showNotification('Cập nhật khách hàng thành công', 'success');
                    
                    // Cập nhật passwordLength nếu có trong response
                    if (response && response.passwordLength !== undefined) {
                        $('#password').data('password-length', response.passwordLength);
                    } else if (password && password.length > 0) {
                        // Nếu không có trong response, sử dụng độ dài password vừa nhập
                        $('#password').data('password-length', password.length);
                    }
                    
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('customerModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadCustomers();
                },
                error: function(xhr) {
                    console.error('Error saving customer:', xhr);
                    console.error('Status:', xhr.status);
                    console.error('Status Text:', xhr.statusText);
                    console.error('Response Text:', xhr.responseText);
                    console.error('Response JSON:', xhr.responseJSON);
                    
                    let message = 'Có lỗi xảy ra khi lưu khách hàng';
                    let errorDetails = '';
                    
                    if (xhr.responseJSON) {
                        if (xhr.responseJSON.message) {
                            message = xhr.responseJSON.message;
                        }
                        if (xhr.responseJSON.error) {
                            errorDetails += '<br><small style="color: #dc3545;">' + xhr.responseJSON.error + '</small>';
                        }
                        if (xhr.responseJSON.details) {
                            errorDetails += '<br><small style="color: #6c757d; font-size: 0.8em;">' + 
                                xhr.responseJSON.details.substring(0, 500).replace(/\n/g, '<br>') + '</small>';
                        }
                        if (xhr.responseJSON.errors) {
                            const errors = xhr.responseJSON.errors;
                            const errorMessages = Object.values(errors).flat();
                            errorDetails += '<br>' + errorMessages.join('<br>');
                        }
                    } else if (xhr.responseText) {
                        try {
                            const errorObj = JSON.parse(xhr.responseText);
                            message = errorObj.message || errorObj.error || message;
                            if (errorObj.details) {
                                errorDetails += '<br><small style="color: #6c757d;">' + 
                                    errorObj.details.substring(0, 300) + '</small>';
                            }
                        } catch (e) {
                            errorDetails = '<br><small>' + xhr.responseText.substring(0, 200) + '</small>';
                        }
                    }
                    
                    if (xhr.status) {
                        errorDetails += '<br><small style="color: #6c757d;">HTTP Status: ' + xhr.status + 
                            (xhr.statusText ? ' ' + xhr.statusText : '') + '</small>';
                    }
                    
                    showError(message + errorDetails);
                    // Scroll to error message
                    if ($('#errorMessage').length > 0) {
                        $('#errorMessage')[0].scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    }
                }
            });
        }

        // Xóa khách hàng (khóa khách hàng - set active = false)
        function deleteCustomer(customerId, customerName) {
            deleteCustomerId = customerId;
            const customerNameEscaped = customerName.replace(/"/g, '&quot;').replace(/'/g, '&#39;');
            $('#deleteCustomerName').html(customerNameEscaped);
            $('#deleteModalLabel').text('Xác nhận khóa');
            $('#deleteModalMessage').html(`Bạn có chắc chắn muốn khóa khách hàng <strong>${customerNameEscaped}</strong>?`);
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Xác nhận xóa (khóa khách hàng)
        function confirmDelete() {
            $.ajax({
                url: `${API_URL}/${deleteCustomerId}`,
                type: 'DELETE',
                success: function(response) {
                    showNotification('Đã khóa khách hàng thành công', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    loadCustomers();
                },
                error: function(xhr) {
                    let message = 'Có lỗi xảy ra khi khóa khách hàng';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showNotification(message, 'error');
                }
            });
        }

        // Khôi phục khách hàng (set active = true)
        function restoreCustomer(customerId, customerName) {
            if (!confirm(`Bạn có chắc chắn muốn khôi phục khách hàng "${customerName}"?\nKhách hàng sẽ được hiển thị lại trong danh sách đang hoạt động.`)) {
                return;
            }

            $.ajax({
                url: `${API_URL}/${customerId}/restore`,
                type: 'POST',
                success: function(response) {
                    showNotification('Khôi phục khách hàng thành công', 'success');
                    loadCustomers();
                },
                error: function(xhr) {
                    let message = 'Có lỗi xảy ra khi khôi phục khách hàng';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showNotification(message, 'error');
                }
            });
        }

        // Hiển thị thông báo
        function showNotification(message, type) {
            const bgColor = type === 'success' ? 'bg-gradient-success' : 'bg-gradient-danger';
            const notification = $(`
                <div class="alert ${bgColor} text-white alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `);
            $('body').append(notification);
            setTimeout(() => notification.alert('close'), 3000);
        }

        // Hiển thị lỗi trong modal
        function showError(message) {
            $('#errorMessage').html(message).show();
        }

        // Reset khi đóng modal
        $(document).on('hidden.bs.modal', '#customerModal', function() {
            // Xóa class view-mode
            $('#customerModal .modal-content').removeClass('view-mode');
            
            // Reset file inputs
            $('#avatarFile').val('');
            
            // Clear previews
            $('#imagePreview').hide();
            
            // Reset form
            $('#customerForm')[0].reset();
            // Reset password về type="password" và clear data
            $('#password').attr('type', 'password').val('').data('password-length', 0);
            $('#errorMessage').hide();
            
            // Remove is-filled classes
            $('.input-group-outline').removeClass('is-filled');
            
            // Enable all controls để sẵn sàng cho lần mở tiếp theo
            $('#customerForm input:not([type="hidden"]), #customerForm select').prop('disabled', false);
            $('#customerForm input[type="file"]').prop('disabled', false).css('pointer-events', 'auto');
            $('.modal-footer .btn-primary').show();
        });
    </script>
}

