@{
    ViewData["Title"] = "Quản lý xuất hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutManageStockExport.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-white text-capitalize ps-3 mb-0">Quản lý xuất hàng</h6>
                            <button class="btn btn-light btn-sm me-3" onclick="showCreateModal()">
                                <i class="material-icons text-sm">add</i> Thêm mới
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <!-- Bộ lọc và tìm kiếm -->
                    <div class="row mb-3 g-2 align-items-end">
                        <div class="col-lg-4 col-md-6">
                            <div class="input-group input-group-outline">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm phiếu xuất hàng...">
                            </div>
                        </div>
                    </div>

                    <!-- Bảng phiếu xuất hàng -->
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 12%;">Mã phiếu xuất</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 18%;">Mã hóa đơn bán</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Nhân viên</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 12%;">Tổng số lượng</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Trạng thái</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 13%;">Ngày xuất</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="stockExportTableBody">
                                <!-- Dữ liệu sẽ được load bằng AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p class="text-sm mb-0" id="pageInfo">Đang tải...</p>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-end mb-0" id="pagination">
                                    <!-- Phân trang sẽ được tạo bằng JavaScript -->
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xem chi tiết -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-gradient-info">
                <h5 class="modal-title text-white" id="viewModalLabel">Chi tiết phiếu xuất hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="viewModalBody">
                <!-- Nội dung sẽ được load bằng JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm/Sửa -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-labelledby="createEditModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
                <h5 class="modal-title text-white" id="createEditModalLabel">Thêm phiếu xuất hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="StockExportForm">
                    <input type="hidden" id="StockExportId" value="">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Mã phiếu xuất</label>
                                <input type="text" class="form-control" id="StockExportIdInput" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Ngày xuất *</label>
                                <input type="datetime-local" class="form-control" id="timeInput" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Mã hóa đơn bán</label>
                                <div class="autocomplete-wrapper position-relative" style="width: 100%;">
                                    <input type="text" id="SaleInvoiceIdInput" class="form-control" autocomplete="off">
                                    <input type="hidden" id="SaleInvoiceIdValue" value="">
                                    <div id="SaleInvoiceIdDropdown" class="autocomplete-dropdown"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Nhân viên</label>
                                <input type="text" class="form-control" id="employeeIdInput" readonly>
                                <input type="hidden" id="employeeIdValue" value="@ViewBag.EmployeeId">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Trạng thái</label>
                                <select class="form-control" id="statusInput">
                                    <option value="Chờ xử lý">Chờ xử lý</option>
                                    <option value="Hoàn thành">Hoàn thành</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6>Chi tiết sản phẩm</h6>
                        <button type="button" class="btn btn-sm btn-primary" onclick="addDetailRow()">
                            <i class="material-icons text-sm">add</i> Thêm sản phẩm
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Thông số</th>
                                    <th>Số lượng</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="detailTableBody">
                                <!-- Chi tiết sẽ được thêm bằng JavaScript -->
                            </tbody>
                        </table>
                    </div>
                    <div class="text-danger mb-3" id="formErrorMessage" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveStockExport()">
                    <i class="material-icons text-sm">save</i> Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-danger">
                <h5 class="modal-title text-white" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa phiếu xuất hàng <strong id="deleteStockExportId"></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        const API_URL = 'http://localhost:5068/api/admin/stock-exports';
        let currentPage = 1;
        let pageSize = 10;
        let searchDebounceTimer = null;
        const SEARCH_DEBOUNCE_DELAY = 300;
         let deleteStockExportId = null;
         let detailRowIndex = 0;
         let SaleInvoicesList = [];
         let productsList = [];
         let originalDetails = null; // Lưu chi tiết ban đầu khi edit để so sánh
         
         // Lấy thông tin nhân viên đang đăng nhập (sử dụng Json.Encode để tránh lỗi encoding và escape JavaScript)
         const currentEmployeeId = @Html.Raw(Json.Serialize(ViewBag.EmployeeId ?? ""));
         const currentEmployeeName = @Html.Raw(Json.Serialize(ViewBag.EmployeeName ?? ""));

         $(document).ready(function() {
             loadStockExports();
             loadSaleInvoices();
             loadProducts();

            // Tìm kiếm tự động
            $('#searchInput').on('input', function() {
                triggerAutoSearch();
            });

            // Xử lý label cho Material Dashboard inputs
            window.updateInputLabels = function() {
                $('.input-group-outline input, .input-group-outline select').each(function() {
                    const $input = $(this);
                    const value = $input.val();
                    if (value && value.trim() !== '') {
                        $input.closest('.input-group-outline').addClass('is-filled');
                    } else {
                        $input.closest('.input-group-outline').removeClass('is-filled');
                    }
                });
            };

            $(document).on('input change', '.input-group-outline input, .input-group-outline select', function() {
                const $input = $(this);
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $input.closest('.input-group-outline').addClass('is-filled');
                } else {
                    $input.closest('.input-group-outline').removeClass('is-filled');
                }
            });

            $(document).on('focus', '.input-group-outline input, .input-group-outline select', function() {
                $(this).closest('.input-group-outline').addClass('is-focused');
            });

            $(document).on('blur', '.input-group-outline input, .input-group-outline select', function() {
                const $input = $(this);
                const $group = $input.closest('.input-group-outline');
                $group.removeClass('is-focused');
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $group.addClass('is-filled');
                } else {
                    $group.removeClass('is-filled');
                }
            });

            // Event delegation cho các nút thao tác
            $(document).on('click', '.action-btn[data-action="view"]', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const stockExportId = $(this).attr('data-id');
                console.log('View button clicked, ID:', stockExportId);
                if (stockExportId && typeof viewStockExport === 'function') {
                    viewStockExport(stockExportId);
                } else {
                    console.error('viewStockExport function not found or ID is empty');
                }
            });

            $(document).on('click', '.action-btn[data-action="edit"]', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const $btn = $(this);
                const stockExportId = $btn.attr('data-id');
                console.log('Edit button clicked');
                console.log('Button element:', $btn);
                console.log('StockExportId from data-id:', stockExportId);
                console.log('editStockExport function exists:', typeof editStockExport === 'function');
                
                if (!stockExportId) {
                    console.error('StockExportId is empty or undefined');
                    showNotification('Không tìm thấy mã phiếu xuất hàng', 'error');
                    return;
                }
                
                if (typeof editStockExport !== 'function') {
                    console.error('editStockExport function is not defined');
                    showNotification('Lỗi: Hàm sửa không được định nghĩa', 'error');
                    return;
                }
                
                try {
                    editStockExport(stockExportId);
                } catch (error) {
                    console.error('Error in editStockExport:', error);
                    showNotification('Lỗi khi mở form sửa: ' + (error.message || error), 'error');
                }
            });

            $(document).on('click', '.action-btn[data-action="delete"]', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const stockExportId = $(this).attr('data-id');
                console.log('Delete button clicked, ID:', stockExportId);
                if (stockExportId && typeof deleteStockExport === 'function') {
                    deleteStockExport(stockExportId);
                } else {
                    console.error('deleteStockExport function not found or ID is empty');
                }
            });
        });

        function triggerAutoSearch() {
            currentPage = 1;
            if (searchDebounceTimer) {
                clearTimeout(searchDebounceTimer);
            }
            searchDebounceTimer = setTimeout(() => {
                loadStockExports();
            }, SEARCH_DEBOUNCE_DELAY);
        }

        // Load danh sách phiếu xuất hàng
        function loadStockExports(page = currentPage) {
            currentPage = page;
            const searchTerm = $('#searchInput').val().trim();

            const dataParams = {
                pageNumber: currentPage,
                pageSize: pageSize,
                searchTerm: searchTerm
            };

            $.ajax({
                url: API_URL,
                type: 'GET',
                data: dataParams,
                success: function(response) {
                    displayStockExports(response.items);
                    displayPagination(response);
                    updatePageInfo(response);
                },
                error: function(xhr) {
                    console.error('Lỗi khi tải phiếu xuất hàng:', xhr);
                    showNotification('Lỗi khi tải dữ liệu phiếu xuất hàng', 'error');
                }
            });
        }

        // Hiển thị phiếu xuất hàng
        function displayStockExports(stockExports) {
            const tbody = $('#stockExportTableBody');
            tbody.empty();

            if (stockExports.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="7" class="text-center text-secondary py-4">
                            Không có phiếu xuất hàng nào
                        </td>
                    </tr>
                `);
                return;
            }

            $.each(stockExports, function(index, stockExport) {
                const time = stockExport.time ? new Date(stockExport.time).toLocaleString('vi-VN') : '-';
                const totalQuantity = stockExport.totalQuantity || 0;
                const status = stockExport.status || 'Chờ xử lý';
                const statusClass = status === 'Hoàn thành' ? 'badge bg-gradient-success' : 'badge bg-gradient-warning';
                const statusText = status === 'Hoàn thành' ? 'Hoàn thành' : 'Chờ xử lý';

                tbody.append(`
                    <tr>
                        <td style="vertical-align: middle;">
                            <span class="text-xs font-weight-bold">${stockExport.stockExportId}</span>
                        </td>
                         <td style="vertical-align: middle;">
                             <span class="text-xs font-weight-bold">${stockExport.saleInvoiceId || '-'}</span>
                         </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <span class="text-xs font-weight-bold">${stockExport.employeeName || '-'}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <span class="text-xs font-weight-bold">${totalQuantity}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <span class="${statusClass}">${statusText}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;">
                            <span class="text-xs font-weight-bold">${time}</span>
                        </td>
                        <td style="vertical-align: middle; text-align: center;" class="table-actions">
                            <button type="button" class="btn btn-info action-btn" data-action="view" data-id="${String(stockExport.stockExportId || '').replace(/"/g, '&quot;')}" title="Xem">
                                <i class="material-icons text-sm">visibility</i>
                            </button>
                            <button type="button" class="btn btn-warning action-btn" data-action="edit" data-id="${String(stockExport.stockExportId || '').replace(/"/g, '&quot;')}" title="Sửa">
                                <i class="material-icons text-sm">edit</i>
                            </button>
                            <button type="button" class="btn btn-danger action-btn" data-action="delete" data-id="${String(stockExport.stockExportId || '').replace(/"/g, '&quot;')}" title="Xóa">
                                <i class="material-icons text-sm">delete</i>
                            </button>
                        </td>
                    </tr>
                `);
            });
        }

        // Hiển thị phân trang
        function displayPagination(response) {
            const pagination = $('#pagination');
            pagination.empty();

            if (response.totalPages <= 1) return;

            pagination.append(`
                <li class="page-item ${response.hasPreviousPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadStockExports(${currentPage - 1})">
                        <i class="material-icons text-sm">chevron_left</i>
                    </a>
                </li>
            `);

            let startPage = Math.max(1, currentPage - 2);
            let endPage = Math.min(response.totalPages, currentPage + 2);

            if (startPage > 1) {
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadStockExports(1)">1</a></li>`);
                if (startPage > 2) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
            }

            for (let i = startPage; i <= endPage; i++) {
                pagination.append(`
                    <li class="page-item ${i === currentPage ? 'active' : ''}">
                        <a class="page-link" href="javascript:void(0)" onclick="loadStockExports(${i})">${i}</a>
                    </li>
                `);
            }

            if (endPage < response.totalPages) {
                if (endPage < response.totalPages - 1) {
                    pagination.append(`<li class="page-item disabled"><a class="page-link">...</a></li>`);
                }
                pagination.append(`<li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="loadStockExports(${response.totalPages})">${response.totalPages}</a></li>`);
            }

            pagination.append(`
                <li class="page-item ${response.hasNextPage ? '' : 'disabled'}">
                    <a class="page-link" href="javascript:void(0)" onclick="loadStockExports(${currentPage + 1})">
                        <i class="material-icons text-sm">chevron_right</i>
                    </a>
                </li>
            `);
        }

        // Cập nhật thông tin trang
        function updatePageInfo(response) {
            const start = (response.pageNumber - 1) * response.pageSize + 1;
            const end = Math.min(response.pageNumber * response.pageSize, response.totalItems);
            $('#pageInfo').text(`Hiển thị ${start} - ${end} trong tổng số ${response.totalItems} phiếu xuất hàng`);
        }

        // Xem chi tiết phiếu xuất hàng
        function viewStockExport(stockExportId) {
            $.ajax({
                url: `${API_URL}/${stockExportId}`,
                type: 'GET',
                success: function(stockExport) {
                    let html = `
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Mã phiếu xuất:</strong> ${stockExport.stockExportId}
                            </div>
                            <div class="col-md-6">
                                <strong>Ngày xuất:</strong> ${stockExport.time ? new Date(stockExport.time).toLocaleString('vi-VN') : '-'}
                            </div>
                        </div>
                         <div class="row mb-3">
                             <div class="col-md-6">
                                 <strong>Mã hóa đơn bán:</strong> ${stockExport.saleInvoiceId || '-'}
                             </div>
                            <div class="col-md-6">
                                <strong>Nhân viên:</strong> ${stockExport.employeeName || '-'}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>Tổng số lượng:</strong> ${stockExport.totalQuantity || 0}
                            </div>
                            <div class="col-md-6">
                                <strong>Trạng thái:</strong> 
                                <span class="${stockExport.status === 'Hoàn thành' ? 'badge bg-gradient-success' : 'badge bg-gradient-warning'}">
                                    ${stockExport.status || 'Chờ xử lý'}
                                </span>
                            </div>
                        </div>
                        <hr>
                        <h6>Chi tiết phiếu xuất hàng:</h6>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Thông số</th>
                                        <th style="text-align: center;">Số lượng</th>
                                    </tr>
                                </thead>
                                <tbody>
                    `;

                    if (stockExport.details && stockExport.details.length > 0) {
                        stockExport.details.forEach(function(detail) {
                            // Hiển thị productName - productModel hoặc chỉ productName nếu không có model
                            let productDisplay = detail.productName || detail.productId || '-';
                            if (detail.productModel) {
                                productDisplay = `${detail.productName || detail.productId} - ${detail.productModel}`;
                            }
                            html += `
                                <tr>
                                    <td style="word-wrap: break-word; overflow-wrap: break-word;">${productDisplay}</td>
                                    <td class="spec-cell">${detail.specifications || '-'}</td>
                                    <td style="text-align: center;">${detail.quantity || 0}</td>
                                </tr>
                            `;
                        });
                    } else {
                        html += '<tr><td colspan="3" class="text-center">Không có chi tiết</td></tr>';
                    }

                    html += `
                                </tbody>
                            </table>
                        </div>
                    `;

                    $('#viewModalBody').html(html);
                    const modal = new bootstrap.Modal(document.getElementById('viewModal'));
                    modal.show();
                },
                error: function(xhr) {
                    console.error('Error loading stock export:', xhr);
                    showNotification('Lỗi khi tải thông tin phiếu xuất hàng', 'error');
                }
            });
        }

        // Tạo ID tự động
        function generateNextStockExportId() {
            // Lấy tất cả ID để tìm số lớn nhất
            $.ajax({
                url: API_URL,
                type: 'GET',
                data: { pageNumber: 1, pageSize: 1000 }, // Lấy nhiều để tìm max
                success: function(response) {
                    let nextId = 'SE001';
                    if (response.items && response.items.length > 0) {
                        let maxNumber = 0;
                        response.items.forEach(function(item) {
                            const id = item.stockExportId;
                            if (id && id.startsWith('SE') && id.length === 5) {
                                const number = parseInt(id.substring(2)) || 0;
                                maxNumber = Math.max(maxNumber, number);
                            }
                        });
                        nextId = 'SE' + String(maxNumber + 1).padStart(3, '0');
                    }
                    $('#StockExportIdInput').val(nextId);
                    updateInputLabels();
                },
                error: function() {
