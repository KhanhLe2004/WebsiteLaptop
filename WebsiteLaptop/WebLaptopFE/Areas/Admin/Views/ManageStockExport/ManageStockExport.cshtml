         // Khởi tạo autocomplete cho SaleInvoices
         function initializeSaleInvoiceAutocomplete() {
             const saleInvoiceInput = $('#SaleInvoiceIdInput');
             const saleInvoiceValue = $('#SaleInvoiceIdValue');
             const dropdown = $('#SaleInvoiceIdDropdown');
             let selectedIndex = -1;
             let filteredSaleInvoices = [];

             function showDropdown(saleInvoices) {
                 if (!saleInvoices || saleInvoices.length === 0) {
                     dropdown.html('<div class="autocomplete-item" style="color: #6c757d; cursor: default;">Không tìm thấy hóa đơn bán</div>').show();
                     selectedIndex = -1;
                     return;
                 }

                 let html = '';
                 saleInvoices.forEach((saleInvoice, index) => {
                     const saleInvoiceId = saleInvoice.saleInvoiceId || saleInvoice.SaleInvoiceId;
                     const displayName = saleInvoice.displayName || saleInvoice.DisplayName || saleInvoiceId;
                     const displayNameEscaped = (displayName || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
                     html += `<div class="autocomplete-item" data-index="${index}" data-sale-invoice-id="${saleInvoiceId}" data-display-name="${displayNameEscaped}">${displayName}</div>`;
                 });
                 dropdown.html(html).show();
                 selectedIndex = -1;
             }

             function updateSelectedItem() {
                 $('#SaleInvoiceIdDropdown .autocomplete-item').removeClass('selected');
                 if (selectedIndex >= 0 && selectedIndex < filteredSaleInvoices.length) {
                     $('#SaleInvoiceIdDropdown .autocomplete-item').eq(selectedIndex).addClass('selected');
                 }
             }

             // Xử lý khi gõ
             saleInvoiceInput.off('input.saleinvoice').on('input.saleinvoice', function() {
                 const searchTerm = $(this).val().toLowerCase().trim();
                 
                 // Cập nhật class is-filled
                 if (searchTerm) {
                     $(this).closest('.input-group-outline').addClass('is-filled');
                 } else {
                     $(this).closest('.input-group-outline').removeClass('is-filled');
                 }
                 
                 if (searchTerm === '') {
                     dropdown.hide();
                     saleInvoiceValue.val('');
                     return;
                 }

                 const allSaleInvoices = window.allSaleInvoicesForSelect || [];
                 filteredSaleInvoices = allSaleInvoices.filter(saleInvoice => {
                     const displayName = (saleInvoice.displayName || saleInvoice.DisplayName || saleInvoice.saleInvoiceId || saleInvoice.SaleInvoiceId || '').toLowerCase();
                     return displayName.includes(searchTerm);
                 });

                 showDropdown(filteredSaleInvoices);
             });

             // Xử lý khi click vào item
             $(document).off('click.saleinvoice-item').on('click.saleinvoice-item', '#SaleInvoiceIdDropdown .autocomplete-item', function() {
                 const saleInvoiceId = $(this).data('sale-invoice-id');
                 const displayName = $(this).data('display-name');
                 
                 if (saleInvoiceId && displayName) {
                     saleInvoiceInput.val(displayName);
                     saleInvoiceValue.val(saleInvoiceId);
                     saleInvoiceInput.closest('.input-group-outline').addClass('is-filled');
                     dropdown.hide();
                 }
             });

             // Xử lý phím tắt
             saleInvoiceInput.off('keydown.saleinvoice').on('keydown.saleinvoice', function(e) {
                 if (dropdown.is(':visible') && filteredSaleInvoices.length > 0) {
                     if (e.key === 'ArrowDown') {
                         e.preventDefault();
                         selectedIndex = Math.min(selectedIndex + 1, filteredSaleInvoices.length - 1);
                         updateSelectedItem();
                     } else if (e.key === 'ArrowUp') {
                         e.preventDefault();
                         selectedIndex = Math.max(selectedIndex - 1, -1);
                         updateSelectedItem();
                     } else if (e.key === 'Enter') {
                         e.preventDefault();
                         if (selectedIndex >= 0 && selectedIndex < filteredSaleInvoices.length) {
                             const saleInvoice = filteredSaleInvoices[selectedIndex];
                             const displayName = saleInvoice.displayName || saleInvoice.DisplayName || saleInvoice.saleInvoiceId || saleInvoice.SaleInvoiceId;
                             saleInvoiceInput.val(displayName);
                             saleInvoiceValue.val(saleInvoice.saleInvoiceId || saleInvoice.SaleInvoiceId);
                             saleInvoiceInput.closest('.input-group-outline').addClass('is-filled');
                             dropdown.hide();
                         }
                     } else if (e.key === 'Escape') {
                         dropdown.hide();
                         selectedIndex = -1;
                     }
                 }
             });

             // Ẩn dropdown khi click ra ngoài
             $(document).off('click.saleinvoice-close').on('click.saleinvoice-close', function(e) {
                 if (!$(e.target).closest('#SaleInvoiceIdInput').closest('.autocomplete-wrapper').length) {
                     dropdown.hide();
                     selectedIndex = -1;
                 }
             });

             // Xử lý khi focus vào input
             saleInvoiceInput.off('focus.saleinvoice').on('focus.saleinvoice', function() {
                 $(this).closest('.input-group-outline').addClass('is-filled');
                 
                 const val = $(this).val().trim();
                 if (val) {
                     $(this).trigger('input.saleinvoice');
                 } else {
                     const allSaleInvoices = window.allSaleInvoicesForSelect || [];
                     if (allSaleInvoices.length > 0) {
                         filteredSaleInvoices = allSaleInvoices;
                         showDropdown(filteredSaleInvoices);
                     }
                 }
             });

             // Xử lý khi blur
             saleInvoiceInput.off('blur.saleinvoice').on('blur.saleinvoice', function() {
                 const val = $(this).val().trim();
                 if (!val) {
                     $(this).closest('.input-group-outline').removeClass('is-filled');
                 }
             });

             // Xử lý khi click vào input
             saleInvoiceInput.off('click.saleinvoice').on('click.saleinvoice', function() {
                 $(this).closest('.input-group-outline').addClass('is-filled');
                 
                 const val = $(this).val().trim();
                 if (val) {
                     $(this).trigger('input.saleinvoice');
                 } else {
                     const allSaleInvoices = window.allSaleInvoicesForSelect || [];
                     if (allSaleInvoices.length > 0) {
                         filteredSaleInvoices = allSaleInvoices;
                         showDropdown(filteredSaleInvoices);
                     }
                 }
             });
         }

