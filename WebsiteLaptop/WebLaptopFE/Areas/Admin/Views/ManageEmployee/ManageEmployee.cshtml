        // Khởi tạo autocomplete cho roles
        function initializeRolesAutocomplete() {
            const roleInput = $('#roleId');
            const roleValue = $('#roleIdValue');
            const dropdown = $('#roleIdDropdown');
            let selectedIndex = -1;
            let filteredRoles = [];

            function showDropdown(roles) {
                if (!roles || roles.length === 0) {
                    dropdown.html('<div class="autocomplete-item" style="color: #6c757d; cursor: default;">Không tìm thấy vai trò</div>').show();
                    selectedIndex = -1;
                    return;
                }

                let html = '';
                roles.forEach((role, index) => {
                    const roleName = role.roleName || role.roleId;
                    const roleNameEscaped = (roleName || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
                    html += `<div class="autocomplete-item" data-index="${index}" data-role-id="${role.roleId}" data-role-name="${roleNameEscaped}">${roleName}</div>`;
                });
                dropdown.html(html).show();
                selectedIndex = -1;
            }

            function updateSelectedItem() {
                $('#roleIdDropdown .autocomplete-item').removeClass('selected');
                if (selectedIndex >= 0 && selectedIndex < filteredRoles.length) {
                    $('#roleIdDropdown .autocomplete-item').eq(selectedIndex).addClass('selected');
                }
            }

            // Xử lý khi gõ
            roleInput.off('input.roles').on('input.roles', function() {
                const searchTerm = $(this).val().toLowerCase().trim();
                
                // Cập nhật class is-filled
                if (searchTerm) {
                    $(this).closest('.input-group-outline').addClass('is-filled');
                } else {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
                
                if (searchTerm === '') {
                    dropdown.hide();
                    roleValue.val('');
                    return;
                }

                const allRoles = window.allRolesForSelect || [];
                filteredRoles = allRoles.filter(role => {
                    const roleName = (role.roleName || role.roleId || '').toLowerCase();
                    return roleName.includes(searchTerm);
                });

                showDropdown(filteredRoles);
            });

            // Xử lý khi click vào item
            $(document).off('click.roles-item').on('click.roles-item', '#roleIdDropdown .autocomplete-item', function() {
                const roleId = $(this).data('role-id');
                const roleName = $(this).data('role-name');
                
                if (roleId && roleName) {
                    roleInput.val(roleName);
                    roleValue.val(roleId);
                    roleInput.closest('.input-group-outline').addClass('is-filled');
                    dropdown.hide();
                }
            });

            // Xử lý phím tắt
            roleInput.off('keydown.roles').on('keydown.roles', function(e) {
                if (dropdown.is(':visible') && filteredRoles.length > 0) {
                    if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        selectedIndex = Math.min(selectedIndex + 1, filteredRoles.length - 1);
                        updateSelectedItem();
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        selectedIndex = Math.max(selectedIndex - 1, -1);
                        updateSelectedItem();
                    } else if (e.key === 'Enter') {
                        e.preventDefault();
                        if (selectedIndex >= 0 && selectedIndex < filteredRoles.length) {
                            const role = filteredRoles[selectedIndex];
                            roleInput.val(role.roleName || role.roleId);
                            roleValue.val(role.roleId);
                            roleInput.closest('.input-group-outline').addClass('is-filled');
                            dropdown.hide();
                        }
                    } else if (e.key === 'Escape') {
                        dropdown.hide();
                        selectedIndex = -1;
                    }
                }
            });

            // Ẩn dropdown khi click ra ngoài
            $(document).off('click.roles-close').on('click.roles-close', function(e) {
                if (!$(e.target).closest('#roleId').closest('.autocomplete-wrapper').length) {
                    dropdown.hide();
                    selectedIndex = -1;
                }
            });

            // Xử lý khi focus vào input
            roleInput.off('focus.roles').on('focus.roles', function() {
                $(this).closest('.input-group-outline').addClass('is-filled');
                
                const val = $(this).val().trim();
                if (val) {
                    $(this).trigger('input.roles');
                } else {
                    const allRoles = window.allRolesForSelect || [];
                    if (allRoles.length > 0) {
                        filteredRoles = allRoles;
                        showDropdown(filteredRoles);
                    }
                }
            });

            // Xử lý khi blur
            roleInput.off('blur.roles').on('blur.roles', function() {
                const val = $(this).val().trim();
                if (!val) {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
            });

            // Xử lý khi click vào input
            roleInput.off('click.roles').on('click.roles', function() {
                $(this).closest('.input-group-outline').addClass('is-filled');
                
                const val = $(this).val().trim();
                if (val) {
                    $(this).trigger('input.roles');
                } else {
                    const allRoles = window.allRolesForSelect || [];
                    if (allRoles.length > 0) {
                        filteredRoles = allRoles;
                        showDropdown(filteredRoles);
                    }
                }
            });
        }

