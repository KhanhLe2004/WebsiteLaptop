            formData.append('BranchesId', $('#branchesIdValue').val() || '');
            formData.append('RoleId', $('#roleIdValue').val() || '');
            
            // Chỉ gửi password nếu có giá trị
            const password = $('#password').val();
            if (password) {
                formData.append('Password', password);
            }

            const avatarFile = $('#avatarFile')[0].files[0];
            if (avatarFile) {
                formData.append('AvatarFile', avatarFile);
            }

            let url, method;
            if (isEdit) {
                if (!employeeId) {
                    showError('Không tìm thấy mã nhân viên');
                    return;
                }
                url = `${API_URL}/${employeeId}`;
                method = 'PUT';
            } else {
                url = API_URL;
                method = 'POST';
            }

            $.ajax({
                url: url,
                type: method,
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    const message = isEdit ? 'Cập nhật nhân viên thành công' : 'Thêm nhân viên thành công';
                    showNotification(message, 'success');
                    
                    // Cập nhật passwordLength nếu có trong response
                    if (response && response.passwordLength !== undefined) {
                        $('#password').data('password-length', response.passwordLength);
                    } else if (password && password.length > 0) {
                        // Nếu không có trong response, sử dụng độ dài password vừa nhập
                        $('#password').data('password-length', password.length);
                    }
                    
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('employeeModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadEmployees();
                },
                error: function(xhr) {
                    console.error('Error saving employee:', xhr);
                    console.error('Status:', xhr.status);
                    console.error('Status Text:', xhr.statusText);
                    console.error('Response Text:', xhr.responseText);
                    console.error('Response JSON:', xhr.responseJSON);
                    
                    let message = isEdit ? 'Có lỗi xảy ra khi cập nhật nhân viên' : 'Có lỗi xảy ra khi thêm nhân viên';
                    let errorDetails = '';
                    
                    if (xhr.responseJSON) {
                        if (xhr.responseJSON.message) {
                            message = xhr.responseJSON.message;
                        }
                        if (xhr.responseJSON.error) {
                            errorDetails += '<br><small style="color: #dc3545;">' + xhr.responseJSON.error + '</small>';
                        }
                        if (xhr.responseJSON.details) {
                            errorDetails += '<br><small style="color: #6c757d; font-size: 0.8em;">' + 
                                xhr.responseJSON.details.substring(0, 500).replace(/\n/g, '<br>') + '</small>';
                        }
                        if (xhr.responseJSON.errors) {
                            const errors = xhr.responseJSON.errors;
                            const errorMessages = Object.values(errors).flat();
                            errorDetails += '<br>' + errorMessages.join('<br>');
                        }
                    } else if (xhr.responseText) {
                        try {
                            const errorObj = JSON.parse(xhr.responseText);
                            message = errorObj.message || errorObj.error || message;
                            if (errorObj.details) {
                                errorDetails += '<br><small style="color: #6c757d;">' + 
                                    errorObj.details.substring(0, 300) + '</small>';
                            }
                        } catch (e) {
                            errorDetails = '<br><small>' + xhr.responseText.substring(0, 200) + '</small>';
                        }
                    }
                    
                    if (xhr.status) {
                        errorDetails += '<br><small style="color: #6c757d;">HTTP Status: ' + xhr.status + 
                            (xhr.statusText ? ' ' + xhr.statusText : '') + '</small>';
                    }
                    
                    showError(message + errorDetails);
                    // Scroll to error message
                    if ($('#errorMessage').length > 0) {
                        $('#errorMessage')[0].scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    }
                }
            });
        }

        // Xóa nhân viên (khóa nhân viên - set active = false)
        function deleteEmployee(employeeId, employeeName) {
            deleteEmployeeId = employeeId;
            const employeeNameEscaped = employeeName.replace(/"/g, '&quot;').replace(/'/g, '&#39;');
            $('#deleteEmployeeName').html(employeeNameEscaped);
            $('#deleteModalLabel').text('Xác nhận khóa');
            $('#deleteModalMessage').html(`Bạn có chắc chắn muốn khóa nhân viên <strong>${employeeNameEscaped}</strong>?`);
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Xác nhận xóa (khóa nhân viên)
        function confirmDelete() {
            $.ajax({
                url: `${API_URL}/${deleteEmployeeId}`,
                type: 'DELETE',
                success: function(response) {
                    showNotification('Đã khóa nhân viên thành công', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    loadEmployees();
                },
                error: function(xhr) {
                    let message = 'Có lỗi xảy ra khi khóa nhân viên';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showNotification(message, 'error');
                }
            });
        }

        // Khôi phục nhân viên (set active = true)
        function restoreEmployee(employeeId, employeeName) {
            if (!confirm(`Bạn có chắc chắn muốn khôi phục nhân viên "${employeeName}"?\nNhân viên sẽ được hiển thị lại trong danh sách đang hoạt động.`)) {
                return;
            }

            $.ajax({
                url: `${API_URL}/${employeeId}/restore`,
                type: 'POST',
                success: function(response) {
                    showNotification('Khôi phục nhân viên thành công', 'success');
                    loadEmployees();
                },
                error: function(xhr) {
                    let message = 'Có lỗi xảy ra khi khôi phục nhân viên';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showNotification(message, 'error');
                }
            });
        }

        // Hiển thị thông báo
        function showNotification(message, type) {
            const bgColor = type === 'success' ? 'bg-gradient-success' : 'bg-gradient-danger';
            const notification = $(`
                <div class="alert ${bgColor} text-white alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `);
            $('body').append(notification);
            setTimeout(() => notification.alert('close'), 3000);
        }

        // Hiển thị lỗi trong modal
        function showError(message) {
            $('#errorMessage').html(message).show();
        }

        // Reset khi đóng modal
        $(document).on('hidden.bs.modal', '#employeeModal', function() {
            // Xóa class view-mode
            $('#employeeModal .modal-content').removeClass('view-mode');
            
            // Reset file inputs
            $('#avatarFile').val('');
            
            // Clear previews
            $('#imagePreview').hide();
            
            // Reset autocomplete dropdowns
            $('#branchesIdDropdown').hide();
            $('#roleIdDropdown').hide();
            
            // Reset form
            $('#employeeForm')[0].reset();
            // Reset password về type="password" và clear data
            $('#password').attr('type', 'password').val('').data('password-length', 0);
            // Reset input date: xóa attribute value và data-has-input để ẩn dd/mm/yyyy
            $('#dateOfBirth').removeAttr('value').removeAttr('data-has-input');
            $('#errorMessage').hide();
            
            // Reset autocomplete inputs
            $('#branchesId').val('');
            $('#branchesIdValue').val('');
            $('#roleId').val('');
            $('#roleIdValue').val('');
            
            // Reset combobox về giá trị mặc định
            populateBranchesCombo('');
            populateRolesCombo('');
            
            // Remove is-filled classes và cập nhật labels
            $('.input-group-outline').removeClass('is-filled is-focused');
            if (typeof updateInputLabels === 'function') {
                setTimeout(function() {
                    updateInputLabels();
                }, 50);
            }
            
            // Enable all controls để sẵn sàng cho lần mở tiếp theo
            $('#employeeForm input:not([type="hidden"]), #employeeForm select').prop('disabled', false);
            $('#employeeForm input[type="file"]').prop('disabled', false).css('pointer-events', 'auto');
            $('.modal-footer .btn-primary').show();
        });
    </script>
