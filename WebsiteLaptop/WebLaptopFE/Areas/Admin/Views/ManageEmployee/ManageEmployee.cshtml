@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutManageEmployee.cshtml";
}



<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-white text-capitalize ps-3 mb-0">Quản lý nhân viên</h6>
                            <button type="button" class="btn btn-white btn-sm me-3" onclick="addEmployee()">
                                <i class="material-icons text-sm">add</i> Thêm nhân viên
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body px-3 pb-2">
                    <!-- Bộ lọc và tìm kiếm -->
                    <div class="row mb-3 g-2 align-items-end">
                        <div class="col-lg-4 col-md-6">
                            <div class="input-group input-group-outline">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm nhân viên...">
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3">
                            <select id="activeFilter" class="form-select">
                                <option value="true" selected>Đang hoạt động</option>
                                <option value="false">Đã khóa</option>
                                <option value="">Tất cả trạng thái</option>
                            </select>
                        </div>
                    </div>

                    <!-- Bảng nhân viên -->
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 25%;">Nhân viên</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2" style="width: 20%;">Thông tin liên hệ</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Ngày sinh</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 15%;">Tài khoản</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 25%;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="employeeTableBody">
                                <!-- Dữ liệu sẽ được load bằng AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p class="text-sm mb-0" id="pageInfo">Đang tải...</p>
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-end mb-0" id="pagination">
                                    <!-- Phân trang sẽ được tạo bằng JavaScript -->
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm/Sửa Nhân viên -->
<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-gradient-primary">
                <h5 class="modal-title text-white" id="employeeModalLabel">Thêm nhân viên</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="employeeForm">
                    <input type="hidden" id="isEditMode" value="false">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Mã nhân viên</label>
                                <input type="text" class="form-control" id="employeeId" readonly disabled>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Tên nhân viên *</label>
                                <input type="text" class="form-control" id="employeeName" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Ngày Sinh</label>
                                <input type="date" class="form-control" id="dateOfBirth">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="text" class="form-control" id="phoneNumber">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Địa chỉ</label>
                                <input type="text" class="form-control" id="address">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Tên đăng nhập</label>
                                <input type="text" class="form-control" id="username">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Mật khẩu</label>
                                <input type="password" class="form-control" id="password" data-password-length="0" placeholder="">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Chi nhánh</label>
                                <div class="autocomplete-wrapper position-relative" style="width: 100%;">
                                    <input type="text" id="branchesId" class="form-control" autocomplete="off">
                                    <input type="hidden" id="branchesIdValue" value="">
                                    <div id="branchesIdDropdown" class="autocomplete-dropdown"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-outline mb-3">
                                <label class="form-label">Vai trò</label>
                                <div class="autocomplete-wrapper position-relative" style="width: 100%;">
                                    <input type="text" id="roleId" class="form-control" autocomplete="off">
                                    <input type="hidden" id="roleIdValue" value="">
                                    <div id="roleIdDropdown" class="autocomplete-dropdown"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="avatarFile" class="form-label">Ảnh đại diện</label>
                                <input type="file" class="form-control" id="avatarFile" accept="image/*" onchange="previewImage(this)">
                                <img id="imagePreview" class="preview-image" style="display:none;">
                            </div>
                        </div>
                    </div>

                    <div class="text-danger mb-3" id="errorMessage" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveEmployee()">
                    <i class="material-icons text-sm">save</i> Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận khóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-danger">
                <h5 class="modal-title text-white" id="deleteModalLabel">Xác nhận khóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="deleteModalMessage">Bạn có chắc chắn muốn khóa nhân viên <strong id="deleteEmployeeName"></strong>?</p>
                <p class="text-warning text-sm mb-0">Nhân viên sẽ bị ẩn khỏi danh sách đang hoạt động nhưng có thể khôi phục sau.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                    <i class="material-icons text-sm">delete</i> Khóa
                </button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        const API_URL = 'http://localhost:5068/api/admin/employees';
        const API_BASE_URL = API_URL.replace(/\/api\/admin\/employees$/, '');
        const IMAGE_BASE_URL = `${API_BASE_URL}/imageEmployees`;
        let currentPage = 1;
        let pageSize = 10;
        let deleteEmployeeId = '';
        let searchDebounceTimer = null;
        const SEARCH_DEBOUNCE_DELAY = 300;

        let branchesList = [];
        let rolesList = [];

        $(document).ready(function() {
            loadEmployees();
            loadBranches();
            loadRoles();

            // Tìm kiếm tự động theo tên
            $('#searchInput').on('input', function() {
                triggerAutoSearch();
            });

            // Tìm kiếm tự động theo trạng thái active
            $('#activeFilter').on('change', function() {
                triggerAutoSearch();
            });

            // Reset class edit-mode khi modal đóng
            $('#employeeModal').on('hidden.bs.modal', function() {
                $('#dateOfBirth').closest('.input-group-outline').removeClass('edit-mode');
            });

            // Xử lý label cho Material Dashboard inputs (định nghĩa ở phạm vi global)
            window.updateInputLabels = function() {
                $('.input-group-outline input, .input-group-outline select').each(function() {
                    const $input = $(this);
                    const $group = $input.closest('.input-group-outline');
                    const value = $input.val();
                    
                    if (value && value.trim() !== '') {
                        $group.addClass('is-filled');
                    } else {
                        $group.removeClass('is-filled');
                    }
                });
            };

            // Xử lý khi input thay đổi
            $(document).on('input change', '.input-group-outline input, .input-group-outline select', function() {
                const $input = $(this);
                const $group = $input.closest('.input-group-outline');
                const value = $input.val();
                
                if (value && value.trim() !== '') {
                    $group.addClass('is-filled');
                } else {
                    $group.removeClass('is-filled');
                }
            });

            // Xử lý riêng cho input date để đảm bảo attribute value được cập nhật
            $(document).on('change input', 'input[type="date"]', function() {
                const $input = $(this);
                const value = $input.val();
                // Đảm bảo attribute value được cập nhật để CSS selector hoạt động
                if (value && value.trim() !== '') {
                    $input.attr('value', value).attr('data-has-input', 'true');
                } else {
                    $input.removeAttr('value');
                    // Chỉ xóa data-has-input nếu không còn focus (người dùng đã rời khỏi input)
                    if (!$input.is(':focus')) {
                        $input.removeAttr('data-has-input');
                    }
                }
            });

            // Khi focus vào input date, set attribute để hiển thị dd/mm/yyyy ngay khi bắt đầu nhập
            $(document).on('focus', 'input[type="date"]', function() {
                const $input = $(this);
                // Nếu chưa có value, set data-has-input để hiển thị dd/mm/yyyy khi bắt đầu nhập
                if (!$input.attr('value')) {
                    $input.attr('data-has-input', 'true');
                }
            });

            // Khi blur khỏi input date, nếu không có value thì xóa data-has-input
            $(document).on('blur', 'input[type="date"]', function() {
                const $input = $(this);
                const value = $input.val();
                if (!value || value.trim() === '') {
                    $input.removeAttr('data-has-input');
                }
            });

            // Xử lý khi focus vào input
            $(document).on('focus', '.input-group-outline input, .input-group-outline select', function() {
                $(this).closest('.input-group-outline').addClass('is-focused');
            });

            // Xử lý khi blur khỏi input
            $(document).on('blur', '.input-group-outline input, .input-group-outline select', function() {
                const $input = $(this);
                const $group = $input.closest('.input-group-outline');
                $group.removeClass('is-focused');
                
                const value = $input.val();
                if (value && value.trim() !== '') {
                    $group.addClass('is-filled');
                } else {
                    $group.removeClass('is-filled');
                }
            });

            // Lưu độ dài mật khẩu khi người dùng nhập
            $('#password').on('input', function() {
                const length = $(this).val().length;
                $(this).data('password-length', length);
                // Nếu đang edit và người dùng bắt đầu nhập, đổi về type="password"
                const isEditMode = $('#isEditMode').val() === 'true';
                if (isEditMode && $(this).attr('type') === 'text' && length > 0) {
                    // Kiểm tra xem có phải toàn dấu * không
                    const value = $(this).val();
                    if (value && value.length > 0 && !value.match(/^\*+$/)) {
                        // Người dùng đang nhập mật khẩu mới, đổi về type="password"
                        $(this).attr('type', 'password');
                    }
                }
            });
            
            // Khi focus vào password field trong chế độ edit, nếu đang hiển thị dấu *, clear và đổi về password
            $('#password').on('focus', function() {
                const isEditMode = $('#isEditMode').val() === 'true';
                if (isEditMode && $(this).attr('type') === 'text') {
                    const value = $(this).val();
                    if (value && value.match(/^\*+$/)) {
                        // Đang hiển thị dấu *, clear và đổi về password để người dùng nhập mới
                        const savedLength = value.length; // Lưu độ dài dấu * hiện tại
                        $(this).attr('type', 'password').val('').data('password-length', 0).data('saved-star-length', savedLength);
                    }
                }
            });
            
            // Khi blur khỏi password field trong chế độ edit, nếu không có giá trị mới, hiển thị lại dấu *
            $('#password').on('blur', function() {
                const isEditMode = $('#isEditMode').val() === 'true';
                if (isEditMode && $(this).attr('type') === 'password') {
                    const value = $(this).val();
                    if (!value || value.trim() === '') {
                        // Không có giá trị mới, hiển thị lại dấu *
                        const savedLength = parseInt($(this).data('saved-star-length')) || 8;
                        $(this).attr('type', 'text').val('*'.repeat(savedLength)).data('password-length', savedLength);
                    }
                }
            });
        });

        function triggerAutoSearch() {
            currentPage = 1;
            if (searchDebounceTimer) {
                clearTimeout(searchDebounceTimer);
            }
            searchDebounceTimer = setTimeout(() => {
                loadEmployees();
            }, SEARCH_DEBOUNCE_DELAY);
        }

        // Load danh sách chi nhánh
        function loadBranches() {
            $.ajax({
                url: `${API_URL}/branches`,
                type: 'GET',
                success: function(branches) {
                    branchesList = branches;
                    populateBranchesCombo();
                },
                error: function(xhr) {
                    console.error('Lỗi khi tải danh sách chi nhánh:', xhr);
                    showNotification('Lỗi khi tải danh sách chi nhánh', 'error');
                }
            });
        }

        // Load danh sách vai trò
        function loadRoles() {
            $.ajax({
                url: `${API_URL}/roles`,
                type: 'GET',
                success: function(roles) {
                    rolesList = roles;
                    populateRolesCombo();
                },
                error: function(xhr) {
                    console.error('Lỗi khi tải danh sách vai trò:', xhr);
                    showNotification('Lỗi khi tải danh sách vai trò', 'error');
                }
            });
        }

        // Populate combobox chi nhánh (lưu danh sách để dùng cho autocomplete)
        function populateBranchesCombo(selectedId = '') {
            // Lưu danh sách branches để dùng cho autocomplete
            window.allBranchesForSelect = branchesList || [];
            
            const branchesInput = $('#branchesId');
            const branchesValue = $('#branchesIdValue');
            
            // Nếu có selectedId, set giá trị
            if (selectedId) {
                const branch = branchesList.find(b => b.branchesId === selectedId);
                if (branch) {
                    branchesInput.val(branch.branchesName || branch.branchesId);
                    branchesValue.val(branch.branchesId);
                    branchesInput.closest('.input-group-outline').addClass('is-filled');
                } else {
                    branchesInput.val('');
                    branchesValue.val('');
                    branchesInput.closest('.input-group-outline').removeClass('is-filled');
                }
            } else {
                branchesInput.val('');
                branchesValue.val('');
                branchesInput.closest('.input-group-outline').removeClass('is-filled');
            }
            
            // Khởi tạo autocomplete cho branches
            initializeBranchesAutocomplete();
        }

        // Populate combobox vai trò (lưu danh sách để dùng cho autocomplete)
        function populateRolesCombo(selectedId = '') {
            // Lưu danh sách roles để dùng cho autocomplete
            window.allRolesForSelect = rolesList || [];
            
            const roleInput = $('#roleId');
            const roleValue = $('#roleIdValue');
            
            // Nếu có selectedId, set giá trị
            if (selectedId) {
                const role = rolesList.find(r => r.roleId === selectedId);
                if (role) {
                    roleInput.val(role.roleName || role.roleId);
                    roleValue.val(role.roleId);
                    roleInput.closest('.input-group-outline').addClass('is-filled');
                } else {
                    roleInput.val('');
                    roleValue.val('');
                    roleInput.closest('.input-group-outline').removeClass('is-filled');
                }
            } else {
                roleInput.val('');
                roleValue.val('');
                roleInput.closest('.input-group-outline').removeClass('is-filled');
            }
            
            // Khởi tạo autocomplete cho roles
            initializeRolesAutocomplete();
        }

        // Khởi tạo autocomplete cho branches
        function initializeBranchesAutocomplete() {
            const branchesInput = $('#branchesId');
            const branchesValue = $('#branchesIdValue');
            const dropdown = $('#branchesIdDropdown');
            let selectedIndex = -1;
            let filteredBranches = [];

            function showDropdown(branches) {
                if (!branches || branches.length === 0) {
                    dropdown.html('<div class="autocomplete-item" style="color: #6c757d; cursor: default;">Không tìm thấy chi nhánh</div>').show();
                    selectedIndex = -1;
                    return;
                }

                let html = '';
                branches.forEach((branch, index) => {
                    const branchName = branch.branchesName || branch.branchesId;
                    const branchNameEscaped = (branchName || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
                    html += `<div class="autocomplete-item" data-index="${index}" data-branch-id="${branch.branchesId}" data-branch-name="${branchNameEscaped}">${branchName}</div>`;
                });
                dropdown.html(html).show();
                selectedIndex = -1;
            }

            function updateSelectedItem() {
                $('#branchesIdDropdown .autocomplete-item').removeClass('selected');
                if (selectedIndex >= 0 && selectedIndex < filteredBranches.length) {
                    $('#branchesIdDropdown .autocomplete-item').eq(selectedIndex).addClass('selected');
                }
            }

            // Xử lý khi gõ
            branchesInput.off('input.branches').on('input.branches', function() {
                const searchTerm = $(this).val().toLowerCase().trim();
                
                // Cập nhật class is-filled
                if (searchTerm) {
                    $(this).closest('.input-group-outline').addClass('is-filled');
                } else {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
                
                if (searchTerm === '') {
                    dropdown.hide();
                    branchesValue.val('');
                    return;
                }

                const allBranches = window.allBranchesForSelect || [];
                filteredBranches = allBranches.filter(branch => {
                    const branchName = (branch.branchesName || branch.branchesId || '').toLowerCase();
                    return branchName.includes(searchTerm);
                });

                showDropdown(filteredBranches);
            });

            // Xử lý khi click vào item
            $(document).off('click.branches-item').on('click.branches-item', '#branchesIdDropdown .autocomplete-item', function() {
                const branchId = $(this).data('branch-id');
                const branchName = $(this).data('branch-name');
                
                if (branchId && branchName) {
                    branchesInput.val(branchName);
                    branchesValue.val(branchId);
                    branchesInput.closest('.input-group-outline').addClass('is-filled');
                    dropdown.hide();
                }
            });

            // Xử lý phím tắt
            branchesInput.off('keydown.branches').on('keydown.branches', function(e) {
                if (dropdown.is(':visible') && filteredBranches.length > 0) {
                    if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        selectedIndex = Math.min(selectedIndex + 1, filteredBranches.length - 1);
                        updateSelectedItem();
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        selectedIndex = Math.max(selectedIndex - 1, -1);
                        updateSelectedItem();
                    } else if (e.key === 'Enter') {
                        e.preventDefault();
                        if (selectedIndex >= 0 && selectedIndex < filteredBranches.length) {
                            const branch = filteredBranches[selectedIndex];
                            branchesInput.val(branch.branchesName || branch.branchesId);
                            branchesValue.val(branch.branchesId);
                            branchesInput.closest('.input-group-outline').addClass('is-filled');
                            dropdown.hide();
                        }
                    } else if (e.key === 'Escape') {
                        dropdown.hide();
                        selectedIndex = -1;
                    }
                }
            });

            // Ẩn dropdown khi click ra ngoài
            $(document).off('click.branches-close').on('click.branches-close', function(e) {
                if (!$(e.target).closest('#branchesId').closest('.autocomplete-wrapper').length) {
                    dropdown.hide();
                    selectedIndex = -1;
                }
            });

            // Xử lý khi focus vào input
            branchesInput.off('focus.branches').on('focus.branches', function() {
                $(this).closest('.input-group-outline').addClass('is-filled');
                
                const val = $(this).val().trim();
                if (val) {
                    $(this).trigger('input.branches');
                } else {
                    const allBranches = window.allBranchesForSelect || [];
                    if (allBranches.length > 0) {
                        filteredBranches = allBranches;
                        showDropdown(filteredBranches);
                    }
                }
            });

            // Xử lý khi blur
            branchesInput.off('blur.branches').on('blur.branches', function() {
                const val = $(this).val().trim();
                if (!val) {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
            });

            // Xử lý khi click vào input
