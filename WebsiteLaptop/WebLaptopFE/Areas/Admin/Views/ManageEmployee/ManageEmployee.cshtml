        // Load danh sách nhân viên
        function loadEmployees(page = currentPage) {
            currentPage = page;
            const searchTerm = $('#searchInput').val().trim();
            const activeFilter = $('#activeFilter').val();

            const dataParams = {
                pageNumber: currentPage,
                pageSize: pageSize,
                searchTerm: searchTerm
            };

            // Chỉ thêm active vào params nếu có giá trị
            if (activeFilter !== '') {
                dataParams.active = activeFilter === 'true';
            }

            $.ajax({
                url: API_URL,
                type: 'GET',
                data: dataParams,
                success: function(response) {
                    try {
                        // Kiểm tra response hợp lệ
                        if (!response) {
                            console.error('Response rỗng từ server');
                            showNotification('Không nhận được dữ liệu từ server', 'error');
                            displayEmployees([]);
                            return;
                        }

                        // Tính toán các thuộc tính phân trang nếu chưa có
                        if (!response.totalPages) {
                            response.totalPages = Math.ceil((response.totalItems || 0) / (response.pageSize || pageSize));
                        }
                        if (response.hasPreviousPage === undefined) {
                            response.hasPreviousPage = (response.pageNumber || currentPage) > 1;
                        }
                        if (response.hasNextPage === undefined) {
                            response.hasNextPage = (response.pageNumber || currentPage) < response.totalPages;
                        }
                        
                        displayEmployees(response.items || []);
                        displayPagination(response);
                        updatePageInfo(response);
                    } catch (error) {
                        console.error('Lỗi khi xử lý dữ liệu:', error);
                        showNotification('Lỗi khi xử lý dữ liệu nhân viên', 'error');
                        displayEmployees([]);
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Lỗi khi tải nhân viên:', {
                        status: status,
                        error: error,
                        responseText: xhr.responseText,
                        statusCode: xhr.status
                    });
                    
                    let errorMessage = 'Lỗi khi tải dữ liệu nhân viên';
                    if (xhr.status === 0) {
                        errorMessage = 'Không thể kết nối đến server. Vui lòng kiểm tra lại kết nối.';
                    } else if (xhr.status === 500) {
                        errorMessage = 'Lỗi server. Vui lòng thử lại sau.';
                    } else if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    }
                    
                    showNotification(errorMessage, 'error');
                    displayEmployees([]);
                }
            });
        }

