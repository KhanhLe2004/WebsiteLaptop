                                }
                            }
                        });
                    } else {
                        selectElement.trigger('change');
                    }
                    
                    if (callback) callback();
                },
                error: function(xhr) {
                    console.error('Error loading configurations:', xhr);
                    selectElement.empty();
                    selectElement.append('<option value="">Lỗi khi tải thông số</option>');
                    if (callback) callback();
                }
            });
        }

