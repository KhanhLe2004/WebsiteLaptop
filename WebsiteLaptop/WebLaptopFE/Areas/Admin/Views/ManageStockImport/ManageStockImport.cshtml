                        configurations.forEach(function(config) {
                            // Tạo chuỗi hiển thị thông số theo format: Core i7-10750H / 16GB / 1TB SSD / NVIDIA® GeForce RTX™ 3060 6GB GDDR6
                            const specParts = [];
                            if (config.cpu) specParts.push(config.cpu);
                            if (config.ram) specParts.push(config.ram);
                            if (config.rom) specParts.push(config.rom);
                            if (config.card) specParts.push(config.card);
                            
                            const specText = specParts.length > 0 ? specParts.join(' / ') : config.configurationId;
                            const optionValue = JSON.stringify({
                                configurationId: config.configurationId,
                                cpu: config.cpu || '',
                                ram: config.ram || '',
