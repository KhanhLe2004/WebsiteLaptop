        // Load cấu hình sản phẩm
        function loadProductConfigurations(productId, selectElement, selectedValue = '', callback = null) {
            if (!productId) {
                selectElement.empty();
                selectElement.append('<option value="">-- Chọn sản phẩm trước --</option>');
                if (callback) callback();
                return;
            }

            $.ajax({
                url: `${API_URL}/product-configurations/${productId}`,
                type: 'GET',
                success: function(configurations) {
                    selectElement.empty();
                    selectElement.append('<option value="">-- Chọn thông số --</option>');
                    
                    if (configurations && configurations.length > 0) {
                        configurations.forEach(function(config) {
                            // Tạo chuỗi hiển thị thông số
                            const specParts = [];
                            if (config.cpu) specParts.push(`CPU: ${config.cpu}`);
                            if (config.ram) specParts.push(`RAM: ${config.ram}`);
                            if (config.rom) specParts.push(`ROM: ${config.rom}`);
                            if (config.card) specParts.push(`Card: ${config.card}`);
                            
                            const specText = specParts.length > 0 ? specParts.join(', ') : config.configurationId;
                            const optionValue = JSON.stringify({
                                configurationId: config.configurationId,
                                cpu: config.cpu || '',
                                ram: config.ram || '',
                                rom: config.rom || '',
                                card: config.card || ''
                            });
                            
                            // Dùng jQuery để tạo option element, tự động xử lý escape
                            const $option = $('<option></option>')
                                .attr('value', optionValue)
                                .text(specText);
                            
                            // So sánh với selectedValue để set selected
                            if (selectedValue) {
                                // So sánh cả escaped và unescaped (jQuery có thể unescape khi lấy value)
                                const normalizedSelected = selectedValue.replace(/&quot;/g, '"').replace(/&#39;/g, "'");
                                if (selectedValue === optionValue || normalizedSelected === optionValue) {
                                    $option.prop('selected', true);
                                }
                            }
                            
                            selectElement.append($option);
                        });
                    } else {
                        selectElement.append('<option value="">Không có thông số</option>');
                    }
                    
                    if (callback) callback();
                },
                error: function(xhr) {
                    console.error('Error loading configurations:', xhr);
                    selectElement.empty();
                    selectElement.append('<option value="">Lỗi khi tải thông số</option>');
                    if (callback) callback();
                }
            });
        }

        // Thêm dòng chi tiết
        function addDetailRow(detail = null) {
            const index = detailRowIndex++;
            
            // Tạo select cho sản phẩm
            let productSelect = '<select class="form-control form-control-sm detail-product" onchange="onProductChange(' + index + ')"><option value="">-- Chọn sản phẩm --</option>';
            productsList.forEach(function(product) {
                const selected = detail && detail.productId === product.productId ? 'selected' : '';
                productSelect += `<option value="${product.productId}" ${selected}>${product.displayName}</option>`;
            });
            productSelect += '</select>';

            // Tạo select cho thông số
            let specSelect = '<select class="form-control form-control-sm detail-spec"><option value="">-- Chọn sản phẩm trước --</option></select>';

            const row = `
                <tr data-index="${index}">
                    <td>
                        ${productSelect}
                    </td>
                    <td>
                        ${specSelect}
                    </td>
                    <td>
                        <input type="number" class="form-control form-control-sm detail-quantity" 
                               value="${detail ? (detail.quantity || '') : ''}" 
                               min="1" placeholder="Số lượng" onchange="calculateDetailTotal(${index})">
                    </td>
                    <td>
                        <input type="number" step="0.01" class="form-control form-control-sm detail-price" 
                               value="${detail ? (detail.price || '') : ''}" 
                               min="0" placeholder="Đơn giá" onchange="calculateDetailTotal(${index})">
                    </td>
                    <td>
                        <input type="text" class="form-control form-control-sm detail-total" 
                               value="${detail ? formatCurrency((detail.quantity || 0) * (detail.price || 0)) : '0'}" 
                               readonly>
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-danger" onclick="removeDetailRow(${index})">
                            <i class="material-icons text-sm">delete</i>
                        </button>
                    </td>
                </tr>
            `;
            $('#detailTableBody').append(row);
            
            // Nếu có detail và productId, load lại cấu hình sau khi append và tìm thông số tương ứng
            if (detail && detail.productId) {
                const savedSpec = (detail.specifications || '').trim();
                
                console.log('Loading config for detail:', {
                    productId: detail.productId,
                    savedSpec: savedSpec,
                    index: index
                });
                
                // Đợi một chút để DOM được render xong
                setTimeout(function() {
                    const specSelectElement = $(`tr[data-index="${index}"] .detail-spec`);
                    
                    if (specSelectElement.length === 0) {
                        console.error('Spec select element not found for index:', index);
                        return;
                    }
                    
                    // Load cấu hình và sau đó tìm match
                    loadProductConfigurations(detail.productId, specSelectElement, '', function() {
                    // Sau khi load xong, tìm option phù hợp với savedSpec
                    if (savedSpec) {
                        let found = false;
                        console.log('Matching savedSpec:', savedSpec);
                        
                        specSelectElement.find('option').each(function() {
                            if (found) return false; // Đã tìm thấy, dừng lại
                            
                            const optionValue = $(this).val();
                            const optionText = $(this).text().trim();
                            
                            if (!optionValue) return true; // Bỏ qua option rỗng
                            
                            try {
                                // jQuery tự động unescape khi lấy value từ DOM, nhưng đảm bảo parse được
                                let unescapedValue = optionValue;
                                // Nếu có HTML entities, unescape chúng
                                if (optionValue.includes('&quot;') || optionValue.includes('&#39;')) {
                                    unescapedValue = optionValue.replace(/&quot;/g, '"').replace(/&#39;/g, "'");
                                }
                                
                                const specObj = JSON.parse(unescapedValue);
                                const specParts = [];
                                if (specObj.cpu) specParts.push(`CPU: ${specObj.cpu}`);
                                if (specObj.ram) specParts.push(`RAM: ${specObj.ram}`);
                                if (specObj.rom) specParts.push(`ROM: ${specObj.rom}`);
                                if (specObj.card) specParts.push(`Card: ${specObj.card}`);
                                const specText = specParts.length > 0 ? specParts.join(', ') : '';
                                
                                // Normalize để so sánh (loại bỏ khoảng trắng thừa, chuyển về lowercase)
                                const normalizeString = (str) => {
                                    return str.trim().toLowerCase().replace(/\s+/g, ' ');
                                };
                                
                                const normalizedSpecText = normalizeString(specText);
                                const normalizedSavedSpec = normalizeString(savedSpec);
                                const normalizedOptionText = normalizeString(optionText);
                                
                                console.log('Comparing:', {
                                    normalizedSpecText: normalizedSpecText,
                                    normalizedSavedSpec: normalizedSavedSpec,
                                    normalizedOptionText: normalizedOptionText,
                                    optionText: optionText,
                                    configurationId: specObj.configurationId,
                                    rawSavedSpec: savedSpec
                                });
                                
                                // So sánh theo nhiều cách:
                                // 1. So sánh formatted text (normalized)
                                // 2. So sánh option text (normalized)
                                // 3. So sánh với configurationId nếu có
                                // 4. So sánh trực tiếp (case-sensitive) nếu normalized không match
                                if (normalizedSpecText === normalizedSavedSpec || 
                                    normalizedOptionText === normalizedSavedSpec ||
                                    specText.trim() === savedSpec.trim() ||
                                    optionText.trim() === savedSpec.trim() ||
                                    (specObj.configurationId && specObj.configurationId === normalizedSavedSpec)) {
                                    $(this).prop('selected', true);
                                    specSelectElement.val(optionValue); // Đảm bảo select được set
                                    specSelectElement.trigger('change'); // Trigger change event
                                    found = true;
                                    console.log('Found match! Selected option:', optionText);
                                    return false; // break
                                }
                            } catch (e) {
                                console.log('Error parsing option value:', e, optionValue);
                                // Nếu không parse được JSON, so sánh trực tiếp với text hoặc value
                                if (optionText === savedSpec || optionValue === savedSpec) {
                                    $(this).prop('selected', true);
                                    specSelectElement.val(optionValue);
                                    specSelectElement.trigger('change');
                                    found = true;
                                    console.log('Found match by text/value!');
                                    return false;
                                }
                            }
                        });
                        
                        if (!found && savedSpec) {
                            console.warn('No match found for savedSpec:', savedSpec);
                            // Thêm option tạm thời để hiển thị savedSpec nếu không tìm thấy match
                            const tempOption = $('<option></option>')
                                .attr('value', savedSpec)
                                .text(savedSpec)
                                .prop('selected', true);
                            specSelectElement.append(tempOption);
                            specSelectElement.val(savedSpec);
                            specSelectElement.trigger('change');
                            console.log('Added temporary option for savedSpec:', savedSpec);
                        }
                    }
                    });
                }, 50); // Delay 50ms để đảm bảo DOM đã render
            }
            
            calculateTotalAmount();
        }

        // Xử lý khi chọn sản phẩm
        function onProductChange(index) {
            const productId = $(`tr[data-index="${index}"] .detail-product`).val();
            const specSelect = $(`tr[data-index="${index}"] .detail-spec`);
            loadProductConfigurations(productId, specSelect);
        }

