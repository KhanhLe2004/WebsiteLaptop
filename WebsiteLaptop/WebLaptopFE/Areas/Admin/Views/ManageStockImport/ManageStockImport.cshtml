                $('#employeeIdValue').val(currentEmployeeId);
            } else {
                $('#employeeIdInput').val('');
                $('#employeeIdValue').val('');
            }
            
            $('.input-group-outline').removeClass('is-filled is-focused');
            if (typeof updateInputLabels === 'function') {
                setTimeout(function() {
                    updateInputLabels();
                }, 50);
            }
        });
    </script>
