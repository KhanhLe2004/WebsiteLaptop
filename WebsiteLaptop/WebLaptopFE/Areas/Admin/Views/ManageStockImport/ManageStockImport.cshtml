            const time = $('#timeInput').val();
            const supplierId = $('#supplierIdValue').val().trim();
            // Lấy EmployeeId từ hidden input hoặc từ biến global
            const employeeId = $('#employeeIdValue').val().trim() || currentEmployeeId || '';
            const totalAmount = parseFloat($('#totalAmountInput').val()) || 0;

            const isEdit = $('#stockImportId').val() !== '';
            
            // Khi thêm mới, nếu không có ID thì để null để backend tự động tạo
            if (!isEdit && !stockImportId) {
                stockImportId = null;
            }

            if (!time) {
                showFormError('Vui lòng chọn ngày nhập');
                return;
            }

            // Lấy chi tiết
            const details = [];
            $('#detailTableBody tr').each(function() {
                const productId = $(this).find('.detail-product').val().trim();
                const quantity = parseInt($(this).find('.detail-quantity').val()) || 0;
                const price = parseFloat($(this).find('.detail-price').val()) || 0;
                let specifications = $(this).find('.detail-spec').val().trim();

                // Nếu specifications là JSON string, parse nó và lấy thông tin
                if (specifications) {
                    try {
                        // jQuery tự động unescape khi lấy value từ DOM, nhưng đảm bảo parse được
                        let unescapedSpec = specifications;
                        // Nếu có HTML entities, unescape chúng
                        if (specifications.includes('&quot;') || specifications.includes('&#39;')) {
                            unescapedSpec = specifications.replace(/&quot;/g, '"').replace(/&#39;/g, "'");
                        }
                        
                        const specObj = JSON.parse(unescapedSpec);
                        const specParts = [];
                        if (specObj.cpu) specParts.push(`CPU: ${specObj.cpu}`);
                        if (specObj.ram) specParts.push(`RAM: ${specObj.ram}`);
                        if (specObj.rom) specParts.push(`ROM: ${specObj.rom}`);
                        if (specObj.card) specParts.push(`Card: ${specObj.card}`);
                        specifications = specParts.length > 0 ? specParts.join(', ') : specifications;
                    } catch (e) {
                        // Nếu không phải JSON, giữ nguyên (có thể đã là formatted string)
                        // Không cần làm gì, giữ nguyên giá trị
                    }
                }

                if (productId && quantity > 0 && price > 0) {
                    details.push({
                        productId: productId,
                        quantity: quantity,
                        price: price,
                        specifications: specifications || null
                    });
                }
            });

            const url = isEdit ? `${API_URL}/${stockImportId}` : API_URL;
            const method = isEdit ? 'PUT' : 'POST';

            // Xử lý time để tránh lỗi timezone
            // time từ input datetime-local là format "YYYY-MM-DDTHH:mm" (local time, không có timezone)
            // Gửi time string trực tiếp và thêm ":00" để có format đầy đủ, backend sẽ parse như local time
            let timeValue;
            if (time) {
                // Thêm ":00" nếu chưa có giây
                if (time.length === 16) {
                    timeValue = time + ":00";
                } else {
                    timeValue = time;
                }
            } else {
                // Nếu không có time, dùng thời gian hiện tại
                const now = new Date();
                const year = now.getFullYear();
                const month = String(now.getMonth() + 1).padStart(2, '0');
                const day = String(now.getDate()).padStart(2, '0');
                const hours = String(now.getHours()).padStart(2, '0');
                const minutes = String(now.getMinutes()).padStart(2, '0');
                timeValue = `${year}-${month}-${day}T${hours}:${minutes}:00`;
            }

            const data = {
                stockImportId: stockImportId || null, // null để backend tự động tạo khi thêm mới
                supplierId: supplierId || null,
                employeeId: employeeId || null,
                time: timeValue,
                totalAmount: totalAmount,
                details: details
            };

            $.ajax({
                url: url,
                type: method,
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(response) {
                    showNotification(isEdit ? 'Cập nhật phiếu nhập hàng thành công' : 'Thêm phiếu nhập hàng thành công', 'success');
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('createEditModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadStockImports();
                },
                error: function(xhr) {
                    console.error('Error saving stock import:', xhr);
                    let message = 'Có lỗi xảy ra khi lưu phiếu nhập hàng';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showFormError(message);
                }
            });
        }

        // Xóa phiếu nhập hàng
        function deleteStockImport(stockImportId) {
            deleteStockImportId = stockImportId;
            $('#deleteStockImportId').text(stockImportId);
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // Xác nhận xóa
        function confirmDelete() {
            if (!deleteStockImportId) return;

            $.ajax({
                url: `${API_URL}/${deleteStockImportId}`,
                type: 'DELETE',
                success: function(response) {
                    showNotification('Xóa phiếu nhập hàng thành công', 'success');
                    const modalInstance = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                    loadStockImports();
                    deleteStockImportId = null;
                },
                error: function(xhr) {
                    console.error('Error deleting stock import:', xhr);
                    let message = 'Có lỗi xảy ra khi xóa phiếu nhập hàng';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        message = xhr.responseJSON.message;
                    }
                    showNotification(message, 'error');
                }
            });
        }

        // Hiển thị thông báo
        function showNotification(message, type) {
            const bgColor = type === 'success' ? 'bg-gradient-success' : 'bg-gradient-danger';
            const notification = $(
                `<div class="alert ${bgColor} text-white alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>`
            );
            $('body').append(notification);
            setTimeout(() => notification.alert('close'), 3000);
        }

        // Hiển thị lỗi trong form
        function showFormError(message) {
            $('#formErrorMessage').html(message).show();
        }

        // Format tiền tệ
        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        }

        // Reset khi đóng modal
        $(document).on('hidden.bs.modal', '#createEditModal', function() {
            $('#stockImportForm')[0].reset();
            $('#stockImportId').val('');
                    $('#stockImportIdInput').prop('readonly', false);
            $('#detailTableBody').empty();
            detailRowIndex = 0;
            $('#formErrorMessage').hide();
            $('#totalAmountInput').val('0');
            
            // Reset autocomplete dropdowns
            $('#supplierIdDropdown').hide();
            $('#supplierIdInput').val('');
            $('#supplierIdValue').val('');
            
            // Reset employee input nhưng giữ lại giá trị từ biến global
            if (currentEmployeeId) {
