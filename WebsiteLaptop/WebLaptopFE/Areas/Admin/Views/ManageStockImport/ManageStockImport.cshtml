        // Khởi tạo autocomplete cho suppliers
        function initializeSupplierAutocomplete() {
            const supplierInput = $('#supplierIdInput');
            const supplierValue = $('#supplierIdValue');
            const dropdown = $('#supplierIdDropdown');
            let selectedIndex = -1;
            let filteredSuppliers = [];

            function showDropdown(suppliers) {
                if (!suppliers || suppliers.length === 0) {
                    dropdown.html('<div class="autocomplete-item" style="color: #6c757d; cursor: default;">Không tìm thấy nhà cung cấp</div>').show();
                    selectedIndex = -1;
                    return;
                }

                let html = '';
                suppliers.forEach((supplier, index) => {
                    const supplierId = supplier.supplierId || supplier.SupplierId;
                    const supplierName = supplier.supplierName || supplier.SupplierName || supplierId;
                    const supplierNameEscaped = (supplierName || '').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
                    html += `<div class="autocomplete-item" data-index="${index}" data-supplier-id="${supplierId}" data-supplier-name="${supplierNameEscaped}">${supplierName}</div>`;
                });
                dropdown.html(html).show();
                selectedIndex = -1;
            }

            function updateSelectedItem() {
                $('#supplierIdDropdown .autocomplete-item').removeClass('selected');
                if (selectedIndex >= 0 && selectedIndex < filteredSuppliers.length) {
                    $('#supplierIdDropdown .autocomplete-item').eq(selectedIndex).addClass('selected');
                }
            }

            // Xử lý khi gõ
            supplierInput.off('input.supplier').on('input.supplier', function() {
                const searchTerm = $(this).val().toLowerCase().trim();
                
                // Cập nhật class is-filled
                if (searchTerm) {
                    $(this).closest('.input-group-outline').addClass('is-filled');
                } else {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
                
                if (searchTerm === '') {
                    dropdown.hide();
                    supplierValue.val('');
                    return;
                }

                const allSuppliers = window.allSuppliersForSelect || [];
                filteredSuppliers = allSuppliers.filter(supplier => {
                    const supplierName = (supplier.supplierName || supplier.SupplierName || '').toLowerCase();
                    return supplierName.includes(searchTerm);
                });

                showDropdown(filteredSuppliers);
            });

            // Xử lý khi click vào item
            $(document).off('click.supplier-item').on('click.supplier-item', '#supplierIdDropdown .autocomplete-item', function() {
                const supplierId = $(this).data('supplier-id');
                const supplierName = $(this).data('supplier-name');
                
                if (supplierId && supplierName) {
                    supplierInput.val(supplierName);
                    supplierValue.val(supplierId);
                    supplierInput.closest('.input-group-outline').addClass('is-filled');
                    dropdown.hide();
                }
            });

            // Xử lý phím tắt
            supplierInput.off('keydown.supplier').on('keydown.supplier', function(e) {
                if (dropdown.is(':visible') && filteredSuppliers.length > 0) {
                    if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        selectedIndex = Math.min(selectedIndex + 1, filteredSuppliers.length - 1);
                        updateSelectedItem();
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        selectedIndex = Math.max(selectedIndex - 1, -1);
                        updateSelectedItem();
                    } else if (e.key === 'Enter') {
                        e.preventDefault();
                        if (selectedIndex >= 0 && selectedIndex < filteredSuppliers.length) {
                            const supplier = filteredSuppliers[selectedIndex];
                            const supplierName = supplier.supplierName || supplier.SupplierName || supplier.supplierId || supplier.SupplierId;
                            supplierInput.val(supplierName);
                            supplierValue.val(supplier.supplierId || supplier.SupplierId);
                            supplierInput.closest('.input-group-outline').addClass('is-filled');
                            dropdown.hide();
                        }
                    } else if (e.key === 'Escape') {
                        dropdown.hide();
                        selectedIndex = -1;
                    }
                }
            });

            // Ẩn dropdown khi click ra ngoài
            $(document).off('click.supplier-close').on('click.supplier-close', function(e) {
                if (!$(e.target).closest('#supplierIdInput').closest('.autocomplete-wrapper').length) {
                    dropdown.hide();
                    selectedIndex = -1;
                }
            });

            // Xử lý khi focus vào input
            supplierInput.off('focus.supplier').on('focus.supplier', function() {
                $(this).closest('.input-group-outline').addClass('is-filled');
                
                const val = $(this).val().trim();
                if (val) {
                    $(this).trigger('input.supplier');
                } else {
                    const allSuppliers = window.allSuppliersForSelect || [];
                    if (allSuppliers.length > 0) {
                        filteredSuppliers = allSuppliers;
                        showDropdown(filteredSuppliers);
                    }
                }
            });

            // Xử lý khi blur
            supplierInput.off('blur.supplier').on('blur.supplier', function() {
                const val = $(this).val().trim();
                if (!val) {
                    $(this).closest('.input-group-outline').removeClass('is-filled');
                }
            });

            // Xử lý khi click vào input
            supplierInput.off('click.supplier').on('click.supplier', function() {
                $(this).closest('.input-group-outline').addClass('is-filled');
                
                const val = $(this).val().trim();
                if (val) {
                    $(this).trigger('input.supplier');
                } else {
                    const allSuppliers = window.allSuppliersForSelect || [];
                    if (allSuppliers.length > 0) {
                        filteredSuppliers = allSuppliers;
                        showDropdown(filteredSuppliers);
                    }
                }
            });
        }

