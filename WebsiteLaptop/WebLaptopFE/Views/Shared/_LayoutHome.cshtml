    <script>
        (function () {
            var apiBase = "http://localhost:5068/";
            var $list = $('#categoriesList');
            if ($list.length === 0) return;

            // Toggle dropdown behavior
            $('#categoriesToggle').on('click keypress', function (e) {
                if (e.type === 'click' || (e.type === 'keypress' && (e.which === 13 || e.which === 32))) {
                    $('#categoriesList').toggleClass('show');
                    var expanded = $(this).attr('aria-expanded') === 'true';
                    $(this).attr('aria-expanded', (!expanded).toString());
                    $(this).find('.toggle-caret').toggleClass('fa-angle-down fa-angle-up');
                }
            });

            // Load brands and product names from products list (client grouping)
            $.ajax({
                type: 'GET',
                url: apiBase + "api/ListProductAPI/all",
                dataType: 'json',
                success: function (data) {
                    // Group by brandId
                    var brandMap = {};
                    (data || []).forEach(function (p) {
                        var bId = (p.brandId || '').trim();
                        var bName = (p.brand && p.brand.brandName) ? p.brand.brandName : (bId || 'Khác');
                        if (!brandMap[bId]) {
                            brandMap[bId] = { brandId: bId, brandName: bName, productNames: new Set() };
                        }
                        if (p.productName) {
                            brandMap[bId].productNames.add(p.productName);
                        }
                    });

                    var brands = Object.values(brandMap).filter(function (b) { return (b.brandId || '').length > 0; });
                    // Build list
                    var html = '';
                    brands.forEach(function (b) {
                        var productNames = Array.from(b.productNames).sort();
                        if (productNames.length > 0) {
                            html += '<li>';
                            html += '  <div class="dropdown category-dropdown">';
                            html += '    <a href="/Home/Index?brandId=' + encodeURIComponent(b.brandId) + '" class="h6 px-5 py-3 rounded bg-white mb-2 dropdown-toggle d-flex align-items-center justify-content-between js-has-sub" aria-expanded="false">';
                            html += '      <span><i class="fas fa-laptop text-primary me-2"></i>' + (b.brandName || b.brandId) + '</span>';
                            html += '      <i class="fas fa-angle-right text-primary toggle-submenu"></i>';
                            html += '    </a>';
                            html += '    <div class="dropdown-menu m-0 bg-secondary rounded-0 category-submenu">';
                            productNames.forEach(function (pn) {
                                html += '      <a class="dropdown-item" href="/Home/Index?brandId=' + encodeURIComponent(b.brandId) + '&productName=' + encodeURIComponent(pn) + '">' + pn + '</a>';
                            });
                            html += '    </div>';
                            html += '  </div>';
                            html += '</li>';
                        } else {
                            html += '<li><a href="/Home/Index?brandId=' + encodeURIComponent(b.brandId) + '" class="h6 px-5 py-3 rounded bg-white mb-2"><i class="fas fa-laptop text-primary me-2"></i>' + (b.brandName || b.brandId) + '</a></li>';
                        }
                    });
                    $list.html(html);

                    // Handle submenu toggle hover
                    $list.on('mouseenter', '.category-dropdown', function () {
                        $(this).find('.category-submenu').addClass('show').css('display', 'block');
                    }).on('mouseleave', '.category-dropdown', function () {
                        $(this).find('.category-submenu').removeClass('show').css('display', 'none');
                    });
                },
                error: function () {
                    // Fallback content
                    $list.html('<li><span class="d-block px-5 py-3 text-muted">Không thể tải danh mục</span></li>');
                }
            });
        })();
    </script>
    
