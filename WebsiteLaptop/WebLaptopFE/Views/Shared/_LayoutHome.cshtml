    <script>
        (function () {
            var apiBase = "http://localhost:5068/";
            var $list = $('#categoriesList');
            if ($list.length === 0) return;

            // Toggle dropdown behavior
            $('#categoriesToggle').on('click keypress', function (e) {
                if (e.type === 'click' || (e.type === 'keypress' && (e.which === 13 || e.which === 32))) {
                    $('#categoriesList').toggleClass('show');
                    var expanded = $(this).attr('aria-expanded') === 'true';
                    $(this).attr('aria-expanded', (!expanded).toString());
                    $(this).find('.toggle-caret').toggleClass('fa-angle-down fa-angle-up');
                }
            });

            // Load brands and product names from products list (client grouping)
            $.ajax({
                type: 'GET',
                url: apiBase + "api/ListProductAPI/all",
                dataType: 'json',
                success: function (data) {
                    // Group by brandId
                    var brandMap = {};
                    (data || []).forEach(function (p) {
                        var bId = (p.brandId || '').trim();
                        var bName = (p.brand && p.brand.brandName) ? p.brand.brandName : (bId || 'Khác');
                        if (!brandMap[bId]) {
                            brandMap[bId] = { brandId: bId, brandName: bName, productNames: new Set() };
                        }
                        if (p.productName) {
                            brandMap[bId].productNames.add(p.productName);
                        }
                    });

                    var brands = Object.values(brandMap).filter(function (b) { return (b.brandId || '').length > 0; });
                    // Build list - bắt đầu với "Tất cả sản phẩm"
                    var html = '<li><a href="/Home/Shop" class="h6 px-5 py-3 rounded bg-white mb-2"><i class="fas fa-th text-primary me-2"></i>Tất cả sản phẩm</a></li>';
                    brands.forEach(function (b) {
                        var productNames = Array.from(b.productNames).sort();
                        if (productNames.length > 0) {
                            html += '<li>';
                            html += '  <div class="dropdown category-dropdown">';
                            html += '    <a href="/Home/Shop?brandId=' + encodeURIComponent(b.brandId) + '" class="h6 px-5 py-3 rounded bg-white mb-2 dropdown-toggle d-flex align-items-center justify-content-between js-has-sub" aria-expanded="false">';
                            html += '      <span><i class="fas fa-laptop text-primary me-2"></i>' + (b.brandName || b.brandId) + '</span>';
                            html += '      <i class="fas fa-angle-right text-primary toggle-submenu"></i>';
                            html += '    </a>';
                            html += '    <div class="dropdown-menu m-0 bg-secondary rounded-0 category-submenu">';
                            productNames.forEach(function (pn) {
                                html += '      <a class="dropdown-item" href="/Home/Shop?brandId=' + encodeURIComponent(b.brandId) + '&productName=' + encodeURIComponent(pn) + '">' + pn + '</a>';
                            });
                            html += '    </div>';
                            html += '  </div>';
                            html += '</li>';
                        } else {
                            html += '<li><a href="/Home/Shop?brandId=' + encodeURIComponent(b.brandId) + '" class="h6 px-5 py-3 rounded bg-white mb-2"><i class="fas fa-laptop text-primary me-2"></i>' + (b.brandName || b.brandId) + '</a></li>';
                        }
                    });
                    $list.html(html);

                    // Handle submenu toggle hover
                    $list.on('mouseenter', '.category-dropdown', function () {
                        $(this).find('.category-submenu').addClass('show').css('display', 'block');
                    }).on('mouseleave', '.category-dropdown', function () {
                        $(this).find('.category-submenu').removeClass('show').css('display', 'none');
                    });
                },
                error: function () {
                    // Fallback content
                    $list.html('<li><span class="d-block px-5 py-3 text-muted">Không thể tải danh mục</span></li>');
                }
            });

            // Load bestseller products
            function loadBestsellerProducts() {
                console.log('Loading bestseller products from:', apiBase + "api/products/bestsellers?count=8&days=90");
                
                $.ajax({
                    type: 'GET',
                    url: apiBase + "api/products/bestsellers?count=8&days=90",
                    dataType: 'json',
                    timeout: 10000, // 10 second timeout
                    success: function (data) {
                        console.log('Bestseller products success:', data);
                        renderBestsellerProducts(data || []);
                    },
                    error: function (xhr, status, error) {
                        console.error('Bestseller API Error Details:');
                        console.error('Status:', status);
                        console.error('Error:', error);
                        console.error('Response:', xhr.responseText);
                        console.error('Status Code:', xhr.status);
                        
                        let errorMessage = 'Không thể tải sản phẩm bán chạy.';
                        
                        if (xhr.status === 0) {
                            errorMessage = 'Không thể kết nối đến server. Kiểm tra kết nối mạng.';
                        } else if (xhr.status === 404) {
                            errorMessage = 'API không tìm thấy. Kiểm tra URL API.';
                        } else if (xhr.status === 500) {
                            errorMessage = 'Lỗi server nội bộ. Kiểm tra logs server.';
                        } else if (status === 'timeout') {
                            errorMessage = 'Timeout khi tải dữ liệu. Server phản hồi chậm.';
                        }
                        
                        $('#bestsellerProducts').html(`
                            <div class="col-12 text-center">
                                <p class="text-danger">${errorMessage}</p>
                                <button class="btn btn-outline-primary btn-sm" onclick="loadBestsellerProducts()">Thử lại</button>
                                <button class="btn btn-outline-secondary btn-sm ms-2" onclick="testApiConnection()">Test API</button>
                            </div>
                        `);
                    }
                });
            }

            // Test API connection
            function testApiConnection() {
                console.log('Testing API connection...');
                $.ajax({
                    type: 'GET',
                    url: apiBase + "api/products/test",
                    dataType: 'json',
                    success: function (data) {
                        console.log('API Test Success:', data);
                        alert('API hoạt động bình thường!\nSố sản phẩm: ' + data.data.totalProducts + '\nSố hóa đơn: ' + data.data.totalInvoices);
                    },
                    error: function (xhr, status, error) {
                        console.error('API Test Failed:', xhr.responseText);
                        alert('API Test thất bại!\nStatus: ' + xhr.status + '\nError: ' + error);
                    }
                });
            }

            function renderBestsellerProducts(products) {
                const container = $('#bestsellerProducts');
                
                if (!products || products.length === 0) {
                    container.html('<div class="col-12 text-center"><p class="text-muted">Chưa có sản phẩm bán chạy gần đây.</p></div>');
                    return;
                }

                let html = '';
                products.forEach(function (product, index) {
                    // Build image URL
                    let imageUrl = "/image/default-laptop.jpg";
                    if (product.avatar && product.avatar.trim()) {
                        imageUrl = apiBase + "imageProducts/" + encodeURIComponent(product.avatar.trim());
                    }

                    // Format price
                    let price = 'Liên hệ';
                    if (product.sellingPrice != null && product.sellingPrice !== undefined) {
                        try {
                            price = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.sellingPrice);
                        } catch (e) {
                            price = product.sellingPrice.toString() + ' VND';
                        }
                    }

                    // Original price (strike-through) if applicable
                    let originalPriceHtml = '';
                    if (product.originalSellingPrice != null && product.originalSellingPrice !== undefined &&
                        product.sellingPrice != null && product.sellingPrice !== undefined &&
                        product.originalSellingPrice > product.sellingPrice) {
                        try {
                            const formattedOriginal = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.originalSellingPrice);
                            originalPriceHtml = `<span class="text-muted text-decoration-line-through me-2" style="font-size: 0.8em;">${formattedOriginal}</span>`;
                        } catch (e) {
                            originalPriceHtml = `<span class="text-muted text-decoration-line-through me-2" style="font-size: 0.8em;">${product.originalSellingPrice.toString()} VND</span>`;
                        }
                    }

                    const brandName = (product.brand && product.brand.brandName) ? product.brand.brandName : 'Laptop';
                    const productDetailUrl = '/Home/ProductDetail?id=' + encodeURIComponent(product.productId || '');
                    // const soldBadge = product.totalSold > 0 ? `<div class="position-absolute bg-danger text-white px-2 py-1 rounded" style="top: 10px; right: 10px; font-size: 0.8em;">Đã bán: ${product.totalSold}</div>` : '';

                    html += `
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                            <div class="rounded position-relative fruite-item">
                                <div class="fruite-img" style="cursor: pointer;" data-href="${productDetailUrl}">
                                    <img src="${imageUrl}" class="img-fluid w-100 rounded-top" alt="${product.productName || ''}" style="height: 200px; object-fit: cover;">
                                </div>
                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">${brandName}</div>
                                
                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                    <div class="text-center mb-2">
                                        <h4><a href="${productDetailUrl}" class="text-dark text-decoration-none">${product.productName || 'Chưa có tên'}</a></h4>
                                        <p class="text-muted mb-0">${product.productModel || ''}</p>
                                    </div>
                                    <div class="d-flex flex-column align-items-center">
                                        <div class="d-flex align-items-center flex-wrap gap-2 mb-3">
                                            ${originalPriceHtml}
                                            <span class="text-dark fs-5 fw-bold mb-0">${price}</span>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <a href="${productDetailUrl}" class="btn border border-secondary rounded-pill px-3 text-primary">
                                                <i class="fa fa-eye me-2 text-primary"></i> Xem chi tiết
                                            </a>
                                            <a href="#" class="btn border border-secondary rounded-pill px-3 text-primary toggle-fav" data-id="${product.productId || ''}" title="Thêm vào yêu thích">
                                                <i class="far fa-heart" id="heart-bestseller-${product.productId || ''}"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });

                container.html(html);

                // Make images clickable
                container.find('.fruite-img').off('click').on('click', function () {
                    const href = $(this).data('href');
                    if (href) window.location.href = href;
                });

                // Favorite buttons (placeholder functionality)
                container.find('.toggle-fav').off('click').on('click', function (e) {
                    e.preventDefault();
                    const pid = $(this).data('id');
                    const heartIcon = $(this).find('i');
                    
                    if (heartIcon.hasClass('fas')) {
                        heartIcon.removeClass('fas text-danger').addClass('far');
                        console.log('Bỏ yêu thích sản phẩm:', pid);
                    } else {
                        heartIcon.removeClass('far').addClass('fas text-danger');
                        console.log('Thêm yêu thích sản phẩm:', pid);
                    }
                });
            }

            // Load bestseller products when page loads
            loadBestsellerProducts();
        })();
    </script>

