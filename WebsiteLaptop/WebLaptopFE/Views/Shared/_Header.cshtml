                $('#modalProduct2Config').html(configOptions2);
            } else {
                $('#modalProduct2ConfigSelect').hide();
            }
            
            updateProductPriceInModal('product2', p2, configs2);
            $('#modalProduct2Link').attr('href', '/Home/ProductDetail?id=' + encodeURIComponent(p2.productId));
        } else {
            $('#modalProduct2Image').html('');
            $('#modalProduct2Name').text('');
            $('#modalProduct2ConfigSelect').hide();
            $('#modalProduct2Price').html('');
            $('#modalProduct2Link').attr('href', '#');
        }

        // Get selected configurations
        const selectedConfig1 = getSelectedConfig('product1', products[0]);
