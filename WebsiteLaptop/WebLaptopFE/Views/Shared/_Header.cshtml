            const p2 = products[1].product;
            const configs2 = products[1].configurations || [];
            const image2 = getBackendImageUrlForModal(p2.avatar);
            $('#modalProduct2Image').html(`<img src="${image2}" class="product-image img-fluid rounded" alt="${p2.productName || ''}">`);
            const productName2 = (p2.productName || 'Chưa có tên') + (p2.productModel ? ' | ' + p2.productModel : '');
            $('#modalProduct2Name').text(productName2);
            
            // Configuration dropdown for product 2
            if (configs2.length > 0) {
                $('#modalProduct2ConfigSelect').show();
                let configOptions2 = '';
