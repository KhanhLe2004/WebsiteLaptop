            { label: 'Bộ nhớ RAM', key: 'ram', p1: selectedConfig1?.ram || products[0]?.product?.ram, p2: selectedConfig2?.ram || products[1]?.product?.ram },
            { label: 'Ổ cứng', key: 'rom', p1: selectedConfig1?.rom || selectedConfig1?.storage || selectedConfig1?.disk || products[0]?.product?.rom || products[0]?.product?.storage, p2: selectedConfig2?.rom || selectedConfig2?.storage || selectedConfig2?.disk || products[1]?.product?.rom || products[1]?.product?.storage },
            { label: 'Card đồ họa', key: 'card', p1: selectedConfig1?.card || selectedConfig1?.gpu || products[0]?.product?.card || products[0]?.product?.gpu, p2: selectedConfig2?.card || selectedConfig2?.gpu || products[1]?.product?.card || products[1]?.product?.gpu },
            { label: 'Màn hình', key: 'screen', p1: products[0]?.product?.screen, p2: products[1]?.product?.screen },
            { label: 'Camera', key: 'camera', p1: products[0]?.product?.camera, p2: products[1]?.product?.camera },
            { label: 'Trọng lượng', key: 'weight', p1: products[0]?.product?.weight, p2: products[1]?.product?.weight, format: 'weight' },
            { label: 'Pin', key: 'pin', p1: products[0]?.product?.pin, p2: products[1]?.product?.pin },
            { label: 'Cổng kết nối', key: 'connect', p1: formatConnect(products[0]?.product?.connect), p2: formatConnect(products[1]?.product?.connect), format: 'html' },
            { label: 'Bảo hành', key: 'warranty', p1: products[0]?.product?.warrantyPeriod, p2: products[1]?.product?.warrantyPeriod, format: 'warranty' }
        ];

        let tableBody = '';
        specs.forEach(spec => {
            let p1Value = spec.p1 || 'N/A';
            let p2Value = spec.p2 || 'N/A';

            if (spec.format === 'currency') {
                p1Value = p1Value && p1Value !== 'N/A' ? formatCurrencyForModal(p1Value) : 'N/A';
                p2Value = p2Value && p2Value !== 'N/A' ? formatCurrencyForModal(p2Value) : 'N/A';
            } else if (spec.format === 'weight') {
                p1Value = p1Value && p1Value !== 'N/A' ? p1Value + ' kg' : 'N/A';
                p2Value = p2Value && p2Value !== 'N/A' ? p2Value + ' kg' : 'N/A';
            } else if (spec.format === 'warranty') {
                p1Value = p1Value && p1Value !== 'N/A' ? p1Value + ' tháng' : 'N/A';
                p2Value = p2Value && p2Value !== 'N/A' ? p2Value + ' tháng' : 'N/A';
            }

            // Use HTML format for connect field
            const useHtml = spec.format === 'html';
            const p1Display = useHtml ? p1Value : (p1Value || 'N/A');
            const p2Display = useHtml ? p2Value : (p2Value || 'N/A');

            tableBody += `
                <tr>
                    <td class="spec-label">${spec.label}</td>
                    <td>${useHtml ? p1Display : p1Value}</td>
                    <td>${useHtml ? p2Display : p2Value}</td>
                </tr>
            `;
        });

        $('#modalComparisonBody').html(tableBody);

        $('#compareModalLoading').hide();
        $('#compareModalEmpty').hide();
        $('#compareModalContent').show();
        $('#clearCompareBtn').show();
    }

    // Get selected configuration for a product
    function getSelectedConfig(productKey, productData) {
        if (!productData || !productData.configurations || productData.configurations.length === 0) return null;
        const selectedConfigId = compareModalSelectedConfigs[productKey];
        if (!selectedConfigId) {
            // Return first config as default
            return productData.configurations[0] || null;
        }
        return productData.configurations.find(c => (c.configurationId || 'config_' + productData.configurations.indexOf(c)) === selectedConfigId) || productData.configurations[0] || null;
    }

    // Get product price (base + config price)
    function getProductPrice(productData, selectedConfig) {
        if (!productData || !productData.product) return 0;
        const basePrice = productData.product.sellingPrice || 0;
        const configPrice = selectedConfig?.price || 0;
        return basePrice + configPrice;
    }

    // Get product original price (base + config price)
    function getProductOriginalPrice(productData, selectedConfig) {
        if (!productData || !productData.product) return 0;
        const basePrice = productData.product.originalSellingPrice || 0;
        const configPrice = selectedConfig?.price || 0;
        return basePrice + configPrice;
    }

    // Update product price display in modal
    function updateProductPriceInModal(productKey, product, configs) {
        const selectedConfigId = compareModalSelectedConfigs[productKey];
        let selectedConfig = null;
        if (selectedConfigId && configs) {
            selectedConfig = configs.find(c => (c.configurationId || 'config_' + configs.indexOf(c)) === selectedConfigId);
        }
        
        const basePrice = product.sellingPrice || 0;
        const baseOriginalPrice = product.originalSellingPrice || 0;
        const configPrice = selectedConfig?.price || 0;
        const totalPrice = basePrice + configPrice;
        const totalOriginalPrice = baseOriginalPrice + configPrice;
        
        let priceHtml = '';
        if (totalOriginalPrice > 0 && totalPrice > 0 && totalOriginalPrice > totalPrice) {
            priceHtml += `<span class="text-muted text-decoration-line-through me-2" style="font-size: 0.85em;">${formatCurrencyForModal(totalOriginalPrice)}</span>`;
        }
        priceHtml += `<span>${formatCurrencyForModal(totalPrice)}</span>`;
        
        $(`#modal${productKey.charAt(0).toUpperCase() + productKey.slice(1)}Price`).html(priceHtml);
    }

    // Update configuration selection
    function updateCompareModalConfig(productKey, configId) {
        if (configId) {
            compareModalSelectedConfigs[productKey] = configId;
        } else {
            delete compareModalSelectedConfigs[productKey];
        }
        saveSelectedConfigs();
        
        // Update price and comparison table
        if (compareModalProducts.length > 0) {
            const productIndex = productKey === 'product1' ? 0 : 1;
            if (compareModalProducts[productIndex]) {
                const product = compareModalProducts[productIndex].product;
                const configs = compareModalProducts[productIndex].configurations || [];
                updateProductPriceInModal(productKey, product, configs);
                
                // Refresh comparison table
                displayComparisonModal(compareModalProducts);
            }
        }
    }

    function openCompareModal() {
        const modalElement = document.getElementById('compareModal');
        if (modalElement) {
            const modal = new bootstrap.Modal(modalElement);
            modal.show();
            loadComparisonModal();
        }
    }

    // Make openCompareModal available globally
    window.openCompareModal = openCompareModal;

    // Reload comparison when modal is shown
    const compareModalElement = document.getElementById('compareModal');
    if (compareModalElement) {
        compareModalElement.addEventListener('show.bs.modal', function() {
            loadComparisonModal();
        });
    }

    // Product Search Functionality
    (function() {
        const searchInput = document.getElementById('productSearchInput');
        const searchBtn = document.getElementById('productSearchBtn');
        const searchResultsDropdown = document.getElementById('searchResultsDropdown');
        let searchTimeout = null;
        let currentSearchResults = [];

        if (!searchInput || !searchResultsDropdown) return;

        // Get API base URL
        let apiBase = 'http://localhost:5068';
        if (window.CART_API_BASE && window.CART_API_BASE.trim()) {
            apiBase = window.CART_API_BASE.trim();
        } else if (window.location && window.location.origin) {
            const origin = window.location.origin;
            if (origin.includes('localhost')) {
                apiBase = 'http://localhost:5068';
            } else {
                apiBase = origin;
            }
        }

        // Get product image URL
        function getProductImageUrl(avatar) {
            if (!avatar || !avatar.trim()) {
                return '/imageProducts/default-laptop.jpg';
            }
            return apiBase + '/imageProducts/' + encodeURIComponent(avatar.trim());
        }

        // Format currency
        function formatCurrency(amount) {
            if (!amount) return 'Liên hệ';
            try {
                return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
            } catch (e) {
                return amount.toString() + ' VND';
            }
        }

        // Search products
        async function searchProducts(keyword) {
            if (!keyword || keyword.trim().length < 2) {
                searchResultsDropdown.style.display = 'none';
                return;
            }

            try {
                const response = await fetch(`${apiBase}/api/ListProductAPI/search?keyword=${encodeURIComponent(keyword)}&limit=8`, {
                    credentials: 'same-origin'
                });

                if (!response.ok) {
                    searchResultsDropdown.style.display = 'none';
                    return;
                }

                const products = await response.json();
                currentSearchResults = products || [];

                if (currentSearchResults.length === 0) {
                    searchResultsDropdown.innerHTML = '<div class="search-result-item p-3 text-center text-muted">Không tìm thấy sản phẩm nào</div>';
                    searchResultsDropdown.style.display = 'block';
                    return;
                }

                // Build results HTML
                let resultsHtml = '';
                currentSearchResults.forEach(product => {
                    const productId = product.productId || product.ProductId || '';
                    const productName = product.productName || product.ProductName || 'N/A';
                    const productModel = product.productModel || product.ProductModel || '';
                    const avatar = product.avatar || product.Avatar || '';
                    const sellingPrice = product.sellingPrice || product.SellingPrice || 0;
                    const originalPrice = product.originalSellingPrice || product.OriginalSellingPrice || 0;
                    const brandName = product.brand?.brandName || product.Brand?.BrandName || '';

                    const imageUrl = getProductImageUrl(avatar);
                    const displayName = productModel ? `${productName} | ${productModel}` : productName;
                    const priceDisplay = sellingPrice > 0 ? formatCurrency(sellingPrice) : 'Liên hệ';
                    
                    let priceHtml = '';
                    if (originalPrice > sellingPrice && sellingPrice > 0) {
                        priceHtml = `<span class="text-muted text-decoration-line-through me-2" style="font-size: 0.85em;">${formatCurrency(originalPrice)}</span>`;
                    }
                    priceHtml += `<span class="text-primary fw-bold">${priceDisplay}</span>`;

                    resultsHtml += `
                        <a href="/Home/ProductDetail?id=${encodeURIComponent(productId)}" class="search-result-item">
                            <div class="d-flex align-items-center">
                                <img src="${imageUrl}" 
                                     alt="${productName}" 
                                     class="search-result-image me-3"
                                     onerror="this.onerror=null; this.src='/imageProducts/default-laptop.jpg';">
                                <div class="flex-grow-1 min-w-0">
                                    <div class="search-result-name fw-semibold">${displayName}</div>
                                    ${brandName ? `<div class="search-result-brand text-muted small">${brandName}</div>` : ''}
                                    <div class="search-result-price mt-1">${priceHtml}</div>
                                </div>
                            </div>
                        </a>
                    `;
                });

                searchResultsDropdown.innerHTML = resultsHtml;
                searchResultsDropdown.style.display = 'block';
            } catch (err) {
                searchResultsDropdown.style.display = 'none';
            }
        }

        // Handle input
        searchInput.addEventListener('input', function(e) {
            const keyword = e.target.value.trim();
            
            clearTimeout(searchTimeout);
            
            if (keyword.length < 2) {
                searchResultsDropdown.style.display = 'none';
                return;
            }

            searchTimeout = setTimeout(() => {
                searchProducts(keyword);
            }, 300);
        });

        // Handle search button click
        if (searchBtn) {
            searchBtn.addEventListener('click', function() {
                const keyword = searchInput.value.trim();
                if (keyword.length >= 1) {
                    window.location.href = `/Home/Shop?search=${encodeURIComponent(keyword)}`;
                }
            });
        }

        // Handle Enter key
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                const keyword = searchInput.value.trim();
                if (keyword.length >= 1) {
                    window.location.href = `/Home/Shop?search=${encodeURIComponent(keyword)}`;
                }
            }
        });

        // Hide dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!searchInput.contains(e.target) && !searchResultsDropdown.contains(e.target) && !searchBtn.contains(e.target)) {
                searchResultsDropdown.style.display = 'none';
            }
        });

        // Hide dropdown on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                searchResultsDropdown.style.display = 'none';
            }
        });
    })();
</script>

