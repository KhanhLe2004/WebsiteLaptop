<script>
    let compareModalUrl = "http://localhost:5068/";
    let compareModalProducts = []; // Store loaded products data
    let compareModalSelectedConfigs = {}; // Store selected configurations {product1: configId, product2: configId}
    
    // Get API base URL
    if (window.CART_API_BASE && window.CART_API_BASE.trim()) {
        compareModalUrl = window.CART_API_BASE.trim();
    } else if (window.location && window.location.origin) {
        const origin = window.location.origin;
        if (origin.includes('localhost')) {
            compareModalUrl = 'http://localhost:5068';
        } else {
            compareModalUrl = origin;
        }
    }

    // Load selected configurations from sessionStorage
    function loadSelectedConfigs() {
        try {
            const configsStr = sessionStorage.getItem('compareSelectedConfigs');
            compareModalSelectedConfigs = configsStr ? JSON.parse(configsStr) : {};
        } catch (e) {
            compareModalSelectedConfigs = {};
        }
    }

    // Save selected configurations to sessionStorage
    function saveSelectedConfigs() {
        sessionStorage.setItem('compareSelectedConfigs', JSON.stringify(compareModalSelectedConfigs));
    }

    function getBackendImageUrlForModal(fileName) {
        const defaultProductImage = "/imageProducts/default-laptop.jpg";
        if (!fileName || typeof fileName !== "string" || !fileName.trim()) {
            return defaultProductImage;
        }
        return compareModalUrl + "/imageProducts/" + encodeURIComponent(fileName.trim());
    }

    function formatCurrencyForModal(amount) {
        if (amount == null || amount === undefined) return 'Liên hệ';
        try {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        } catch (e) {
            return amount.toString() + ' VND';
        }
    }

    function getCompareListForModal() {
        try {
            const compareStr = sessionStorage.getItem('compareProducts');
            return compareStr ? JSON.parse(compareStr) : [];
        } catch (e) {
            return [];
        }
    }

    function saveCompareListForModal(products) {
        sessionStorage.setItem('compareProducts', JSON.stringify(products));
        if (typeof window.updateCompareBadge === 'function') {
            window.updateCompareBadge();
        }
    }

    function removeFromCompareModal(productKey) {
        const compareList = getCompareListForModal();
        if (productKey === 'product1' && compareList.length > 0) {
            compareList.shift();
            // Remove config for product1, shift product2 config to product1
            if (compareModalSelectedConfigs.product2) {
                compareModalSelectedConfigs.product1 = compareModalSelectedConfigs.product2;
                delete compareModalSelectedConfigs.product2;
            } else {
                delete compareModalSelectedConfigs.product1;
            }
        } else if (productKey === 'product2' && compareList.length > 1) {
            compareList.pop();
            delete compareModalSelectedConfigs.product2;
        }
        saveCompareListForModal(compareList);
        saveSelectedConfigs();
        loadComparisonModal();
    }

    function clearCompareModal() {
        if (confirm('Bạn có chắc chắn muốn xóa tất cả sản phẩm khỏi danh sách so sánh?')) {
            sessionStorage.removeItem('compareProducts');
            sessionStorage.removeItem('compareSelectedConfigs');
            compareModalSelectedConfigs = {};
            if (typeof window.updateCompareBadge === 'function') {
                window.updateCompareBadge();
            }
            loadComparisonModal();
        }
    }

    async function loadComparisonModal() {
        const compareList = getCompareListForModal();
        
        $('#compareModalLoading').show();
        $('#compareModalContent').hide();
        $('#compareModalEmpty').hide();
        $('#clearCompareBtn').hide();

        if (compareList.length === 0) {
            $('#compareModalLoading').hide();
            $('#compareModalEmpty').show();
            $('#compareModalContent').hide();
            return;
        }

        try {
            const products = [];
            
            // Load product details
            for (let i = 0; i < compareList.length && i < 2; i++) {
                const productId = compareList[i].id;
                try {
                    const response = await fetch(compareModalUrl + '/api/ListProductAPI/detail/' + encodeURIComponent(productId));
                    if (response.ok) {
                        const data = await response.json();
                        products.push(data);
                    }
                } catch (err) {
                    console.error('Error loading product:', productId, err);
                }
            }

            if (products.length === 0) {
                $('#compareModalLoading').hide();
                $('#compareModalEmpty').show();
                $('#compareModalContent').hide();
                return;
            }

            // Store products data globally
            compareModalProducts = products;
            
            // Load selected configurations
            loadSelectedConfigs();
            
            // Set default configurations (first config) if not selected
            if (products[0] && products[0].configurations && products[0].configurations.length > 0) {
                if (!compareModalSelectedConfigs.product1) {
                    const firstConfigId = products[0].configurations[0].configurationId || 'config_0';
                    compareModalSelectedConfigs.product1 = firstConfigId;
                }
            }
            if (products[1] && products[1].configurations && products[1].configurations.length > 0) {
                if (!compareModalSelectedConfigs.product2) {
                    const firstConfigId = products[1].configurations[0].configurationId || 'config_0';
                    compareModalSelectedConfigs.product2 = firstConfigId;
                }
            }
            saveSelectedConfigs();
            
            // Display products
            displayComparisonModal(products);

        } catch (error) {
            console.error('Error loading comparison:', error);
            $('#compareModalLoading').hide();
            $('#compareModalEmpty').show();
            $('#compareModalContent').hide();
        }
    }

    function displayComparisonModal(products) {
        // Hide product2 column if only one product
        if (products.length === 1) {
            $('#modalProduct2Column').hide();
        } else {
            $('#modalProduct2Column').show();
        }

        // Product 1
        if (products[0]) {
            const p1 = products[0].product;
            const configs1 = products[0].configurations || [];
            const image1 = getBackendImageUrlForModal(p1.avatar);
            $('#modalProduct1Image').html(`<img src="${image1}" class="product-image img-fluid rounded" alt="${p1.productName || ''}">`);
            const productName1 = (p1.productName || 'Chưa có tên') + (p1.productModel ? ' | ' + p1.productModel : '');
            $('#modalProduct1Name').text(productName1);
            
            // Configuration dropdown for product 1
            if (configs1.length > 0) {
                $('#modalProduct1ConfigSelect').show();
                let configOptions1 = '';
                configs1.forEach(function(config, index) {
                    const configId = config.configurationId || 'config_' + index;
                    const configText = [config.cpu, config.ram, config.rom || config.storage || config.disk, config.card || config.gpu]
                        .filter(Boolean)
                        .join(' / ') || 'Cấu hình ' + (index + 1);
                    const selected = compareModalSelectedConfigs.product1 === configId ? 'selected' : '';
                    configOptions1 += `<option value="${configId}" ${selected}>${configText}</option>`;
                });
                $('#modalProduct1Config').html(configOptions1);
            } else {
                $('#modalProduct1ConfigSelect').hide();
            }
            
            updateProductPriceInModal('product1', p1, configs1);
            $('#modalProduct1Link').attr('href', '/Home/ProductDetail?id=' + encodeURIComponent(p1.productId));
        }

        // Product 2
