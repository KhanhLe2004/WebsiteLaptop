@using System.Text.Json
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    var authApiBase = Environment.GetEnvironmentVariable("AUTH_API_BASE") ?? "http://localhost:5068";
    var authApiBaseJson = JsonSerializer.Serialize(authApiBase);
    // Lấy Google Client ID từ config
    var googleClientId = Configuration["GoogleOAuth:ClientId"] 
        ?? Configuration.GetValue<string>("GoogleOAuth:ClientId") 
        ?? "959838467774-86s30prd14e27emt61neavb1m9r3uu5j.apps.googleusercontent.com"; // Fallback
    var googleClientIdJson = JsonSerializer.Serialize(googleClientId);
    
    // Lấy Facebook App ID từ config
    var facebookAppId = Configuration["FacebookOAuth:AppId"] 
        ?? Configuration.GetValue<string>("FacebookOAuth:AppId") 
        ?? "1188282026519584"; // Fallback
    var facebookAppIdJson = JsonSerializer.Serialize(facebookAppId);
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>TenTech - Laptop chính hãng</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet"> 

    <!-- Icon Font Stylesheet -->
    <link rel="shortcut icon" href="~/LaptopFe/img/TenTech-icon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link href="../LaptopFe/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="../LaptopFe/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../LaptopFe/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="../LaptopFe/css/style.css" rel="stylesheet">
    <link href="../LaptopFe/css/access.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    <div>
        @RenderBody()
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../LaptopFe/lib/easing/easing.min.js"></script>
    <script src="../LaptopFe/lib/waypoints/waypoints.min.js"></script>
    <script src="../LaptopFe/lib/lightbox/js/lightbox.min.js"></script>
    <script src="../LaptopFe/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="../LaptopFe/js/main.js"></script>
    <script>
        window.AUTH_API_BASE = window.AUTH_API_BASE || @Html.Raw(authApiBaseJson);
        // Đảm bảo Google Client ID được set
        var googleClientIdValue = @Html.Raw(googleClientIdJson);
        if (!window.GOOGLE_CLIENT_ID && googleClientIdValue) {
            window.GOOGLE_CLIENT_ID = googleClientIdValue;
        }
        // Fallback: Nếu vẫn không có, sử dụng giá trị từ backend appsettings
        if (!window.GOOGLE_CLIENT_ID || window.GOOGLE_CLIENT_ID === '') {
            window.GOOGLE_CLIENT_ID = '959838467774-86s30prd14e27emt61neavb1m9r3uu5j.apps.googleusercontent.com';
        }
        console.log('Google Client ID:', window.GOOGLE_CLIENT_ID);
        console.log('Google Client ID from config:', @Html.Raw(googleClientIdJson));
        
        // Facebook App ID
        var facebookAppIdValue = @Html.Raw(facebookAppIdJson);
        if (!window.FACEBOOK_APP_ID && facebookAppIdValue) {
            window.FACEBOOK_APP_ID = facebookAppIdValue;
        }
        // Fallback: Nếu vẫn không có, sử dụng giá trị từ backend appsettings
        if (!window.FACEBOOK_APP_ID || window.FACEBOOK_APP_ID === '') {
            window.FACEBOOK_APP_ID = '1188282026519584';
        }
        console.log('Facebook App ID:', window.FACEBOOK_APP_ID);
        console.log('Facebook App ID from config:', @Html.Raw(facebookAppIdJson));
    </script>
    <!-- Google Sign-In - Load trước access.js -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <!-- Facebook SDK -->
    <div id="fb-root"></div>
    <script>
        window.fbAsyncInit = function() {
            // Đảm bảo App ID đã được set
            var appId = window.FACEBOOK_APP_ID || '1188282026519584';
            if (appId && typeof FB !== 'undefined') {
                FB.init({
                    appId: appId,
                    cookie: true,
                    xfbml: true,
                    version: 'v18.0'
                });
                console.log('Facebook SDK initialized with App ID:', appId);
            } else {
                console.warn('Facebook SDK chưa sẵn sàng hoặc App ID chưa được set');
            }
        };
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/vi_VN/sdk.js";
            js.async = true; js.defer = true;
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>


